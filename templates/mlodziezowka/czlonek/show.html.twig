                {% endif %}
                <div class="d-flex flex-wrap gap-2 mt-3">
                    {% set statusClass = czlonek.status == 'aktywny' ? 'active' : (czlonek.status == 'nieaktywny' ? 'inactive' : 'suspended') %}
