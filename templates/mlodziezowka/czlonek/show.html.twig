                    location.reload();
                } else {
                    alert('B≈ÇƒÖd podczas zapisywania');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('WystƒÖpi≈Ç b≈ÇƒÖd');
            });
            
            // Close modal
            bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
        }
