{% extends 'base.html.twig' %}

{% block title %}Edytuj fakturę {{ faktura.numerFaktury }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="fas fa-edit me-2"></i>Edytuj fakturę {{ faktura.numerFaktury }}
                </h1>
                <div>
                    <a href="{{ path('faktura_show', {id: faktura.id}) }}" class="btn btn-outline-primary me-2">
                        <i class="fas fa-eye me-2"></i>Podgląd
                    </a>
                    <a href="{{ path('faktura_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Powrót do listy
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-file-invoice me-2"></i>Dane faktury
                            </h5>
                        </div>
                        <div class="card-body">
                            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_row(form.numerFaktury) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_row(form.kwota) }}
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.numerKonta) }}
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_row(form.dataPlatnosci) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_row(form.pilnosc) }}
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.kategoria) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.celPlatnosci) }}
                            </div>

                            <hr class="my-4">
                            <h6 class="text-muted mb-3">Informacje o dostawcy (opcjonalnie)</h6>
                            
                            <div class="mb-3">
                                {{ form_row(form.nazwaDostaway) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.adresDostaway) }}
                            </div>

                            <div class="d-flex justify-content-end gap-2">
                                <a href="{{ path('faktura_show', {id: faktura.id}) }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-2"></i>Anuluj
                                </a>
                                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}, 'label': 'Zapisz zmiany'}) }}
                            </div>
                            
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-info-circle me-2"></i>Status faktury
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <strong>Uwaga!</strong><br>
                                <small>
                                    Możesz edytować fakturę tylko do momentu jej zaakceptowania przez skarbnika partii.
                                </small>
                            </div>

                            <table class="table table-borderless table-sm">
                                <tr>
                                    <td><strong>Status:</strong></td>
                                    <td>
                                        {% set statusClass = 'secondary' %}
                                        {% if faktura.isWprowadzone %}
                                            {% set statusClass = 'warning' %}
                                        {% endif %}
                                        <span class="badge bg-{{ statusClass }}">{{ faktura.statusLabel }}</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Utworzono:</strong></td>
                                    <td>{{ faktura.dataUtworzenia|date('d.m.Y H:i') }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Okręg:</strong></td>
                                    <td>{{ faktura.okreg.nazwa }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-lightbulb me-2"></i>Wskazówki
                            </h6>
                        </div>
                        <div class="card-body">
                            <ul class="small mb-0">
                                <li>Sprawdź poprawność wprowadzonych danych</li>
                                <li>Upewnij się, że numer konta jest prawidłowy</li>
                                <li>Data płatności powinna uwzględniać czas na akceptację</li>
                                <li>Szczegółowo opisz cel płatności</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Format numeru konta
    const numerKontaInput = document.querySelector('input[name="faktura[numerKonta]"]');
    if (numerKontaInput) {
        numerKontaInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s/g, '');
            if (value.length > 0) {
                // Format IBAN - dodaj spacje co 4 znaki
                value = value.match(/.{1,4}/g).join(' ');
                e.target.value = value;
            }
        });
    }

    // Walidacja formularza
    const form = document.querySelector('.needs-validation');
    if (form) {
        form.addEventListener('submit', function(event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated');
        });
    }
});
</script>
{% endblock %}