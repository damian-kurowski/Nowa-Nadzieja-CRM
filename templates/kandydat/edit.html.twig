            </div>
            
            <div class="form-row single">
                <div class="form-group-enhanced">
                    <label class="form-label-enhanced">
                        {{ form_label(form.socialMedia, 'Profile w mediach społecznościowych', {'label_attr': {'class': ''}}) }}
                    </label>
                    {{ form_widget(form.socialMedia, {'attr': {'class': 'form-control-enhanced form-textarea-enhanced', 'rows': 2, 'placeholder': 'Facebook, Twitter, LinkedIn itp. - podaj linki do profili'}}) }}
