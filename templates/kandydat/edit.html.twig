                <div class="form-group-enhanced">
                    <label class="form-label-enhanced">
                        {{ form_label(form.zdjecie, null, {'label_attr': {'class': ''}}) }}
                    </label>
                    <div class="file-upload-area" onclick="document.getElementById('{{ form.zdjecie.vars.id }}').click()">
                        <div class="file-upload-icon">
                            <i class="fas fa-camera"></i>
                        </div>
                        <div class="file-upload-text">Kliknij aby wybrać zdjęcie</div>
                        <div class="file-upload-hint">PNG, JPG do 2MB</div>
                    </div>
                    {{ form_widget(form.zdjecie, {'attr': {'class': 'form-control-enhanced', 'style': 'display: none'}}) }}
                    {{ form_errors(form.zdjecie, {'attr': {'class': 'form-error'}}) }}
                    {% if kandydat.zdjecie %}
                        <div class="form-help">
                            Aktualne zdjęcie: <strong>{{ kandydat.zdjecie }}</strong>
                        </div>
                    {% endif %}
                </div>
                
                <div class="form-group-enhanced">
                    <label class="form-label-enhanced">
                        {{ form_label(form.cv, 'CV kandydata', {'label_attr': {'class': ''}}) }}
                    </label>
                    <div class="file-upload-area" onclick="document.getElementById('{{ form.cv.vars.id }}').click()">
                        <div class="file-upload-icon">
                            <i class="fas fa-file-pdf"></i>
                        </div>
                        <div class="file-upload-text">Kliknij aby wybrać CV</div>
                        <div class="file-upload-hint">PDF, DOC do 5MB</div>
                    </div>
                    {{ form_widget(form.cv, {'attr': {'class': 'form-control-enhanced', 'style': 'display: none'}}) }}
                    {{ form_errors(form.cv, {'attr': {'class': 'form-error'}}) }}
                    {% if kandydat.cv %}
                        <div class="form-help">
                            Aktualne CV: <strong>{{ kandydat.cv }}</strong>
                        </div>
                    {% endif %}
                </div>
            </div>
            
            <div class="form-row single">
                <div class="form-group-enhanced">
                    <label class="form-label-enhanced">
                        {{ form_label(form.dodatkoweInformacje, 'Dodatkowe informacje', {'label_attr': {'class': ''}}) }}
                    </label>
                    {{ form_widget(form.dodatkoweInformacje, {'attr': {'class': 'form-control-enhanced form-textarea-enhanced', 'rows': 3, 'placeholder': 'Inne istotne informacje o kandydacie'}}) }}
                    {{ form_errors(form.dodatkoweInformacje, {'attr': {'class': 'form-error'}}) }}
                </div>
            </div>
            
            <div class="form-row single">
