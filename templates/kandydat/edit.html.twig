                        {{ form_label(form.informacjeOmnie, 'Motywacja do wstąpienia do partii', {'label_attr': {'class': ''}}) }}
                    </label>
                    {{ form_widget(form.informacjeOmnie, {'attr': {'class': 'form-control-enhanced form-textarea-enhanced', 'rows': 4, 'placeholder': 'Dlaczego chcesz wstąpić do naszej partii? Jakie masz doświadczenie polityczne lub społeczne?'}}) }}
