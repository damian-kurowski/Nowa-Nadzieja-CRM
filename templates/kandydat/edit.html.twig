                        {{ form_label(form.telefon, null, {'label_attr': {'class': ''}}) }}
                    </label>
                    {{ form_widget(form.telefon, {'attr': {'class': 'form-control-enhanced'}}) }}
                    {{ form_errors(form.telefon, {'attr': {'class': 'form-error'}}) }}
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group-enhanced">
                    <label class="form-label-enhanced">
                        {{ form_label(form.okreg, null, {'label_attr': {'class': ''}}) }}
                    </label>
                    {{ form_widget(form.okreg, {'attr': {'class': 'form-select-enhanced'}}) }}
                    {{ form_errors(form.okreg, {'attr': {'class': 'form-error'}}) }}
                </div>
                
                <div class="form-group-enhanced">
                    <label class="form-label-enhanced">
                        {{ form_label(form.oddzial, null, {'label_attr': {'class': ''}}) }}
                    </label>
                    {{ form_widget(form.oddzial, {'attr': {'class': 'form-select-enhanced'}}) }}
                    {{ form_errors(form.oddzial, {'attr': {'class': 'form-error'}}) }}
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group-enhanced">
                    <label class="form-label-enhanced">
                        {{ form_label(form.status, null, {'label_attr': {'class': ''}}) }}
                    </label>
                    {{ form_widget(form.status, {'attr': {'class': 'form-select-enhanced'}}) }}
                    {{ form_errors(form.status, {'attr': {'class': 'form-error'}}) }}
                </div>
            </div>
            
            <div class="form-row single">
                <div class="form-group-enhanced">
                    <label class="form-label-enhanced">
                        {{ form_label(form.adresZamieszkania, null, {'label_attr': {'class': ''}}) }}
                    </label>
                    {{ form_widget(form.adresZamieszkania, {'attr': {'class': 'form-control-enhanced form-textarea-enhanced', 'rows': 3}}) }}
                    {{ form_errors(form.adresZamieszkania, {'attr': {'class': 'form-error'}}) }}
                </div>
            </div>
        </div>

        <!-- Step 3: Candidacy Details -->
        <div class="form-section" id="step3">
            <div class="section-header">
                <div class="section-icon candidacy">
                    <i class="fas fa-user-graduate"></i>
                </div>
                <h3 class="section-title">Informacje o kandydaturze</h3>
            </div>
            
            <div class="form-row single">
                <div class="form-group-enhanced">
                    <label class="form-label-enhanced">
                        {{ form_label(form.zatrudnienieSpolki, 'Obecne zatrudnienie/działalność', {'label_attr': {'class': ''}}) }}
                    </label>
                    {{ form_widget(form.zatrudnienieSpolki, {'attr': {'class': 'form-control-enhanced form-textarea-enhanced', 'rows': 3, 'placeholder': 'Opisz obecne zatrudnienie lub działalność zawodową'}}) }}
                    {{ form_errors(form.zatrudnienieSpolki, {'attr': {'class': 'form-error'}}) }}
                </div>
            </div>
            
            <div class="form-row single">
                <div class="form-group-enhanced">
