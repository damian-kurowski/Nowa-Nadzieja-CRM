                            <div class="candidate-header">
                                <h3 class="candidate-name">{{ kandydat.fullName }}</h3>
                                <span class="candidate-role">Kandydat</span>
                            </div>
                            
                            <div class="candidate-details">
                                <div class="detail-item">
                                    <i class="fas fa-envelope"></i>
                                    <span class="detail-value">{{ kandydat.email }}</span>
                                </div>
                                
                                {% if kandydat.telefon %}
                                    <div class="detail-item">
                                        <i class="fas fa-phone"></i>
                                        <span class="detail-value">{{ kandydat.telefon }}</span>
                                    </div>
                                {% endif %}
                                
                                <div class="detail-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span class="detail-value">{{ kandydat.okreg ? kandydat.okreg.nazwa : 'Brak okręgu' }}</span>
                                </div>
                                
                                <div class="detail-item">
                                    <i class="fas fa-building"></i>
                                    <span class="detail-value">{{ kandydat.oddzial ? kandydat.oddzial.nazwa : 'Brak oddziału' }}</span>
                                </div>
                                
                                {% if kandydat.dataZlozeniaDeklaracji %}
                                    <div class="detail-item">
                                        <i class="fas fa-calendar"></i>
                                        <span class="detail-value">Deklaracja {{ kandydat.dataZlozeniaDeklaracji|date('d.m.Y') }}</span>
                                    </div>
                                {% else %}
                                    <div class="detail-item">
                                        <i class="fas fa-calendar"></i>
                                        <span class="detail-value">Rejestracja {{ kandydat.dataRejestracji|date('d.m.Y') }}</span>
                                    </div>
                                {% endif %}
                                
                                {% if kandydat.drugieImie %}
                                    <div class="detail-item">
                                        <i class="fas fa-user"></i>
                                        <span class="detail-value">{{ kandydat.drugieImie }}</span>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        
                        <!-- Progress Section -->
                        <div class="candidate-progress-section">
                            <div class="progress-info">
                                <div class="progress-label">Postęp rekrutacji</div>
                                <div class="progress-percentage">{{ kandydat.postepKandydata ?? 0 }}%</div>
                            </div>
                            <div class="progress-bar-container">
                                {% set progressValue = kandydat.postepKandydata ?? 0 %}
                                {% set progressClass = progressValue >= 80 ? 'success' : (progressValue >= 50 ? 'warning' : 'info') %}
                                <div class="progress-bar-wrapper">
                                    <div class="progress-bar-enhanced {{ progressClass }}" style="width: {{ progressValue }}%"></div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Status and Tags -->
                        <div class="candidate-status-tags">
                            {% if kandydat.status == 'aktywny' %}
                                <div class="status-badge active">
                                    <span class="status-dot"></span>
                                    Aktywny
                                </div>
                            {% elseif kandydat.status == 'odrzucony' %}
                                <div class="status-badge rejected">
                                    <span class="status-dot"></span>
                                    Odrzucony
                                </div>
                            {% else %}
                                <div class="status-badge pending">
                                    <span class="status-dot"></span>
                                    {{ kandydat.status|title }}
                                </div>
                            {% endif %}
                            
                            <div class="candidate-tags">
                                {# Status składek dla kandydatów #}
                                {% set paymentStatus = paymentStatuses[kandydat.id] ?? null %}
                                {% if paymentStatus %}
                                    {% if paymentStatus.status in ['candidate_ready', 'future_member_prepaid', 'paid', 'current'] %}
                                        <div class="payment-tag paid">
                                            <i class="fas fa-check"></i>
                                            Opłacona
                                        </div>
                                    {% else %}
                                        <div class="payment-tag unpaid">
                                            <i class="fas fa-exclamation-triangle"></i>
                                            {% if paymentStatus.status == 'candidate_insufficient' %}Wymagana zaliczka{% else %}Nieopłacona{% endif %}
                                        </div>
                                    {% endif %}
                                {% else %}
                                    {# Fallback do starej logiki #}
                                    {% if kandydat.skladkaOplacona %}
                                        <div class="payment-tag paid">
                                            <i class="fas fa-check"></i>
                                            Opłacona
                                        </div>
                                    {% else %}
                                        <div class="payment-tag unpaid">
                                            <i class="fas fa-exclamation-triangle"></i>
                                            Nieopłacona
