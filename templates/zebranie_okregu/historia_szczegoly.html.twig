{% extends 'base.html.twig' %}

{% block title %}Szczegóły Zebrania Okręgu{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="card mb-4 border-0 shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h3 mb-2">
                                <i class="fas fa-users me-2"></i>
                                Szczegóły Zebrania Okręgu
                            </h1>
                            <p class="mb-0 opacity-75">
                                {{ zebranie.okreg.nazwa }} - {{ zebranie.dataZebrania|date('d.m.Y H:i') }}
                            </p>
                        </div>
                        <div class="text-end">
                            <span class="badge bg-light text-dark px-3 py-2 fs-6">
                                {% if zebranie.status == constant('App\\Entity\\ZebranieOkregu::STATUS_ZAKONCZONE') %}
                                    <i class="fas fa-check-circle me-1"></i>Zakończone
                                {% else %}
                                    <i class="fas fa-clock me-1"></i>W trakcie
                                {% endif %}
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Meeting Status Progress -->
            {% if zebranie.status != constant('App\\Entity\\ZebranieOkregu::STATUS_ZAKONCZONE') %}
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="fas fa-chart-line me-2 text-primary"></i>
                        Postęp zebrania
                    </h5>
                    <div class="progress mb-2" style="height: 8px;">
                        <div class="progress-bar bg-primary" 
                             style="width: {{ (zebranie.getCurrentStepNumber() / 7 * 100)|round }}%"></div>
                    </div>
                    <small class="text-muted">
                        Krok {{ zebranie.getCurrentStepNumber() }} z 7: {{ zebranie.getNextStepDescription() }}
                    </small>
                </div>
            </div>
            {% endif %}

            <div class="row">
                <!-- Meeting Participants -->
                <div class="col-lg-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header bg-transparent border-0 pb-0">
                            <h5 class="card-title">
                                <i class="fas fa-user-friends me-2 text-primary"></i>
                                Uczestnicy zebrania
                            </h5>
                        </div>
                        <div class="card-body">
                            <!-- Observer -->
                            <div class="participant-item mb-3 p-3 rounded" style="background-color: var(--bs-light);">
                                <div class="d-flex align-items-center">
                                    <div class="participant-avatar me-3">
                                        <div class="rounded-circle d-flex align-items-center justify-content-center" 
                                             style="width: 40px; height: 40px; background: linear-gradient(45deg, #667eea, #764ba2);">
                                            <i class="fas fa-eye text-white"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">
                                            {% if zebranie.obserwator %}
                                                {{ zebranie.obserwator.imie }} {{ zebranie.obserwator.nazwisko }}
                                            {% else %}
                                                <span class="text-muted">Nie wyznaczono</span>
                                            {% endif %}
                                        </h6>
                                        <small class="text-muted">Obserwator</small>
                                        {% if zebranie.obserwatorZaakceptowal %}
                                            <span class="badge bg-success ms-2">
                                                <i class="fas fa-check me-1"></i>Zaakceptował
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            <!-- Chairman -->
                            <div class="participant-item mb-3 p-3 rounded" style="background-color: var(--bs-light);">
                                <div class="d-flex align-items-center">
                                    <div class="participant-avatar me-3">
                                        <div class="rounded-circle d-flex align-items-center justify-content-center" 
                                             style="width: 40px; height: 40px; background: linear-gradient(45deg, #f093fb, #f5576c);">
                                            <i class="fas fa-gavel text-white"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">
                                            {% if zebranie.prowadzacy %}
                                                {{ zebranie.prowadzacy.imie }} {{ zebranie.prowadzacy.nazwisko }}
                                            {% else %}
                                                <span class="text-muted">Nie wyznaczono</span>
                                            {% endif %}
                                        </h6>
                                        <small class="text-muted">Prowadzący Zebranie</small>
                                        {% if zebranie.prowadzacyZaakceptowal %}
                                            <span class="badge bg-success ms-2">
                                                <i class="fas fa-check me-1"></i>Zaakceptował
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            <!-- Secretary -->
                            <div class="participant-item mb-3 p-3 rounded" style="background-color: var(--bs-light);">
                                <div class="d-flex align-items-center">
                                    <div class="participant-avatar me-3">
                                        <div class="rounded-circle d-flex align-items-center justify-content-center" 
                                             style="width: 40px; height: 40px; background: linear-gradient(45deg, #4facfe, #00f2fe);">
                                            <i class="fas fa-pen text-white"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">
                                            {% if zebranie.protokolant %}
                                                {{ zebranie.protokolant.imie }} {{ zebranie.protokolant.nazwisko }}
                                            {% else %}
                                                <span class="text-muted">Nie wyznaczono</span>
                                            {% endif %}
                                        </h6>
                                        <small class="text-muted">Protokolant Zebrania</small>
                                        {% if zebranie.protokolantZaakceptowal %}
                                            <span class="badge bg-success ms-2">
                                                <i class="fas fa-check me-1"></i>Zaakceptował
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Election Results -->
                <div class="col-lg-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-header bg-transparent border-0 pb-0">
                            <h5 class="card-title">
                                <i class="fas fa-crown me-2 text-warning"></i>
                                Wyniki wyborów
                            </h5>
                        </div>
                        <div class="card-body">
                            <!-- Selected President -->
                            <div class="election-result mb-3 p-3 rounded" style="background-color: var(--bs-light);">
                                <div class="d-flex align-items-center">
                                    <div class="result-icon me-3">
                                        <div class="rounded-circle d-flex align-items-center justify-content-center" 
                                             style="width: 40px; height: 40px; background: linear-gradient(45deg, #ffd700, #ffb347);">
                                            <i class="fas fa-star text-white"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">Prezes Okręgu</h6>
                                        {% if zebranie.wybranyPrezes %}
                                            <p class="mb-0 text-primary fw-medium">
                                                {{ zebranie.wybranyPrezes.imie }} {{ zebranie.wybranyPrezes.nazwisko }}
                                            </p>
                                        {% else %}
                                            <p class="mb-0 text-muted">Nie wybrano</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            <!-- Selected Vice Presidents -->
                            <div class="election-result p-3 rounded" style="background-color: var(--bs-light);">
                                <div class="d-flex align-items-start">
                                    <div class="result-icon me-3">
                                        <div class="rounded-circle d-flex align-items-center justify-content-center" 
                                             style="width: 40px; height: 40px; background: linear-gradient(45deg, #c0c0c0, #a8a8a8);">
                                            <i class="fas fa-medal text-white"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-2">Wiceprezesi Okręgu</h6>
                                        {% if zebranie.wyborniWiceprezesi|length > 0 %}
                                            {% for wiceprezes in zebranie.wyborniWiceprezesi %}
                                                <p class="mb-1 text-primary fw-medium">
                                                    <i class="fas fa-chevron-right me-2 text-muted"></i>
                                                    {{ wiceprezes.imie }} {{ wiceprezes.nazwisko }}
                                                </p>
                                            {% endfor %}
                                        {% else %}
                                            <p class="mb-0 text-muted">Nie wybrano</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Generated Documents -->
            {% if zebranie.status == constant('App\\Entity\\ZebranieOkregu::STATUS_ZAKONCZONE') %}
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 pb-0">
                    <h5 class="card-title">
                        <i class="fas fa-file-alt me-2 text-info"></i>
                        Wygenerowane dokumenty
                    </h5>
                </div>
                <div class="card-body">
                    {% if zebranie.dokumenty|length > 0 %}
                        <div class="row">
                            {% for dokument in zebranie.dokumenty %}
                            <div class="col-md-6 mb-3">
                                <div class="document-item p-3 rounded border h-100" style="border-color: var(--bs-border-color) !important;">
                                    <div class="d-flex align-items-center">
                                        <div class="document-icon me-3">
                                            <i class="fas fa-file-pdf text-danger" style="font-size: 1.5rem;"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">{{ dokument.tytul }}</h6>
                                            <small class="text-muted">
                                                Utworzono: {{ dokument.dataUtworzenia|date('d.m.Y H:i') }}
                                            </small>
                                        </div>
                                        <div class="document-actions">
                                            <a href="{{ path('dokument_show', {id: dokument.id}) }}" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye me-1"></i>Zobacz
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-file-alt text-muted" style="font-size: 3rem; opacity: 0.3;"></i>
                            <p class="text-muted mt-3 mb-0">Brak wygenerowanych dokumentów</p>
                        </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}

            <!-- Actions -->
            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('zebranie_okregu_historia', {id: zebranie.okreg.id}) }}" 
                   class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Powrót do historii
                </a>
                
                {% if zebranie.status != constant('App\\Entity\\ZebranieOkregu::STATUS_ZAKONCZONE') %}
                <a href="{{ path('zebranie_okregu_show', {id: zebranie.id}) }}" 
                   class="btn btn-primary">
                    <i class="fas fa-play me-2"></i>Kontynuuj zebranie
                </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<style>
:root {
    --bs-light: #f8f9fa;
    --bs-border-color: #dee2e6;
}

.card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

.card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 25px rgba(0,0,0,0.1) !important;
}

.participant-item,
.election-result,
.document-item {
    transition: background-color 0.2s ease-in-out;
}

.participant-item:hover,
.election-result:hover,
.document-item:hover {
    background-color: var(--bs-secondary-bg, #e9ecef) !important;
}

.progress {
    border-radius: 10px;
}

.progress-bar {
    border-radius: 10px;
    transition: width 0.3s ease;
}

.badge {
    font-weight: 500;
}

@media (prefers-color-scheme: dark) {
    :root {
        --bs-light: #212529;
        --bs-border-color: #495057;
    }
    
    .card {
        background-color: #1a1d29;
        border-color: #495057;
    }
    
    .participant-item,
    .election-result,
    .document-item {
        background-color: #212529 !important;
    }
    
    .participant-item:hover,
    .election-result:hover,
    .document-item:hover {
        background-color: #2c3034 !important;
    }
}
</style>
{% endblock %}