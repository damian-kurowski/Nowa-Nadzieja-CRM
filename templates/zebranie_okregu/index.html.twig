{% extends 'base.html.twig' %}

{% block title %}Zebrania Członków Okręgu{% endblock %}

{% block body %}
<div class="premium-container">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-content">
            <div class="hero-text">
                <div class="hero-badge">
                    <i class="fas fa-users-cog"></i>
                    <span>Zarządzanie Strukturami</span>
                </div>
                <h1 class="hero-title">Zebrania Członków Okręgu</h1>
                <p class="hero-description">Profesjonalne zarządzanie zebraniami i wyborem zarządów okręgów partii</p>
            </div>
            {% if is_granted('ROLE_SEKRETARZ_PARTII') %}
                <div class="hero-action">
                    <a href="{{ path('zebranie_okregu_new') }}" class="btn-premium">
                        <span class="btn-icon">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="btn-text">Nowe Zebranie</span>
                        <div class="btn-shine"></div>
                    </a>
                </div>
            {% endif %}
        </div>
        <div class="hero-decoration">
            <div class="decoration-circle circle-1"></div>
            <div class="decoration-circle circle-2"></div>
            <div class="decoration-circle circle-3"></div>
        </div>
    </div>

    <!-- Statistics Dashboard -->
    <div class="stats-dashboard">
        <div class="stats-grid">
            <div class="stat-card stat-primary">
                <div class="stat-glow"></div>
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <div class="stat-number">{{ stats.total }}</div>
                    <div class="stat-label">Wszystkie</div>
                </div>
            </div>

            <div class="stat-card stat-success">
                <div class="stat-glow"></div>
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-number">{{ stats.completed }}</div>
                    <div class="stat-label">Zakończone</div>
                </div>
            </div>

            <div class="stat-card stat-warning">
                <div class="stat-glow"></div>
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-hourglass-half"></i>
                    </div>
                    <div class="stat-number">{{ stats.active }}</div>
                    <div class="stat-label">Aktywne</div>
                </div>
            </div>

            <div class="stat-card stat-danger">
                <div class="stat-glow"></div>
                <div class="stat-content">
                    <div class="stat-icon">
                        <i class="fas fa-times-circle"></i>
                    </div>
                    <div class="stat-number">{{ stats.cancelled }}</div>
                    <div class="stat-label">Anulowane</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Meetings Section -->
    {% if zebrania|length > 0 %}
        <div class="meetings-section">
            <div class="section-header">
                <h2 class="section-title">Aktywne Zebrania</h2>
                <div class="section-divider"></div>
            </div>
            
            <div class="meetings-grid">
                {% for zebranie in zebrania %}
                    <div class="meeting-card">
                        <div class="card-glow"></div>
                        <div class="card-header">
                            <div class="meeting-status">
                                <div class="status-dot status-{{ zebranie.status }}"></div>
                                <span class="status-text">{{ zebranie.statusDisplayName }}</span>
                                {% if zebranie.status != 'zakonczone' and zebranie.status != 'anulowane' %}
                                    <div class="step-indicator">
                                        <span class="current-step">{{ zebranie.getCurrentStepNumber() }}</span>
                                        <span class="step-separator">/</span>
                                        <span class="total-steps">7</span>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="meeting-badge">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                        </div>

                        <div class="card-body">
                            <h3 class="meeting-title">{{ zebranie.okreg.nazwa }}</h3>
                            <div class="meeting-meta">
                                <div class="meta-item">
                                    <i class="fas fa-calendar-plus"></i>
                                    <span>{{ zebranie.dataUtworzenia|date('d.m.Y H:i') }}</span>
                                </div>
                                <div class="meta-item">
                                    <i class="fas fa-user-shield"></i>
                                    <span>{{ zebranie.utworzonyPrzez.imie }} {{ zebranie.utworzonyPrzez.nazwisko }}</span>
                                </div>
                            </div>

                            <!-- Participants Timeline -->
                            <div class="participants-timeline">
                                <div class="timeline-item completed">
                                    <div class="timeline-dot">
                                        <i class="fas fa-eye"></i>
                                    </div>
                                    <div class="timeline-content">
                                        <div class="timeline-title">Obserwator</div>
                                        <div class="timeline-name">{{ zebranie.obserwator.imie }} {{ zebranie.obserwator.nazwisko }}</div>
                                    </div>
                                </div>

                                <div class="timeline-item {% if zebranie.protokolant %}completed{% else %}pending{% endif %}">
                                    <div class="timeline-dot">
                                        <i class="fas {% if zebranie.protokolant %}fa-pen{% else %}fa-hourglass-half{% endif %}"></i>
                                    </div>
                                    <div class="timeline-content">
                                        <div class="timeline-title">Protokolant</div>
                                        <div class="timeline-name">
                                            {% if zebranie.protokolant %}
                                                {{ zebranie.protokolant.imie }} {{ zebranie.protokolant.nazwisko }}
                                            {% else %}
                                                <em>Oczekuje na wyznaczenie</em>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>

                                <div class="timeline-item {% if zebranie.prowadzacy %}completed{% else %}pending{% endif %}">
                                    <div class="timeline-dot">
                                        <i class="fas {% if zebranie.prowadzacy %}fa-user-tie{% else %}fa-hourglass-half{% endif %}"></i>
                                    </div>
                                    <div class="timeline-content">
                                        <div class="timeline-title">Prowadzący</div>
                                        <div class="timeline-name">
                                            {% if zebranie.prowadzacy %}
                                                {{ zebranie.prowadzacy.imie }} {{ zebranie.prowadzacy.nazwisko }}
                                            {% else %}
                                                <em>Oczekuje na wyznaczenie</em>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Management Board -->
                            {% if zebranie.isManagementComplete %}
                                <div class="management-showcase">
                                    <div class="showcase-header">
                                        <div class="crown-icon">
                                            <i class="fas fa-crown"></i>
                                        </div>
                                        <span>Zarząd Okręgu</span>
                                    </div>
                                    <div class="management-members">
                                        <div class="member-card president">
                                            <div class="member-avatar">
                                                <i class="fas fa-star"></i>
                                            </div>
                                            <div class="member-info">
                                                <div class="member-role">Prezes</div>
                                                <div class="member-name">{{ zebranie.prezesOkregu.imie }} {{ zebranie.prezesOkregu.nazwisko }}</div>
                                            </div>
                                        </div>
                                        <div class="member-card vice-president">
                                            <div class="member-avatar">
                                                <i class="fas fa-medal"></i>
                                            </div>
                                            <div class="member-info">
                                                <div class="member-role">Wiceprezes I</div>
                                                <div class="member-name">{{ zebranie.wiceprezes1.imie }} {{ zebranie.wiceprezes1.nazwisko }}</div>
                                            </div>
                                        </div>
                                        {% if zebranie.wiceprezes2 %}
                                            <div class="member-card vice-president">
                                                <div class="member-avatar">
                                                    <i class="fas fa-medal"></i>
                                                </div>
                                                <div class="member-info">
                                                    <div class="member-role">Wiceprezes II</div>
                                                    <div class="member-name">{{ zebranie.wiceprezes2.imie }} {{ zebranie.wiceprezes2.nazwisko }}</div>
                                                </div>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}

                            <!-- Next Step Guidance -->
                            {% if zebranie.nextStepDescription and zebranie.status != 'zakonczone' and zebranie.status != 'anulowane' %}
                                <div class="next-step-guidance">
                                    <div class="guidance-header">
                                        <div class="guidance-icon">
                                            <i class="fas fa-lightbulb"></i>
                                        </div>
                                        <span>Następny Krok</span>
                                    </div>
                                    <div class="guidance-text">
                                        {{ zebranie.nextStepDescription }}
                                    </div>
                                </div>
                            {% endif %}

                            <!-- Acceptance Progress -->
                            {% if zebranie.status == 'oczekuje_na_akceptacje' %}
                                <div class="acceptance-progress">
                                    <div class="progress-header">
                                        <div class="progress-icon">
                                            <i class="fas fa-check-double"></i>
                                        </div>
                                        <span>Status Akceptacji</span>
                                    </div>
                                    <div class="acceptance-grid">
                                        <div class="acceptance-item {% if zebranie.obserwatorZaakceptowal %}accepted{% else %}pending{% endif %}">
                                            <div class="acceptance-avatar">
                                                <i class="fas {% if zebranie.obserwatorZaakceptowal %}fa-check{% else %}fa-clock{% endif %}"></i>
                                            </div>
                                            <div class="acceptance-info">
                                                <div class="acceptance-role">Obserwator</div>
                                                <div class="acceptance-status">
                                                    {% if zebranie.obserwatorZaakceptowal %}
                                                        <span class="status-accepted">Zaakceptował</span>
                                                    {% else %}
                                                        <span class="status-waiting">Oczekuje</span>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="acceptance-item {% if zebranie.protokolantZaakceptowal %}accepted{% else %}pending{% endif %}">
                                            <div class="acceptance-avatar">
                                                <i class="fas {% if zebranie.protokolantZaakceptowal %}fa-check{% else %}fa-clock{% endif %}"></i>
                                            </div>
                                            <div class="acceptance-info">
                                                <div class="acceptance-role">Protokolant</div>
                                                <div class="acceptance-status">
                                                    {% if zebranie.protokolantZaakceptowal %}
                                                        <span class="status-accepted">Zaakceptował</span>
                                                    {% else %}
                                                        <span class="status-waiting">Oczekuje</span>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="acceptance-item {% if zebranie.prowadzacyZaakceptowal %}accepted{% else %}pending{% endif %}">
                                            <div class="acceptance-avatar">
                                                <i class="fas {% if zebranie.prowadzacyZaakceptowal %}fa-check{% else %}fa-clock{% endif %}"></i>
                                            </div>
                                            <div class="acceptance-info">
                                                <div class="acceptance-role">Prowadzący</div>
                                                <div class="acceptance-status">
                                                    {% if zebranie.prowadzacyZaakceptowal %}
                                                        <span class="status-accepted">Zaakceptował</span>
                                                    {% else %}
                                                        <span class="status-waiting">Oczekuje</span>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}

                            {% if zebranie.dataZakonczenia %}
                                <div class="completion-badge">
                                    <i class="fas fa-check-double"></i>
                                    <span>Zakończone {{ zebranie.dataZakonczenia|date('d.m.Y H:i') }}</span>
                                </div>
                            {% endif %}
                        </div>

                        <div class="card-footer">
                            <a href="{{ path('zebranie_okregu_show', {id: zebranie.id}) }}" class="btn-enter">
                                <span class="btn-text">Przejdź do Zebrania</span>
                                <span class="btn-arrow">
                                    <i class="fas fa-arrow-right"></i>
                                </span>
                                <div class="btn-ripple"></div>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% else %}
        <!-- Premium Empty State -->
        <div class="empty-state">
            <div class="empty-illustration">
                <div class="illustration-bg"></div>
                <div class="illustration-icon">
                    <i class="fas fa-users-cog"></i>
                </div>
                <div class="illustration-particles">
                    <div class="particle particle-1"></div>
                    <div class="particle particle-2"></div>
                    <div class="particle particle-3"></div>
                </div>
            </div>
            <div class="empty-content">
                <h3 class="empty-title">Brak Aktywnych Zebrań</h3>
                <p class="empty-description">
                    {% if is_granted('ROLE_SEKRETARZ_PARTII') %}
                        Rozpocznij proces zarządzania strukturami partii tworząc pierwsze zebranie okręgu.
                    {% else %}
                        Obecnie nie uczestniczysz w żadnych zebraniach okręgu.
                    {% endif %}
                </p>
                {% if is_granted('ROLE_SEKRETARZ_PARTII') %}
                    <a href="{{ path('zebranie_okregu_new') }}" class="btn-create">
                        <span class="btn-icon">
                            <i class="fas fa-rocket"></i>
                        </span>
                        <span class="btn-text">Rozpocznij Pierwsze Zebranie</span>
                        <div class="btn-glow"></div>
                    </a>
                {% endif %}
            </div>
        </div>
    {% endif %}
</div>

