                                        <select name="okreg_id" id="okreg_id" class="form-select enhanced-select" required>
                                            <option value="">Wybierz okręg wyborczy</option>
                                            {% for okreg in okregi %}
                                                <option value="{{ okreg.id }}" data-description="Okręg {{ okreg.nazwa }}">
                                                    {{ okreg.nazwa }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                        <div class="select-icon">
                                            <i class="fas fa-map-marker-alt"></i>
                                        </div>
                                        <div class="invalid-feedback">
                                            Proszę wybrać okręg wyborczy.
                                        </div>
                                    </div>
                                    
                                    <div class="form-help mt-2">
                                        <i class="fas fa-info-circle text-muted me-2"></i>
                                        <span class="text-muted">Zebranie zostanie utworzone dla wybranego okręgu</span>
                                    </div>
                                </div>

                                <!-- Obserwator Selection -->
                                <div class="form-section mb-4">
                                    <div class="section-header">
                                        <div class="section-icon">
                                            <i class="fas fa-eye"></i>
                                        </div>
                                        <h6 class="section-title">Wybór obserwatora</h6>
                                    </div>
                                    
                                    <div class="enhanced-select-wrapper">
                                        <select name="obserwator_id" id="obserwator_id" class="form-select enhanced-select" required>
                                            <option value="">Wybierz osobę nadzorującą zebranie</option>
                                            {% for user in users %}
                                                <option value="{{ user.id }}" 
                                                        data-okreg="{{ user.okreg ? user.okreg.id : '' }}"
                                                        data-okreg-name="{{ user.okreg ? user.okreg.nazwa : '' }}">
                                                    {{ user.imie }} {{ user.nazwisko }}
                                                    {% if user.okreg %}<span class="text-muted">({{ user.okreg.nazwa }})</span>{% endif %}
                                                </option>
                                            {% endfor %}
                                        </select>
                                        <div class="select-icon">
                                            <i class="fas fa-user-tie"></i>
                                        </div>
                                        <div class="invalid-feedback">
                                            Proszę wybrać obserwatora zebrania.
                                        </div>
                                    </div>
                                    
                                    <div class="form-help mt-2">
                                        <i class="fas fa-info-circle text-muted me-2"></i>
                                        <span class="text-muted">Obserwator będzie nadzorował cały proces wyborczy</span>
                                    </div>
                                    
                                    <!-- Dynamic feedback for observer selection -->
                                    <div id="observer-feedback" class="mt-3" style="display: none;">
                                        <div class="alert alert-info border-0 bg-light">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-user-check text-primary me-3 fa-lg"></i>
                                                <div>
                                                    <div class="fw-bold text-primary">Rekomendowany wybór</div>
                                                    <small class="text-muted">Ten obserwator jest z tego samego okręgu</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="form-actions">
                                    <div class="action-buttons-wrapper">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="form-progress-info">
                                                <small class="text-muted">
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    Po utworzeniu rozpocznie się proces wyborczy
                                                </small>
                                            </div>
                                            <div class="action-buttons">
                                                <a href="{{ path('zebranie_okregu_index') }}" class="btn btn-outline-secondary btn-lg me-3">
                                                    <i class="fas fa-times me-2"></i>Anuluj
                                                </a>
                                                <button type="submit" class="btn btn-primary btn-lg submit-btn">
                                                    <i class="fas fa-play me-2"></i>Rozpocznij zebranie
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                
