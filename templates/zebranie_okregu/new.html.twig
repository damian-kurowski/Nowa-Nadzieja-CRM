                        <div class="card-header bg-primary text-white">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-road me-2"></i>Proces zebrania
                            </h6>
                        </div>
                        <div class="card-body p-0">
                            <div class="process-steps">
                                <div class="step active">
                                    <div class="step-icon">
                                        <i class="fas fa-cogs"></i>
                                    </div>
                                    <div class="step-content">
                                        <h6>1. Konfiguracja</h6>
                                        <small class="text-muted">Wybór okręgu i obserwatora</small>
                                    </div>
                                </div>
                                <div class="step">
                                    <div class="step-icon">
                                        <i class="fas fa-user-edit"></i>
                                    </div>
                                    <div class="step-content">
                                        <h6>2. Wyznaczenie protokolanta</h6>
                                        <small class="text-muted">Obserwator wybiera protokolanta</small>
                                    </div>
                                </div>
                                <div class="step">
                                    <div class="step-icon">
                                        <i class="fas fa-user-tie"></i>
                                    </div>
                                    <div class="step-content">
                                        <h6>3. Wyznaczenie prowadzącego</h6>
                                        <small class="text-muted">Wybór osoby prowadzącej obrady</small>
                                    </div>
                                </div>
                                <div class="step">
                                    <div class="step-icon">
                                        <i class="fas fa-vote-yea"></i>
                                    </div>
                                    <div class="step-content">
                                        <h6>4. Wybory zarządu</h6>
                                        <small class="text-muted">Głosowanie na nowy zarząd</small>
                                    </div>
                                </div>
                                <div class="step">
                                    <div class="step-icon">
                                        <i class="fas fa-check-circle"></i>
                                    </div>
                                    <div class="step-content">
                                        <h6>5. Zakończenie</h6>
                                        <small class="text-muted">Zamknięcie procesu</small>
                                    </div>
                                </div>
                            </div>
