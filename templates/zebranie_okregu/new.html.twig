                                <div class="creation-progress">
                                    <div class="progress-steps-horizontal">
                                        <div class="step-h active">
                                            <div class="step-h-number">1</div>
                                            <div class="step-h-label">Konfiguracja</div>
                                        </div>
                                        <div class="step-h-connector"></div>
                                        <div class="step-h">
                                            <div class="step-h-number">2</div>
                                            <div class="step-h-label">Protokolant</div>
                                        </div>
                                        <div class="step-h-connector"></div>
                                        <div class="step-h">
                                            <div class="step-h-number">3</div>
                                            <div class="step-h-label">Prowadzący</div>
