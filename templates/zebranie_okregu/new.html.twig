                            <div class="tip-item mb-3">
                                <div class="d-flex">
                                    <div class="tip-icon me-3">
                                        <i class="fas fa-users text-primary"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">Wybór obserwatora</h6>
                                        <small class="text-muted">Najlepiej wybrać kogoś z tego samego okręgu</small>
                                    </div>
                                </div>
                            </div>
                            <div class="tip-item mb-3">
                                <div class="d-flex">
                                    <div class="tip-icon me-3">
                                        <i class="fas fa-clock text-success"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">Czas trwania</h6>
                                        <small class="text-muted">Cały proces zajmuje około 15-30 minut</small>
                                    </div>
                                </div>
                            </div>
                            <div class="tip-item">
                                <div class="d-flex">
                                    <div class="tip-icon me-3">
                                        <i class="fas fa-file-alt text-info"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">Dokumentacja</h6>
                                        <small class="text-muted">Protokół zostanie wygenerowany automatycznie</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const okregSelect = document.getElementById('okreg_id');
    const obserwatorSelect = document.getElementById('obserwator_id');
    const observerFeedback = document.getElementById('observer-feedback');
    const form = document.querySelector('.needs-validation');
    
    // Enhanced okreg change handler
    okregSelect.addEventListener('change', function() {
        const selectedOkregId = this.value;
        
        // Reset all observer options styling
        Array.from(obserwatorSelect.options).forEach(option => {
            if (option.value === '') return;
            
            option.style.backgroundColor = '';
            option.style.fontWeight = '';
            option.style.color = '';
        });
        
        // Hide feedback initially
        observerFeedback.style.display = 'none';
        
        if (selectedOkregId) {
            // Highlight users from the same okreg
            Array.from(obserwatorSelect.options).forEach(option => {
                if (option.value === '') return;
                
                const optionOkregId = option.getAttribute('data-okreg');
                if (optionOkregId === selectedOkregId) {
                    option.style.backgroundColor = '#e8f5e8';
                    option.style.fontWeight = 'bold';
                    option.style.color = '#155724';
                }
            });
        }
        
        // Trigger observer validation if already selected
        if (obserwatorSelect.value) {
            validateObserverChoice();
        }
    });
    
    // Observer selection handler
    obserwatorSelect.addEventListener('change', validateObserverChoice);
    
    function validateObserverChoice() {
        const selectedOkregId = okregSelect.value;
        const selectedObserverId = obserwatorSelect.value;
        
        if (!selectedOkregId || !selectedObserverId) {
            observerFeedback.style.display = 'none';
            return;
        }
        
        const selectedObserverOption = obserwatorSelect.querySelector(`option[value="${selectedObserverId}"]`);
        const observerOkregId = selectedObserverOption.getAttribute('data-okreg');
        
        if (observerOkregId === selectedOkregId) {
            // Show positive feedback
            observerFeedback.innerHTML = `
                <div class="alert alert-success border-0">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle text-success me-3 fa-lg"></i>
                        <div>
                            <div class="fw-bold text-success">Doskonały wybór!</div>
                            <small class="text-muted">Obserwator jest z tego samego okręgu</small>
                        </div>
                    </div>
                </div>
            `;
            observerFeedback.style.display = 'block';
        } else if (observerOkregId) {
            // Show warning for different okreg
            observerFeedback.innerHTML = `
                <div class="alert alert-warning border-0">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle text-warning me-3 fa-lg"></i>
                        <div>
                            <div class="fw-bold text-warning">Uwaga</div>
                            <small class="text-muted">Obserwator jest z innego okręgu</small>
                        </div>
                    </div>
                </div>
            `;
            observerFeedback.style.display = 'block';
        } else {
            observerFeedback.style.display = 'none';
        }
    }
    
    // Form validation
    form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
        }
        
        form.classList.add('was-validated');
    });
    
    // Enhanced form field validation
    [okregSelect, obserwatorSelect].forEach(select => {
        select.addEventListener('change', function() {
            if (this.value) {
                this.classList.remove('is-invalid');
                this.classList.add('is-valid');
            } else {
                this.classList.remove('is-valid');
                this.classList.add('is-invalid');
            }
        });
    });
});
</script>

