{% extends 'base.html.twig' %}

{% block title %}Nowy darczyńca - CRM Nowa Nadzieja{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>Nowy darczyńca</h2>
                <p class="text-muted">Dodaj nowego darczyńcę do systemu</p>
            </div>
            <div>
                <a href="{{ path('darczyca_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Powrót do listy
                </a>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5>Dane darczyńcy</h5>
                    </div>
                    <div class="card-body">
                        <form method="POST">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="imie" class="form-label">Imię *</label>
                                        <input type="text" class="form-control" id="imie" name="imie" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="nazwisko" class="form-label">Nazwisko *</label>
                                        <input type="text" class="form-control" id="nazwisko" name="nazwisko" required>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">Email *</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="telefon" class="form-label">Telefon</label>
                                        <input type="tel" class="form-control" id="telefon" name="telefon">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="firma" class="form-label">Firma</label>
                                        <input type="text" class="form-control" id="firma" name="firma">
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="adres" class="form-label">Adres</label>
                                <textarea class="form-control" id="adres" name="adres" rows="3"></textarea>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="kwota_wsparcia" class="form-label">Kwota wsparcia (zł)</label>
                                        <input type="number" class="form-control" id="kwota_wsparcia" name="kwota_wsparcia" step="0.01" min="0">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="forma_wsparcia" class="form-label">Forma wsparcia</label>
                                        <select class="form-select" id="forma_wsparcia" name="forma_wsparcia">
                                            <option value="">Wybierz formę wsparcia</option>
                                            <option value="przelew">Przelew</option>
                                            <option value="gotówka">Gotówka</option>
                                            <option value="karta">Karta</option>
                                            <option value="blik">BLIK</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="data_pierwszej_wplaty" class="form-label">Data pierwszej wpłaty</label>
                                        <input type="date" class="form-control" id="data_pierwszej_wplaty" name="data_pierwszej_wplaty">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="data_ostatniej_wplaty" class="form-label">Data ostatniej wpłaty</label>
                                        <input type="date" class="form-control" id="data_ostatniej_wplaty" name="data_ostatniej_wplaty">
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="notatka" class="form-label">Notatka</label>
                                <textarea class="form-control" id="notatka" name="notatka" rows="3"></textarea>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="zgoda_na_kontakt" name="zgoda_na_kontakt" checked>
                                    <label class="form-check-label" for="zgoda_na_kontakt">
                                        Zgoda na kontakt
                                    </label>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end">
                                <a href="{{ path('darczyca_index') }}" class="btn btn-secondary me-2">Anuluj</a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Zapisz darczyńcę
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}