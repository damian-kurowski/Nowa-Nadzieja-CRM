{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            initializeViewSwitching();
            initializeAnimations();
        });
        
        function initializeViewSwitching() {
            // Restore saved view preference
            const savedView = localStorage.getItem('opinions_view') || 'timeline';
            switchView(savedView, false);
        }
        
        function switchView(view, savePreference = true) {
            // Update buttons
            document.querySelectorAll('.view-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelector(`[data-view="${view}"]`).classList.add('active');
            
            // Show/hide views
            const timelineView = document.getElementById('timelineView');
            const cardView = document.getElementById('cardView');
            
            if (view === 'timeline') {
                timelineView.style.display = 'block';
                cardView.style.display = 'none';
                timelineView.classList.add('fade-in');
            } else {
                timelineView.style.display = 'none';
                cardView.style.display = 'block';
                cardView.classList.add('fade-in');
            }
            
            // Save preference
            if (savePreference) {
                localStorage.setItem('opinions_view', view);
            }
        }
        
        function filterOpinions() {
            const authorFilter = document.getElementById('authorFilter').value;
            const dateFilter = document.getElementById('dateFilter').value;
            const opinionItems = document.querySelectorAll('.opinion-item');
            
            let visibleCount = 0;
            
            opinionItems.forEach(item => {
                let showItem = true;
                
                // Author filter
                if (authorFilter && item.dataset.authorId !== authorFilter) {
                    showItem = false;
                }
                
                // Date filter
                if (dateFilter) {
                    const itemDate = new Date(item.dataset.date);
                    const filterDate = new Date();
                    filterDate.setDate(filterDate.getDate() - parseInt(dateFilter));
                    
                    if (itemDate < filterDate) {
                        showItem = false;
                    }
                }
                
                if (showItem) {
                    item.style.display = 'block';
                    item.classList.add('fade-in');
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                    item.classList.remove('fade-in');
                }
            });
            
            // Show/hide empty state for filters
            updateFilteredState(visibleCount);
        }
        
        function updateFilteredState(visibleCount) {
            let emptyState = document.querySelector('.filter-empty-state');
            
            if (visibleCount === 0) {
                if (!emptyState) {
                    emptyState = document.createElement('div');
                    emptyState.className = 'empty-state filter-empty-state slide-up';
                    emptyState.innerHTML = `
                        <div class="empty-state-icon">
                            <i class="fas fa-filter"></i>
                        </div>
                        <h5>Brak opinii spe≈ÇniajƒÖcych kryteria</h5>
                        <p>Spr√≥buj zmieniƒá filtry, aby zobaczyƒá wiƒôcej opinii.</p>
                        <button onclick="clearFilters()" class="btn btn-secondary btn-enhanced">
                            <i class="fas fa-times"></i>
                            <span>Wyczy≈õƒá filtry</span>
                        </button>
                    `;
                    
                    const container = document.querySelector('.timeline-container') || document.querySelector('.opinions-grid');
                    container.parentNode.insertBefore(emptyState, container.nextSibling);
                }
                emptyState.style.display = 'block';
            } else if (emptyState) {
                emptyState.style.display = 'none';
            }
        }
        
        function clearFilters() {
            document.getElementById('authorFilter').value = '';
            document.getElementById('dateFilter').value = '';
            filterOpinions();
        }
        
        function initializeAnimations() {
            // Stagger animation for timeline items
            const timelineItems = document.querySelectorAll('.timeline-item');
            timelineItems.forEach((item, index) => {
                item.style.animationDelay = `${index * 0.1}s`;
            });
            
            // Intersection Observer for scroll animations
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('slide-up');
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.1 });
            
            document.querySelectorAll('.timeline-item, .opinion-card').forEach(item => {
                observer.observe(item);
            });
        }
        
        // Toast notifications
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `alert alert-${type} position-fixed fade-in`;
            toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px; box-shadow: 0 4px 16px rgba(0,0,0,0.15);';
            toast.innerHTML = `
                <div class="d-flex align-items-center">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'warning' ? 'exclamation-triangle' : 'info-circle'} me-2"></i>
                    <span>${message}</span>
                    <button type="button" class="btn-close ms-auto" onclick="this.closest('.alert').remove()"></button>
                </div>
            `;
            
            document.body.appendChild(toast);
            
            setTimeout(() => {
                if (toast.parentElement) {
                    toast.style.opacity = '0';
                    setTimeout(() => toast.remove(), 300);
                }
            }, 5000);
        }
    </script>
{% endblock %}