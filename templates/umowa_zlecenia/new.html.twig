<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle period type selection
    const typOkresuSelect = document.querySelector('select[name="umowa_zlecenia[typOkresu]"]');
    const dataDoField = document.querySelector('#umowa_zlecenia_dataDo').closest('.mb-3');
    
    function toggleDataDoField() {
        if (typOkresuSelect.value === 'od_do') {
            dataDoField.style.display = 'block';
            dataDoField.querySelector('input').required = true;
        } else {
            dataDoField.style.display = 'none';
            dataDoField.querySelector('input').required = false;
            dataDoField.querySelector('input').value = '';
        }
    }
    
    if (typOkresuSelect) {
        typOkresuSelect.addEventListener('change', toggleDataDoField);
        toggleDataDoField(); // Initial state
    }
    
    // Handle account source selection
    const pobranieKontaCheckbox = document.querySelector('input[name="umowa_zlecenia[pobranieKontaZSkladek]"]');
    const numerKontaField = document.querySelector('#manual-account-field');
    const numerKontaInput = document.querySelector('input[name="umowa_zlecenia[numerKonta]"]');
    const zleceniobiorcaSelect = document.querySelector('select[name="umowa_zlecenia[zleceniobiorca]"]');
    
    function toggleAccountField() {
        if (pobranieKontaCheckbox.checked) {
            numerKontaField.style.display = 'none';
            numerKontaInput.required = false;
            
            // Fetch account number if contractor is selected
            if (zleceniobiorcaSelect && zleceniobiorcaSelect.value) {
                fetchUserAccountNumber(zleceniobiorcaSelect.value);
            } else {
                showAccountMessage('Najpierw wybierz zleceniobiorcę', 'warning');
            }
        } else {
            numerKontaField.style.display = 'block';
            numerKontaInput.required = false; // Will be validated by backend
            hideAccountMessage();
        }
    }
    
    function fetchUserAccountNumber(userId) {
        if (!userId) return;
        
        // Show loading state
        showAccountMessage('Pobieranie numeru konta...', 'info');
        
        fetch(`/umowy-zlecenia/api/user/${userId}/account-number`, {
            method: 'GET',
            headers: {
                'Accept': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                if (data.hasAccountNumber) {
                    numerKontaInput.value = data.accountNumber;
                    showAccountMessage(data.message, 'success');
                } else {
                    numerKontaInput.value = '';
                    showAccountMessage(data.message, 'warning');
                }
            } else {
                showAccountMessage('Błąd podczas pobierania numeru konta', 'error');
            }
        })
        .catch(error => {
            console.error('Error fetching account number:', error);
            showAccountMessage('Błąd połączenia z serwerem', 'error');
        });
    }
    
    function showAccountMessage(message, type) {
        let messageDiv = document.querySelector('#account-message');
        if (!messageDiv) {
            messageDiv = document.createElement('div');
            messageDiv.id = 'account-message';
            messageDiv.className = 'account-message';
            numerKontaField.parentNode.insertBefore(messageDiv, numerKontaField.nextSibling);
        }
        
        messageDiv.className = `account-message alert alert-${getBootstrapClass(type)} mt-2`;
        messageDiv.innerHTML = `<i class="fas fa-${getIcon(type)} me-2"></i>${message}`;
        messageDiv.style.display = 'block';
    }
    
    function hideAccountMessage() {
        const messageDiv = document.querySelector('#account-message');
        if (messageDiv) {
            messageDiv.style.display = 'none';
        }
    }
    
    function getBootstrapClass(type) {
        const classes = {
            'success': 'success',
            'error': 'danger',
            'warning': 'warning',
            'info': 'info'
        };
        return classes[type] || 'info';
    }
    
    function getIcon(type) {
        const icons = {
            'success': 'check-circle',
            'error': 'exclamation-circle',
            'warning': 'exclamation-triangle',
            'info': 'info-circle'
        };
        return icons[type] || 'info-circle';
    }
    
    if (pobranieKontaCheckbox) {
        pobranieKontaCheckbox.addEventListener('change', toggleAccountField);
        toggleAccountField(); // Initial state
    }
    
    // Handle contractor selection change when checkbox is checked
    if (zleceniobiorcaSelect && pobranieKontaCheckbox) {
        zleceniobiorcaSelect.addEventListener('change', function() {
            if (pobranieKontaCheckbox.checked) {
                if (this.value) {
                    fetchUserAccountNumber(this.value);
                } else {
                    numerKontaInput.value = '';
                    showAccountMessage('Wybierz zleceniobiorcę', 'info');
                }
            }
        });
    }
    
    // Format account number input
    if (numerKontaInput) {
        numerKontaInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s/g, '');
            if (value.length > 0) {
                // Format IBAN - add spaces every 4 characters
                value = value.match(/.{1,4}/g).join(' ');
                e.target.value = value;
            }
        });
    }
    
    // Form validation
    const form = document.querySelector('.needs-validation');
    if (form) {
        form.addEventListener('submit', function(event) {
            // Only add visual classes, don't block submission
            form.classList.add('was-validated');
            
        });
    }
    
    // Enhanced form validation with better feedback
    document.querySelectorAll('.form-control, .form-select').forEach(input => {
        input.addEventListener('input', function() {
            if (this.checkValidity()) {
                this.classList.remove('is-invalid');
                this.classList.add('is-valid');
            } else {
                this.classList.remove('is-valid');
                this.classList.add('is-invalid');
            }
        });
    });
});
</script>

