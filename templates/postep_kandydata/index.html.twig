{% extends 'base.html.twig' %}

{% block title %}Postęp kandydatów - CRM Nowa Nadzieja{% endblock %}

{% block page_title %}Postęp kandydatów{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .progress-overview {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem;
            border-radius: 15px;
            margin-bottom: 2rem;
        }
        
        .progress-card {
            transition: all 0.3s ease;
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .progress-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
        }
        
        .stage-badge {
            font-size: 0.8rem;
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            font-weight: 600;
        }
        
        .stage-1 { background: #fef3c7; color: #92400e; }
        .stage-2 { background: #dbeafe; color: #1e40af; }
        .stage-3 { background: #d1fae5; color: #065f46; }
        .stage-completed { background: #dcfce7; color: #166534; }
        
        [data-theme="dark"] .progress-card {
            background: var(--bg-secondary);
            border-color: var(--border-color);
        }
        
        [data-theme="dark"] .stage-1 { background: rgba(146, 64, 14, 0.3); color: #fbbf24; }
        [data-theme="dark"] .stage-2 { background: rgba(30, 64, 175, 0.3); color: #60a5fa; }
        [data-theme="dark"] .stage-3 { background: rgba(6, 95, 70, 0.3); color: #34d399; }
        [data-theme="dark"] .stage-completed { background: rgba(22, 101, 52, 0.3); color: #4ade80; }
    </style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Progress Overview -->
    <div class="progress-overview">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="h4 mb-2">Zarządzanie postępem kandydatów</h2>
                <p class="mb-0 opacity-90">Monitoruj i aktualizuj postęp kandydatów w procesie członkostwa</p>
            </div>
            <div class="col-md-4 text-end">
                <i class="fas fa-chart-line fa-3x opacity-50"></i>
            </div>
        </div>
    </div>

    {% if postepy is empty %}
        <div class="row">
            <div class="col-12">
                <div class="card border-0 text-center py-5">
                    <div class="card-body">
                        <i class="fas fa-clipboard-list text-muted mb-3" style="font-size: 3rem;"></i>
                        <h5 class="text-muted">Brak kandydatów w trakcie procesu</h5>
                        <p class="text-muted">Obecnie nie ma kandydatów, których postęp można by monitorować.</p>
                        <a href="{{ path('kandydat_index') }}" class="btn btn-primary">
                            <i class="fas fa-users me-2"></i>
                            Przejdź do listy kandydatów
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            {% for postep in postepy %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card progress-card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h6 class="card-title mb-0">
                                    {{ postep.kandydat.imie }} {{ postep.kandydat.nazwisko }}
                                </h6>
                                <span class="stage-badge stage-{{ postep.aktualnyEtap }}">
                                    Etap {{ postep.aktualnyEtap }}
                                </span>
                            </div>
                            
                            <div class="mb-3">
                                <div class="progress mb-2" style="height: 8px;">
                                    <div class="progress-bar" role="progressbar" 
                                         style="width: {{ (postep.aktualnyEtap / 3 * 100)|round }}%"
                                         aria-valuenow="{{ postep.aktualnyEtap }}" 
                                         aria-valuemin="0" 
                                         aria-valuemax="3">
                                    </div>
                                </div>
                                <small class="text-muted">
                                    Postęp: {{ postep.postepProcentowy }}%
                                </small>
                            </div>
                            
                            <div class="mb-3">
                                <small class="text-muted d-block">Data rozpoczęcia:</small>
                                <strong>{{ postep.dataRozpoczecia|date('d.m.Y') }}</strong>
                            </div>
                            
                            {% if postep.dataZakonczenia %}
                                <div class="mb-3">
                                    <small class="text-muted d-block">Data zakończenia:</small>
                                    <strong class="text-success">{{ postep.dataZakonczenia|date('d.m.Y') }}</strong>
                                </div>
                            {% endif %}
                            
                            {% if postep.uwagi %}
                                <div class="mb-3">
                                    <small class="text-muted d-block">Uwagi:</small>
                                    <small>{{ postep.uwagi|slice(0, 50) }}{% if postep.uwagi|length > 50 %}...{% endif %}</small>
                                </div>
                            {% endif %}
                        </div>
                        
                        <div class="card-footer bg-transparent border-top-0">
                            <div class="d-flex gap-2">
                                <a href="{{ path('postep_kandydata_show', {id: postep.kandydat.id}) }}" 
                                   class="btn btn-outline-primary btn-sm flex-fill">
                                    <i class="fas fa-eye me-1"></i>
                                    Szczegóły
                                </a>
                                <a href="{{ path('postep_kandydata_update', {id: postep.kandydat.id}) }}" 
                                   class="btn btn-primary btn-sm flex-fill">
                                    <i class="fas fa-edit me-1"></i>
                                    Aktualizuj
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}