{% if zebranie_status is defined %}
    <div class="meeting-status-info">
        <div class="status-badge mb-3">
            <span class="badge bg-{{ zebranie_status.badge_class }} fs-6">
                <i class="fas fa-{{ zebranie_status.icon }} me-2"></i>
                {{ zebranie_status.status_name }}
            </span>
        </div>

        {% if zebranie_status.current_step %}
            <div class="progress mb-3" style="height: 25px;">
                <div class="progress-bar bg-success" role="progressbar"
                     style="width: {{ (zebranie_status.current_step / zebranie_status.total_steps * 100)|round }}%"
                     aria-valuenow="{{ zebranie_status.current_step }}"
                     aria-valuemin="0"
                     aria-valuemax="{{ zebranie_status.total_steps }}">
                    Krok {{ zebranie_status.current_step }} / {{ zebranie_status.total_steps }}
                </div>
            </div>
        {% endif %}

        {% if zebranie_status.next_action %}
            <div class="alert alert-info small mb-2">
                <i class="fas fa-arrow-right me-2"></i>
                <strong>Nastpny krok:</strong> {{ zebranie_status.next_action }}
            </div>
        {% endif %}

        {% if zebranie_status.participants %}
            <div class="participants-summary mt-3">
                <h6 class="small text-muted mb-2">Uczestnicy:</h6>
                <ul class="list-unstyled small">
                    {% if zebranie_status.participants.obserwator %}
                        <li>
                            <i class="fas fa-eye text-primary me-2"></i>
                            <strong>Obserwator:</strong> {{ zebranie_status.participants.obserwator }}
                        </li>
                    {% endif %}
                    {% if zebranie_status.participants.protokolant %}
                        <li>
                            <i class="fas fa-pen text-info me-2"></i>
                            <strong>Protokolant:</strong> {{ zebranie_status.participants.protokolant }}
                        </li>
                    {% endif %}
                    {% if zebranie_status.participants.prowadzacy %}
                        <li>
                            <i class="fas fa-gavel text-success me-2"></i>
                            <strong>Prowadzcy:</strong> {{ zebranie_status.participants.prowadzacy }}
                        </li>
                    {% endif %}
                </ul>
            </div>
        {% endif %}
    </div>
{% endif %}
