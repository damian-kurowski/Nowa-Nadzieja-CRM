{% if zebranie_status %}
<div class="card border-0 shadow-sm">
    <div class="card-body p-3">
        <div class="row align-items-center">
            <div class="col-auto">
                {% if zebranie_status.status == 'active' %}
                    <div class="status-indicator bg-success"></div>
                {% elseif zebranie_status.status == 'pending' %}
                    <div class="status-indicator bg-warning"></div>
                {% else %}
                    <div class="status-indicator bg-secondary"></div>
                {% endif %}
            </div>
            <div class="col">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">
                            {% if zebranie_status.status == 'active' %}
                                <i class="fas fa-play-circle text-success me-2"></i>
                                Zebranie w toku
                            {% elseif zebranie_status.status == 'pending' %}
                                <i class="fas fa-clock text-warning me-2"></i>
                                Oczekuje na rozpoczęcie
                            {% elseif zebranie_status.status == 'completed' %}
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Zebranie zakończone
                            {% else %}
                                <i class="fas fa-pause-circle text-secondary me-2"></i>
                                Status nieznany
                            {% endif %}
                        </h6>
                        <small class="text-muted">
                            {% if zebranie_status.current_step %}
                                Aktualny krok: {{ zebranie_status.current_step }}
                            {% endif %}
                            {% if zebranie_status.total_steps %}
                                ({{ zebranie_status.completed_steps|default(0) }} z {{ zebranie_status.total_steps }})
                            {% endif %}
                        </small>
                    </div>
                    <div class="text-end">
                        {% if zebranie_status.progress_percent %}
                        <small class="text-muted">{{ zebranie_status.progress_percent }}%</small>
                        <div class="progress mt-1" style="width: 60px; height: 4px;">
                            <div class="progress-bar" role="progressbar" 
                                 style="width: {{ zebranie_status.progress_percent }}%"
                                 aria-valuenow="{{ zebranie_status.progress_percent }}" 
                                 aria-valuemin="0" 
                                 aria-valuemax="100">
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
                
                {% if zebranie_status.participants_count %}
                <div class="mt-2 pt-2 border-top">
                    <div class="row text-center">
                        <div class="col">
                            <small class="text-muted d-block">Uczestnicy</small>
                            <strong>{{ zebranie_status.participants_count }}</strong>
                        </div>
                        {% if zebranie_status.decisions_made %}
                        <div class="col">
                            <small class="text-muted d-block">Decyzje</small>
                            <strong>{{ zebranie_status.decisions_made }}</strong>
                        </div>
                        {% endif %}
                        {% if zebranie_status.time_elapsed %}
                        <div class="col">
                            <small class="text-muted d-block">Czas trwania</small>
                            <strong>{{ zebranie_status.time_elapsed }}</strong>
                        </div>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<style>
.status-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.1); opacity: 0.8; }
    100% { transform: scale(1); opacity: 1; }
}

[data-theme="dark"] .card {
    background: var(--bg-secondary);
    border-color: var(--border-color) !important;
}
</style>
{% else %}
<div class="alert alert-info" role="alert">
    <i class="fas fa-info-circle me-2"></i>
    Status zebrania jest obecnie niedostępny.
</div>
{% endif %}