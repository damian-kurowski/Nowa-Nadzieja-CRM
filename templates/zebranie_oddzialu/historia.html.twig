{% extends 'base.html.twig' %}

{% block title %}Historia ZebraD OddziaBu - CRM Nowa Nadzieja{% endblock %}

{% block page_title %}Historia ZebraD OddziaBu{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-history me-2"></i>
                            Historia ZebraD - Okrg {{ okreg.nazwa }}
                        </h4>
                    </div>
                    <div class="card-body">
                        {% if stats %}
                            <div class="row mb-4">
                                <div class="col-md-3">
                                    <div class="stat-card text-center p-3 border rounded">
                                        <h3 class="text-primary">{{ stats.total ?? 0 }}</h3>
                                        <p class="text-muted mb-0">Wszystkich zebraD</p>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-card text-center p-3 border rounded">
                                        <h3 class="text-success">{{ stats.completed ?? 0 }}</h3>
                                        <p class="text-muted mb-0">ZakoDczonych</p>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-card text-center p-3 border rounded">
                                        <h3 class="text-warning">{{ stats.active ?? 0 }}</h3>
                                        <p class="text-muted mb-0">Aktywnych</p>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="stat-card text-center p-3 border rounded">
                                        <h3 class="text-info">{{ stats.this_month ?? 0 }}</h3>
                                        <p class="text-muted mb-0">W tym miesicu</p>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {% if user_meetings|length > 0 %}
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-user me-2"></i>
                                Twoje zebrania
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Data</th>
                                            <th>OddziaB</th>
                                            <th>Twoja rola</th>
                                            <th>Status</th>
                                            <th>Akcje</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for zebranie in user_meetings %}
                                            <tr>
                                                <td>{{ zebranie.dataRozpoczecia|date('Y-m-d H:i') }}</td>
                                                <td>{{ zebranie.oddzial.nazwa }}</td>
                                                <td>
                                                    {% if zebranie.obserwator == app.user %}
                                                        <span class="badge bg-primary">Obserwator</span>
                                                    {% endif %}
                                                    {% if zebranie.protokolant == app.user %}
                                                        <span class="badge bg-info">Protokolant</span>
                                                    {% endif %}
                                                    {% if zebranie.prowadzacy == app.user %}
                                                        <span class="badge bg-success">Prowadzcy</span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    <span class="badge bg-{{ zebranie.statusBadgeClass }}">
                                                        {{ zebranie.statusDisplayName }}
                                                    </span>
                                                </td>
                                                <td>
                                                    {% if zebranie.isAktywne() %}
                                                        <a href="{{ path('zebranie_wizard', {id: zebranie.id}) }}"
                                                           class="btn btn-sm btn-primary">
                                                            <i class="fas fa-play me-1"></i>
                                                            Kontynuuj
                                                        </a>
                                                    {% else %}
                                                        <a href="{{ path('zebranie_oddzialu_show', {id: zebranie.id}) }}"
                                                           class="btn btn-sm btn-outline-primary">
                                                            <i class="fas fa-eye me-1"></i>
                                                            Zobacz
                                                        </a>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        {% if completed_meetings|length > 0 %}
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-check-circle me-2"></i>
                                Ostatnie zakoDczone zebrania
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Data rozpoczcia</th>
                                            <th>Data zakoDczenia</th>
                                            <th>OddziaB</th>
                                            <th>Obserwator</th>
                                            <th>Dokumenty</th>
                                            <th>Akcje</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for zebranie in completed_meetings %}
                                            <tr>
                                                <td>{{ zebranie.dataRozpoczecia|date('Y-m-d H:i') }}</td>
                                                <td>
                                                    {% if zebranie.dataZakonczenia %}
                                                        {{ zebranie.dataZakonczenia|date('Y-m-d H:i') }}
                                                    {% else %}
                                                        <span class="text-muted">-</span>
                                                    {% endif %}
                                                </td>
                                                <td>{{ zebranie.oddzial.nazwa }}</td>
                                                <td>{{ zebranie.obserwator.fullName }}</td>
                                                <td>
                                                    <span class="badge bg-info">
                                                        {{ zebranie.dokumenty|length }} dok.
                                                    </span>
                                                </td>
                                                <td>
                                                    <a href="{{ path('zebranie_oddzialu_show', {id: zebranie.id}) }}"
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye me-1"></i>
                                                        Zobacz szczegóBy
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                Brak zakoDczonych zebraD w historii.
            </div>
        {% endif %}

        <div class="mt-4">
            <a href="{{ path('zebranie_oddzialu_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                Powrót do listy zebraD
            </a>
        </div>
    </div>
{% endblock %}
