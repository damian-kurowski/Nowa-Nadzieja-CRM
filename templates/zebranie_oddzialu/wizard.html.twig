{% extends 'base.html.twig' %}

{% block title %}Kreator Zebrania - {{ zebranie.oddzial.nazwa }} - CRM Nowa Nadzieja{% endblock %}

{% block page_title %}Kreator Zebrania Członków Oddziału{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/meeting-dark-theme.css') }}">
    <style>
        .wizard-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 2rem;
            color: white;
            position: relative;
        }

        .wizard-steps {
            background: var(--bg-primary);
            border: 1px solid var(--border-color);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .step-indicator {
            display: flex;
            justify-content: space-between;
            margin-bottom: 3rem;
            position: relative;
        }

        .step-indicator::before {
            content: '';
            position: absolute;
            top: 20px;
            left: 50px;
            right: 50px;
            height: 2px;
            background: var(--border-color);
            z-index: 0;
        }

        .step {
            text-align: center;
            position: relative;
            z-index: 1;
            flex: 1;
        }

        .step-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: white;
            border: 3px solid var(--border-color);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 0.5rem;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        .step.completed .step-circle {
            background: #28a745;
            border-color: #28a745;
            color: white;
        }

        .step.active .step-circle {
            background: #667eea;
            border-color: #667eea;
            color: white;
            transform: scale(1.1);
        }

        .step-label {
            font-size: 0.875rem;
            color: var(--text-secondary);
        }

        .step.active .step-label {
            color: #667eea;
            font-weight: 600;
        }

        .wizard-content {
            background: var(--bg-primary);
            border: 1px solid var(--border-color);
            border-radius: 16px;
            padding: 2rem;
        }

        .current-step-card {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.05));
            border: 1px solid rgba(102, 126, 234, 0.2);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .role-card {
            background: var(--bg-primary);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }

        .role-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px var(--shadow-light);
        }

        .btn-enhanced {
            padding: 0.75rem 2rem;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary-gradient {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
        }

        .btn-primary-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
            color: white;
        }

        .meeting-info-box {
            background: var(--bg-secondary);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .meeting-info-item {
            display: flex;
            align-items: center;
            margin-bottom: 0.75rem;
        }

        .meeting-info-item i {
            width: 30px;
            color: #667eea;
        }

        .function-management {
            background: var(--bg-primary);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .function-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .current-holder {
            background: var(--bg-secondary);
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="wizard-header">
        <h1 class="mb-2">
            <i class="fas fa-magic me-2"></i>
            Kreator Zebrania Członków Oddziału
        </h1>
        <p class="mb-0 opacity-90">
            Oddział: <strong>{{ zebranie.oddzial.nazwa }}</strong> | 
            Data rozpoczęcia: {{ zebranie.dataRozpoczecia|date('Y-m-d H:i') }}
        </p>
    </div>

    <div class="wizard-steps">
        <div class="step-indicator">
            <div class="step {% if zebranie.protokolant %}completed{% elseif current_step == 'protokolant' %}active{% endif %}">
                <div class="step-circle">
                    {% if zebranie.protokolant %}
                        <i class="fas fa-check"></i>
                    {% else %}
                        1
                    {% endif %}
                </div>
                <div class="step-label">Protokolant</div>
            </div>

            <div class="step {% if zebranie.prowadzacy %}completed{% elseif current_step == 'prowadzacy' %}active{% endif %}">
                <div class="step-circle">
                    {% if zebranie.prowadzacy %}
                        <i class="fas fa-check"></i>
                    {% else %}
                        2
                    {% endif %}
                </div>
                <div class="step-label">Prowadzący</div>
            </div>

            <div class="step {% if current_step == 'zarzad' %}active{% elseif zebranie.przewodniczacy %}completed{% endif %}">
                <div class="step-circle">
                    {% if zebranie.przewodniczacy %}
                        <i class="fas fa-check"></i>
                    {% else %}
                        3
                    {% endif %}
                </div>
                <div class="step-label">Zarząd</div>
            </div>

            <div class="step {% if current_step == 'podpisy' %}active{% elseif current_step == 'zakonczone' %}completed{% endif %}">
                <div class="step-circle">
                    {% if current_step == 'zakonczone' %}
                        <i class="fas fa-check"></i>
                    {% else %}
                        4
                    {% endif %}
                </div>
                <div class="step-label">Podpisy</div>
            </div>

            <div class="step {% if current_step == 'zakonczone' %}completed{% endif %}">
                <div class="step-circle">
                    {% if current_step == 'zakonczone' %}
                        <i class="fas fa-check"></i>
                    {% else %}
                        5
                    {% endif %}
                </div>
                <div class="step-label">Zakończenie</div>
            </div>
        </div>
    </div>

    <div class="meeting-info-box">
        <h5 class="mb-3">Informacje o zebraniu</h5>
        <div class="row">
            <div class="col-md-4">
                <div class="meeting-info-item">
                    <i class="fas fa-eye"></i>
                    <span><strong>Obserwator:</strong> {{ zebranie.obserwator.fullName }}</span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="meeting-info-item">
                    <i class="fas fa-pen"></i>
                    <span><strong>Protokolant:</strong> 
                        {% if zebranie.protokolant %}
                            {{ zebranie.protokolant.fullName }}
                            {% if zebranie.protokolant == app.user %}
                                <span class="badge bg-primary ms-1">To Ty</span>
                            {% endif %}
                        {% else %}
                            <em>Nie wyznaczono</em>
                        {% endif %}
                    </span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="meeting-info-item">
                    <i class="fas fa-gavel"></i>
                    <span><strong>Prowadzący:</strong> 
                        {% if zebranie.prowadzacy %}
                            {{ zebranie.prowadzacy.fullName }}
                            {% if zebranie.prowadzacy == app.user %}
                                <span class="badge bg-primary ms-1">To Ty</span>
                            {% endif %}
                        {% else %}
                            <em>Nie wyznaczono</em>
                        {% endif %}
                    </span>
                </div>
            </div>
        </div>
        
        <!-- Status zebrania i powiadomienia -->
        {% set status = zebranie_status|default(null) %}
        {% if status %}
            <div class="row mt-3">
                <div class="col-md-12">
                    <div class="d-flex justify-content-between align-items-center p-3 rounded" 
                         style="background: {% if status.moze_zakonczyc %}#d4edda{% elseif status.niepodpisane_dokumenty > 0 %}#f8d7da{% else %}#e2e3e5{% endif %};">
                        <div class="d-flex align-items-center">
                            <i class="fas {% if status.moze_zakonczyc %}fa-check-circle text-success{% elseif status.niepodpisane_dokumenty > 0 %}fa-exclamation-triangle text-danger{% else %}fa-hourglass-half text-warning{% endif %} me-2"></i>
                            <span>
                                <strong>Status:</strong>
                                {% if status.moze_zakonczyc %}
                                    Zebranie gotowe do zakończenia
                                {% elseif status.niepodpisane_dokumenty > 0 %}
                                    {{ status.niepodpisane_dokumenty }} dokument(ów) czeka na podpisy
                                {% elseif not status.kompletne %}
                                    Niekompletne zebranie
                                {% else %}
                                    Zebranie w trakcie
                                {% endif %}
                            </span>
                        </div>
                        {% if status.niepodpisane_dokumenty > 0 %}
                            <a href="{{ path('dokument_index') }}" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-file-signature me-1"></i>
                                Zobacz dokumenty
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endif %}
        
        <!-- Dokumenty czekające na podpis dla użytkownika -->
        {% if awaiting_documents is defined and awaiting_documents|length > 0 %}
            <div class="alert alert-warning mt-3">
                <h6 class="alert-heading">
                    <i class="fas fa-file-signature me-2"></i>
                    Dokumenty czekające na Twój podpis ({{ awaiting_documents|length }})
                </h6>
                <ul class="mb-2">
                    {% for dokument in awaiting_documents %}
                        <li>
                            <a href="{{ path('dokument_show', {id: dokument.id}) }}" class="alert-link">
                                {{ dokument.tytul }}
                            </a>
                            <small class="text-muted">- {{ dokument.dataUtworzenia|date('Y-m-d H:i') }}</small>
                        </li>
                    {% endfor %}
                </ul>
                <a href="{{ path('dokument_index') }}" class="btn btn-sm btn-warning">
                    <i class="fas fa-arrow-right me-1"></i>
                    Przejdź do dokumentów
                </a>
            </div>
        {% endif %}
    </div>

    <div class="wizard-content">
        {% if current_step == 'protokolant' %}
            <div class="current-step-card">
                <h3 class="mb-3">
                    <i class="fas fa-pen me-2"></i>
                    Krok 1: Wyznacz protokolanta zebrania
                </h3>
                <p class="text-muted mb-4">
                    Protokolant musi być członkiem oddziału {{ zebranie.oddzial.nazwa }}. 
                    Będzie odpowiedzialny za protokołowanie przebiegu zebrania.
                </p>
                
                {% if app.user == zebranie.obserwator %}
                    <a href="{{ path('zebranie_oddzialu_wyznacz_protokolanta', {id: zebranie.id}) }}"
                       class="btn btn-enhanced btn-primary-gradient">
                        <i class="fas fa-user-plus me-2"></i>
                        Wyznacz protokolanta
                    </a>
                {% else %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Tylko obserwator może wyznaczyć protokolanta.
                    </div>
                {% endif %}
            </div>

        {% elseif current_step == 'prowadzacy' %}
            <div class="current-step-card">
                <h3 class="mb-3">
                    <i class="fas fa-gavel me-2"></i>
                    Krok 2: Wyznacz prowadzącego zebranie
                </h3>
                <p class="text-muted mb-4">
                    Prowadzący musi być członkiem oddziału {{ zebranie.oddzial.nazwa }}. 
                    Będzie prowadził zebranie i zarządzał przebiegiem głosowań.
                </p>
                
                {% if app.user == zebranie.obserwator %}
                    <a href="{{ path('zebranie_oddzialu_wyznacz_prowadzacego', {id: zebranie.id}) }}"
                       class="btn btn-enhanced btn-primary-gradient">
                        <i class="fas fa-user-plus me-2"></i>
                        Wyznacz prowadzącego
                    </a>
                {% else %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Tylko obserwator może wyznaczyć prowadzącego.
                    </div>
                {% endif %}
            </div>

        {% elseif current_step == 'przewodniczacy' %}
            <div class="current-step-card">
                <h3 class="mb-3">
                    <i class="fas fa-user-tie me-2"></i>
                    Krok 4: Wybór Przewodniczącego Oddziału
                </h3>
                <p class="text-muted mb-4">
                    Prowadzący i protokolant wspólnie wybierają przewodniczącego oddziału.
                </p>
                {% if app.user in [zebranie.prowadzacy, zebranie.protokolant] %}
                    <a href="{{ path('zebranie_wybor_zarzadu', {id: zebranie.id}) }}"
                       class="btn btn-enhanced btn-primary-gradient">
                        <i class="fas fa-vote-yea me-2"></i>
                        Wybierz Przewodniczącego
                    </a>
                {% else %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Tylko prowadzący lub protokolant może wybierać przewodniczącego.
                    </div>
                {% endif %}
            </div>

        {% elseif current_step == 'zastepcy' %}
            <div class="current-step-card">
                <h3 class="mb-3">
                    <i class="fas fa-users me-2"></i>
                    Krok 5: Wybór Zastępców Przewodniczącego
                </h3>
                <p class="text-muted mb-4">
                    Prowadzący i protokolant wspólnie wybierają zastępców przewodniczącego oddziału (do 2 osób).
                </p>
                {% if app.user in [zebranie.prowadzacy, zebranie.protokolant] %}
                    <a href="{{ path('zebranie_wybor_zarzadu', {id: zebranie.id}) }}"
                       class="btn btn-enhanced btn-primary-gradient">
                        <i class="fas fa-users-cog me-2"></i>
                        Wybierz Zastępców
                    </a>
                {% else %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Tylko prowadzący lub protokolant może wybierać zastępców.
                    </div>
                {% endif %}
            </div>

        {% elseif current_step == 'zarzad' %}
            <div class="current-step-card">
                <h3 class="mb-3">
                    <i class="fas fa-users-cog me-2"></i>
                    Krok 6: Wybór Sekretarza Oddziału
                </h3>
                <p class="text-muted mb-4">
                    Prowadzący i protokolant wspólnie wyznaczają sekretarza oddziału.
                </p>
                {% if app.user in [zebranie.prowadzacy, zebranie.protokolant] %}
                    <a href="{{ path('zebranie_wybor_zarzadu', {id: zebranie.id}) }}"
                       class="btn btn-enhanced btn-primary-gradient">
                        <i class="fas fa-user-edit me-2"></i>
                        Wybierz Sekretarza
                    </a>
                {% else %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Tylko prowadzący lub protokolant może wybierać sekretarza.
                    </div>
                {% endif %}
            </div>

        {% elseif current_step == 'podpisy' %}
            <div class="current-step-card">
                <h3 class="mb-3">
                    <i class="fas fa-file-signature me-2"></i>
                    Krok 4: Podpisywanie dokumentów
                </h3>
                <p class="text-muted mb-4">
                    Protokół zebrania musi zostać podpisany przez wyznaczone osoby.
                </p>
                
                {% if zebranie.allPendingDocuments > 0 %}
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Pozostało <strong>{{ zebranie.allPendingDocuments }}</strong> dokumentów do podpisania.
                    </div>
                    
                    {% if awaiting_documents is defined and awaiting_documents|length > 0 %}
                        <h5>Dokumenty czekające na Twój podpis:</h5>
                        <ul class="list-group mb-3">
                            {% for dokument in awaiting_documents %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    {{ dokument.tytul }}
                                    <a href="{{ path('dokument_show', {id: dokument.id}) }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-signature me-1"></i>
                                        Podpisz
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                {% else %}
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>
                        Wszystkie dokumenty zostały podpisane.
                    </div>
                {% endif %}
            </div>

            {% if app.user == zebranie.obserwator and zebranie.isAktywne %}
                <div class="mt-4">
                    <h4>Zakończ zebranie</h4>
                    <p class="text-muted">
                        Po zakończeniu wszystkich czynności możesz zakończyć zebranie. 
                        Spowoduje to zamknięcie sesji i usunięcie tymczasowych ról.
                    </p>
                    <a href="{{ path('zebranie_zakoncz', {id: zebranie.id}) }}" 
                       class="btn btn-danger"
                       onclick="return confirm('Czy na pewno chcesz zakończyć zebranie?')">
                        <i class="fas fa-stop me-2"></i>
                        Zakończ zebranie
                    </a>
                </div>
            {% endif %}

        {% elseif current_step == 'zakonczony' %}
            <div class="alert alert-success">
                <h4 class="alert-heading">
                    <i class="fas fa-check-circle me-2"></i>
                    Zebranie zakończone
                </h4>
                <p>
                    Zebranie członków oddziału {{ zebranie.oddzial.nazwa }} zostało zakończone 
                    {{ zebranie.dataZakonczenia|date('Y-m-d H:i') }}.
                </p>
                <hr>
                <p class="mb-0">
                    Wszystkie dokumenty zostały podpisane i zarchiwizowane. 
                    Role tymczasowe zostały usunięte.
                </p>
            </div>
        {% endif %}
    </div>

    <div class="mt-4">
        <a href="{{ path('zebranie_oddzialu_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Powrót do listy zebrań
        </a>
    </div>
{% endblock %}