<!-- Modal Wyboru Przewodniczącego -->
<div class="modal fade" id="przewodniczacyModal" tabindex="-1" aria-labelledby="przewodniczacyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="przewodniczacyModalLabel">
                    <i class="fas fa-gavel"></i>
                    Wybór Przewodniczącego Zebrania
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="{{ path('zebranie_oddzialu_wybor_przewodniczacego', {'id': zebranie.id}) }}" method="POST">
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        Protokolant i prowadzący wspólnie wybierają przewodniczącego zebrania, który będzie kierował dalszym przebiegiem obrad.
                    </div>
                    
                    <div class="mb-3">
                        <label for="przewodniczacy" class="form-label">Wybierz Przewodniczącego Zebrania</label>
                        <select class="form-select" id="przewodniczacy" name="przewodniczacy" required>
                            <option value="">-- Wybierz członka --</option>
                            {% for member in availableMembers %}
                                {% if member.id != zebranie.obserwator.id and member.id != zebranie.protokolant.id and member.id != zebranie.prowadzacy.id %}
                                    <option value="{{ member.id }}">
                                        {{ member.fullName }} (ID: {{ member.id }})
                                    </option>
                                {% endif %}
                            {% endfor %}
                        </select>
                        <small class="form-text text-muted">
                            Przewodniczący nie może być jednocześnie obserwatorem, protokolantem ani prowadzącym.
                        </small>
                    </div>
                    
                    <input type="hidden" name="_token" value="{{ csrf_token('wybor_przewodniczacego' ~ zebranie.id) }}">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Anuluj
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i> Wybierz Przewodniczącego
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>