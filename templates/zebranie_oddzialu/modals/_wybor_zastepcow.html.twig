<!-- Modal Wyboru Pierwszego Zastępcy -->
<div class="modal fade" id="zastepca1Modal" tabindex="-1" aria-labelledby="zastepca1ModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="zastepca1ModalLabel">
                    <i class="fas fa-users"></i>
                    Wybór Pierwszego Zastępcy Przewodniczącego
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="{{ path('zebranie_oddzialu_wybor_zastepcy', {'id': zebranie.id, 'numer': 1}) }}" method="POST">
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        Jako przewodniczący zebrania, wybierz pierwszego zastępcę przewodniczącego.
                    </div>
                    
                    <div class="mb-3">
                        <label for="zastepca1" class="form-label">Wybierz Pierwszego Zastępcę</label>
                        <select class="form-select" id="zastepca1" name="zastepca" required>
                            <option value="">-- Wybierz członka --</option>
                            {% for member in availableMembers %}
                                {% if member.id != zebranie.obserwator.id and 
                                      member.id != zebranie.protokolant.id and 
                                      member.id != zebranie.prowadzacy.id and
                                      member.id != zebranie.przewodniczacy.id %}
                                    <option value="{{ member.id }}">
                                        {{ member.fullName }} (ID: {{ member.id }})
                                    </option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </div>
                    
                    <input type="hidden" name="_token" value="{{ csrf_token('wybor_zastepcy1_' ~ zebranie.id) }}">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Anuluj
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i> Wybierz Zastępcę
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

