{% block javascripts %}
    {{ parent() }}
    <script>
        // Bootstrap form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Auto-focus na pierwszym polu
        document.querySelector('input[type="text"]').focus();
        
        // Enhanced Speaker Selection System
        class EnhancedSpeakerSelection {
            constructor() {
                this.selectedSpeakers = new Set();
                this.allSpeakers = [];
                this.filteredSpeakers = [];
                this.districts = new Set();
                
                // Znajdź oryginalny select - może mieć inne ID
                this.originalSelect = document.querySelector('select[multiple][name*="mowcy"]');
                if (!this.originalSelect) {
                    console.error('Original select not found');
                    this.showFallbackMessage();
                    return;
                }
                
                this.speakersGrid = document.getElementById('speakersGrid');
                this.selectedSpeakersList = document.getElementById('selectedSpeakersList');
                this.selectedCount = document.getElementById('selectedCount');
                this.searchInput = document.getElementById('speakerSearch');
                this.typeFilter = document.getElementById('speakerTypeFilter');
                this.districtFilter = document.getElementById('districtFilter');
                
                if (!this.speakersGrid || !this.selectedSpeakersList) {
                    console.error('Required elements not found');
                    this.showFallbackMessage();
                    return;
                }
                
                this.init();
            }
            
            init() {
                this.extractSpeakersFromSelect();
                this.setupEventListeners();
                this.renderSpeakers();
                this.updateSelectedDisplay();
            }
            
            extractSpeakersFromSelect() {
                const options = this.originalSelect.querySelectorAll('option');
                if (options.length <= 1) { // Only empty option
                    this.showNoSpeakersMessage();
                    return;
                }
                
                this.allSpeakers = Array.from(options).map(option => {
                    if (option.value === '') return null;
                    
                    const fullText = option.textContent.trim();
                    const emailMatch = fullText.match(/\(([^)]+)\)$/);
                    const email = emailMatch ? emailMatch[1] : '';
                    const name = emailMatch ? fullText.replace(/\s*\([^)]+\)$/, '') : fullText;
                    
                    // Rozpoznaj typ użytkownika na podstawie email lub nazwy
                    let userType = 'czlonek';
                    let district = 'Nieznany';
                    
                    if (email.includes('funkcyjny') || name.toLowerCase().includes('prezes') || 
                        name.toLowerCase().includes('sekretarz') || name.toLowerCase().includes('wiceprezes')) {
                        userType = 'funkcyjny';
                        district = 'Ogólnopolski';
                    }
                    
                    // Dodaj okręg do listy unikalnych
                    this.districts.add(district);
                    
                    return {
                        id: option.value,
                        name: name,
                        email: email,
                        userType: userType,
                        district: district,
                        initials: this.getInitials(name),
                        isCurrentUser: option.hasAttribute('data-current-user') || name === getCurrentUserName()
                    };
                }).filter(speaker => speaker !== null);
                
                this.filteredSpeakers = [...this.allSpeakers];
                this.populateDistrictFilter();
            }
            
            getInitials(name) {
                return name.split(' ')
                    .map(word => word.charAt(0))
                    .join('')
                    .toUpperCase()
                    .substring(0, 2);
            }
            
            setupEventListeners() {
                if (this.searchInput) this.searchInput.addEventListener('input', () => this.applyFilters());
                if (this.typeFilter) this.typeFilter.addEventListener('change', () => this.applyFilters());
                if (this.districtFilter) this.districtFilter.addEventListener('change', () => this.applyFilters());
            }
            
            populateDistrictFilter() {
                if (!this.districtFilter) return;
                
                const sortedDistricts = Array.from(this.districts).sort();
                const currentOptions = this.districtFilter.innerHTML;
                
                this.districtFilter.innerHTML = '<option value="">Wszystkie okręgi</option>' +
                    sortedDistricts.map(district => 
                        `<option value="${district}">${district}</option>`
                    ).join('');
            }
            
            applyFilters() {
                const searchTerm = this.searchInput ? this.searchInput.value.toLowerCase() : '';
                const typeFilter = this.typeFilter ? this.typeFilter.value : '';
                const districtFilter = this.districtFilter ? this.districtFilter.value : '';
                
                this.filteredSpeakers = this.allSpeakers.filter(speaker => {
                    const matchesSearch = !searchTerm || 
                        speaker.name.toLowerCase().includes(searchTerm) ||
                        speaker.email.toLowerCase().includes(searchTerm);
                    
                    const matchesType = !typeFilter || speaker.userType === typeFilter;
                    const matchesDistrict = !districtFilter || speaker.district === districtFilter;
                    
                    return matchesSearch && matchesType && matchesDistrict;
                });
                
                this.renderSpeakers();
            }
            
            renderSpeakers() {
                if (this.filteredSpeakers.length === 0) {
                    this.speakersGrid.innerHTML = `
                        <div class="no-speakers-found">
                            <i class="fas fa-search"></i>
                            <p>Nie znaleziono mówców spełniających kryteria</p>
                        </div>
                    `;
                    return;
                }
                
                this.speakersGrid.innerHTML = this.filteredSpeakers
                    .map(speaker => this.createSpeakerCard(speaker))
                    .join('');
                
                // Dodaj event listenery do kart
                this.speakersGrid.querySelectorAll('.speaker-card').forEach(card => {
                    card.addEventListener('click', (e) => {
                        const speakerId = card.dataset.speakerId;
                        this.toggleSpeaker(speakerId);
                    });
                });
            }
            
            createSpeakerCard(speaker) {
                const isSelected = this.selectedSpeakers.has(speaker.id);
                let statusText = 'Członek';
                let statusClass = 'czlonek';
                
                if (speaker.userType === 'funkcyjny') {
                    statusText = 'Funkcyjny';
                    statusClass = 'funkcyjny';
                }
                
                const currentUserBadge = speaker.isCurrentUser ? 
                    '<span class="badge bg-info ms-2">Ty</span>' : '';
                
                return `
                    <div class="speaker-card ${isSelected ? 'selected' : ''}" data-speaker-id="${speaker.id}">
                        <div class="speaker-avatar ${statusClass}">
                            ${speaker.initials}
                        </div>
                        <div class="speaker-info flex-grow-1">
                            <div class="speaker-name fw-bold d-flex align-items-center">
                                ${speaker.name}${currentUserBadge}
                            </div>
                            <div class="speaker-details">
                                <small class="text-muted">${statusText}</small>
                                ${speaker.district !== 'Nieznany' ? `<small class="text-muted"> • ${speaker.district}</small>` : ''}
                            </div>
                        </div>
                        <div class="speaker-actions">
                            ${isSelected ? '<i class="fas fa-check-circle text-success"></i>' : '<i class="fas fa-plus-circle text-muted"></i>'}
                        </div>
                    </div>
                `;
            }
            
            toggleSpeaker(speakerId) {
                if (this.selectedSpeakers.has(speakerId)) {
                    this.selectedSpeakers.delete(speakerId);
                } else {
                    this.selectedSpeakers.add(speakerId);
                }
                
                this.updateSelectedDisplay();
                this.updateOriginalSelect();
                this.renderSpeakers(); // Re-render to update selected states
            }
            
            updateSelectedDisplay() {
                const count = this.selectedSpeakers.size;
                this.selectedCount.textContent = count;
                
                if (count === 0) {
                    this.selectedSpeakersList.innerHTML = `
                        <div class="no-selection text-muted text-center py-2">
                            <small>Nie wybrano żadnych mówców</small>
                        </div>
                    `;
                } else {
                    const selectedSpeakersData = this.allSpeakers.filter(speaker => 
                        this.selectedSpeakers.has(speaker.id)
                    );
                    
                    this.selectedSpeakersList.innerHTML = selectedSpeakersData
                        .map(speaker => `
                            <div class="selected-speaker-item">
                                <span>${speaker.name}</span>
                                <button type="button" class="remove-speaker" onclick="speakerSelection.toggleSpeaker('${speaker.id}')">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        `)
                        .join('');
                }
            }
            
            updateOriginalSelect() {
                // Wyczyść wszystkie wybory
                Array.from(this.originalSelect.options).forEach(option => {
                    option.selected = this.selectedSpeakers.has(option.value);
                });
            }
            
            showFallbackMessage() {
                const speakersGrid = document.getElementById('speakersGrid');
                if (speakersGrid) {
                    speakersGrid.innerHTML = `
                        <div class="alert alert-warning">
                            <h6><i class="fas fa-exclamation-triangle me-2"></i>Problem z ładowaniem interfejsu</h6>
                            <p class="mb-0">Nie można załadować ulepszonego interfejsu wyboru mówców. 
                               Proszę odświeżyć stronę lub skontaktować się z administratorem.</p>
                        </div>
                    `;
                }
            }
            
            showNoSpeakersMessage() {
                const speakersGrid = document.getElementById('speakersGrid');
                if (speakersGrid) {
                    speakersGrid.innerHTML = `
                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle me-2"></i>Brak dostępnych mówców</h6>
                            <p class="mb-0">W systemie nie ma jeszcze żadnych użytkowników z uprawnieniami mówcy 
                               (członkowie lub kandydaci). Skontaktuj się z administratorem systemu.</p>
                        </div>
                    `;
                }
                
                // Ukryj też sekcję wybranych mówców
                const selectedSpeakers = document.getElementById('selectedSpeakers');
                if (selectedSpeakers) {
                    selectedSpeakers.style.display = 'none';
                }
            }
        }
        
        // Helper function to get current user name (if available)
        function getCurrentUserName() {
