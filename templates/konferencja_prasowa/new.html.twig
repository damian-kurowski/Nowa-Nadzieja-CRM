        // Initialize speaker selection system
        let speakerSelection;
        document.addEventListener('DOMContentLoaded', function() {
            // Wait a bit for Symfony to fully render the form
            setTimeout(function() {
                speakerSelection = new EnhancedSpeakerSelection();
            }, 100);
        });
