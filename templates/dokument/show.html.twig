{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add print functionality (Ctrl+P)
            document.addEventListener('keydown', function(e) {
                if (e.ctrlKey && e.key === 'p') {
                    e.preventDefault();
                    window.print();
                }
            });
            
            // Copy document number to clipboard
            const documentNumber = '{{ dokument.numerDokumentu }}';
            document.addEventListener('keydown', function(e) {
                if (e.ctrlKey && e.key === 'c' && e.shiftKey) {
                    e.preventDefault();
                    copyDocumentNumber();
                }
            });
        });
        
        function copyDocumentNumber() {
            const documentNumber = '{{ dokument.numerDokumentu }}';
            navigator.clipboard.writeText(documentNumber).then(function() {
                showToast('Numer dokumentu skopiowany do schowka', 'success');
            }).catch(function() {
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = documentNumber;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                showToast('Numer dokumentu skopiowany do schowka', 'success');
            });
        }
        
        function showToast(message, type = 'info') {
            // Simple toast notification
            const toast = document.createElement('div');
            toast.className = `alert alert-${type} position-fixed`;
            toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            toast.innerHTML = `
                ${message}
                <button type="button" class="btn-close" onclick="this.parentElement.remove()"></button>
            `;
            
            document.body.appendChild(toast);
            
            setTimeout(() => {
                if (toast.parentElement) {
                    toast.remove();
                }
            }, 3000);
        }
    </script>
