{% extends 'base.html.twig' %}

{% block title %}{{ dokument.numerDokumentu }} - CRM Nowa Nadzieja{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/documents-theme.css') }}">
    <style>
        /* Enhanced Document Show Header */
        .document-show-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 20px;
            padding: 3rem 2rem;
            margin-bottom: 2rem;
            color: white;
            position: relative;
            overflow: hidden;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            transform: translateY(0);
            transition: all 0.3s ease;
        }

        .document-show-header:hover {
            transform: translateY(-5px);
            box-shadow: 0 35px 60px -12px rgba(0, 0, 0, 0.35);
        }

        .document-show-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
            animation: float 25s ease-in-out infinite;
        }

        .document-show-header::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 20% 80%, rgba(255,255,255,0.1) 0%, transparent 50%),
                        radial-gradient(circle at 80% 20%, rgba(255,255,255,0.1) 0%, transparent 50%);
            pointer-events: none;
        }

        @keyframes float {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            25% { transform: translate(-15px, -10px) rotate(90deg); }
            50% { transform: translate(10px, -15px) rotate(180deg); }
            75% { transform: translate(15px, 10px) rotate(270deg); }
        }

        .header-icon {
            width: 90px;
            height: 90px;
            background: rgba(255,255,255,0.25);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.8rem;
            backdrop-filter: blur(15px);
            margin-bottom: 1.5rem;
            position: relative;
            z-index: 10;
            transition: all 0.3s ease;
            animation: pulse 3s ease-in-out infinite;
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .header-icon:hover {
            transform: scale(1.1) rotate(10deg);
            background: rgba(255,255,255,0.35);
        }
        
        .document-meta {
            font-size: 1.1rem;
            opacity: 0.9;
        }
        
        .doc-number {
            font-family: 'Courier New', monospace;
            font-weight: 600;
            letter-spacing: 1px;
        }
        
        .doc-type {
            font-size: 0.95rem;
            opacity: 0.8;
            margin-top: 0.5rem;
        }

        /* Status badges */
        .enhanced-status-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.375rem 0.75rem;
            border-radius: 0.5rem;
            font-weight: 500;
            font-size: 0.875rem;
            color: white;
        }

        .enhanced-status-badge.bg-warning {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        }

        .enhanced-status-badge.bg-success {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }

        .enhanced-status-badge.bg-danger {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        }

        .enhanced-status-badge.bg-secondary {
            background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
        }

        /* Cards */
        .document-content-card, .info-card, .signatures-card, .actions-card, .integrity-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            margin-bottom: 2rem;
            overflow: hidden;
            transform: translateY(0);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border: 1px solid rgba(0, 0, 0, 0.05);
