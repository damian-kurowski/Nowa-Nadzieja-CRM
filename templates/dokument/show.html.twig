{% extends 'base.html.twig' %}

{% block title %}{{ dokument.numerDokumentu }} - CRM Nowa Nadzieja{% endblock %}

{% block page_title %}{{ dokument.numerDokumentu }}{% endblock %}

{% block body %}
    <!-- Enhanced Document Header -->
    <div class="document-show-header">
        <div class="text-center">
            <div class="header-icon mx-auto">
                <i class="fas fa-file-signature"></i>
            </div>
            <h1 class="mb-2">{{ dokument.tytul }}</h1>
            <div class="document-meta mb-2">
                <span class="doc-number">{{ dokument.numerDokumentu }}</span>
                <span class="mx-2">•</span>
                <span class="doc-type">{{ dokument.typDisplayName }}</span>
            </div>
            <div class="status-display">
                <span class="enhanced-status-badge {{ dokument.statusBadgeClass }}">
                    <i class="fas fa-circle"></i>
                    {{ dokument.statusDisplayName }}
                </span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Integrity Warning -->
            {% if not isIntegrityValid %}
                <div class="integrity-warning">
                    <div class="d-flex align-items-start">
                        <div class="flex-shrink-0">
                            <div class="warning-icon">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="mb-1 text-danger">Naruszenie integralności!</h5>
                            <p class="mb-0">Wykryto naruszenie integralności dokumentu. Dokument mógł zostać zmodyfikowany po utworzeniu.</p>
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Enhanced Document Content -->
            <div class="document-content-card">
                <div class="content-header">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt me-2"></i>Treść dokumentu
                    </h5>
                </div>
                <div class="content-body">
                    <div class="enhanced-document-content">
                        {{ dokument.tresc|nl2br }}
                    </div>
                </div>
            </div>

            <!-- Enhanced Cancellation Notice -->
            {% if dokument.status == 'anulowany' %}
                <div class="cancellation-notice">
                    <div class="d-flex align-items-start">
                        <div class="flex-shrink-0">
                            <div class="cancel-icon">
                                <i class="fas fa-ban"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="mb-1 text-danger">Dokument anulowany</h5>
                            <p class="mb-0">Ten dokument został anulowany i nie można go już podpisać ani edytować.</p>
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Enhanced Actions Section -->
            {% if (canSign or dokument.status == 'podpisany' or isViewOnlyForAdmin) and dokument.status != 'anulowany' %}
                <div class="actions-card">
                    <div class="actions-header">
                        <h5 class="mb-0">
                            <i class="fas fa-tools me-2"></i>Akcje
                        </h5>
                    </div>
                    <div class="actions-body">
                        {% if isViewOnlyForAdmin %}
                            <div class="admin-notice">
                                <i class="fas fa-info-circle me-2"></i>
                                Przeglądasz dokument z okręgu <strong>{{ dokument.okreg ? dokument.okreg.nazwa : 'Brak przypisania' }}</strong> 
                                w trybie tylko do odczytu.
                            </div>
                        {% endif %}
                        
                        <div class="action-buttons d-flex gap-3 flex-wrap">
                            {% if canSign %}
                                <a href="{{ path('dokument_sign', {id: dokument.id}) }}" class="btn btn-enhanced btn-success-gradient">
                                    <i class="fas fa-signature me-2"></i>Podpisz dokument
                                </a>
                                <a href="{{ path('dokument_reject', {id: dokument.id}) }}" class="btn btn-enhanced btn-danger-gradient">
                                    <i class="fas fa-times me-2"></i>Odrzuć dokument
                                </a>
                            {% endif %}
                            
                            {% if dokument.status == 'podpisany' %}
                                <a href="{{ path('dokument_pdf', {id: dokument.id}) }}" class="btn btn-enhanced btn-pdf-gradient">
                                    <i class="fas fa-file-pdf me-2"></i>Pobierz PDF
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="col-lg-4">
            <!-- Enhanced Document Information -->
            <div class="info-card mb-4">
                <div class="info-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Informacje o dokumencie
                    </h5>
                </div>
                <div class="info-body">
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-label">
                                <i class="fas fa-hashtag me-2"></i>Numer dokumentu
                            </div>
                            <div class="info-value font-monospace">{{ dokument.numerDokumentu }}</div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-label">
                                <i class="fas fa-file-alt me-2"></i>Typ dokumentu
                            </div>
                            <div class="info-value">
                                <span class="type-badge">{{ dokument.typDisplayName }}</span>
                            </div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-label">
                                <i class="fas fa-flag me-2"></i>Status
                            </div>
                            <div class="info-value">
                                <span class="status-badge {{ dokument.statusBadgeClass }}">
                                    <i class="fas fa-circle me-1"></i>{{ dokument.statusDisplayName }}
                                </span>
                            </div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-label">
                                <i class="fas fa-user me-2"></i>Utworzył
                            </div>
                            <div class="info-value">{{ dokument.tworca.fullName }}</div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-label">
                                <i class="fas fa-calendar-plus me-2"></i>Data utworzenia
                            </div>
                            <div class="info-value">{{ dokument.dataUtworzenia|date('d.m.Y H:i') }}</div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-label">
                                <i class="fas fa-map-marker-alt me-2"></i>Okręg
                            </div>
                            <div class="info-value">{{ dokument.okreg ? dokument.okreg.nazwa : 'Brak przypisania' }}</div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-label">
                                <i class="fas fa-calendar-check me-2"></i>Wejście w życie
                            </div>
                            <div class="info-value">{{ dokument.dataWejsciaWZycie|date('d.m.Y') }}</div>
                        </div>
                        
                        {% if dokument.dataPodpisania %}
                            <div class="info-item">
                                <div class="info-label">
                                    <i class="fas fa-signature me-2"></i>Data podpisania
                                </div>
                                <div class="info-value text-success">
                                    <i class="fas fa-check me-1"></i>
                                    {{ dokument.dataPodpisania|date('d.m.Y H:i') }}
                                </div>
                            </div>
                        {% endif %}
                        
                        {% if dokument.kandydat %}
                            <div class="info-item">
                                <div class="info-label">
                                    <i class="fas fa-user-tag me-2"></i>Dotyczy
                                </div>
                                <div class="info-value">
                                    <strong>{{ dokument.kandydat.fullName }}</strong>
                                    <small class="text-muted d-block">{{ dokument.kandydat.email }}</small>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Enhanced Signatures Section -->
            <div class="signatures-card mb-4">
                <div class="signatures-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-users me-2"></i>Status podpisów
                        </h5>
                        <div class="signature-counter">
                            {% set signedCount = 0 %}
                            {% for podpis in dokument.podpisy %}
                                {% if podpis.signed %}
                                    {% set signedCount = signedCount + 1 %}
                                {% endif %}
                            {% endfor %}
                            <span class="count-badge">{{ signedCount }}/{{ dokument.podpisy|length }}</span>
                        </div>
                    </div>
                </div>
                <div class="signatures-body">
                    <!-- Enhanced Progress bar -->
                    {% set totalSignatures = dokument.podpisy|length %}
                    {% set progressPercent = totalSignatures > 0 ? (signedCount / totalSignatures * 100)|round : 0 %}
                    <div class="enhanced-progress mb-4">
                        <div class="progress-label d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">Postęp podpisów</span>
                            <span class="progress-percentage">{{ progressPercent }}%</span>
                        </div>
                        <div class="progress-bar-container">
                            <div class="progress-bar-fill" style="width: {{ progressPercent }}%"></div>
                        </div>
                    </div>

                    <!-- Enhanced Signatures List -->
                    <div class="signatures-list">
                        {% for podpis in dokument.podpisy %}
                            <div class="enhanced-signature-item {{ podpis.signed ? 'signed' : (podpis.rejected ? 'rejected' : 'pending') }}">
                                <div class="signature-main">
                                    <div class="signature-step">
                                        <div class="step-circle">{{ podpis.kolejnosc }}</div>
                                        <div class="signature-user">
                                            <div class="user-name">{{ podpis.podpisujacyFullInfo }}</div>
                                            {% if podpis.podpisujacy == app.user %}
                                                <span class="current-user-badge">To Ty</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="signature-status">
                                        <span class="enhanced-status-badge {{ podpis.statusBadgeClass }}">
                                            {% if podpis.signed %}
                                                <i class="fas fa-check me-1"></i>
                                            {% elseif podpis.rejected %}
                                                <i class="fas fa-times me-1"></i>
                                            {% else %}
                                                <i class="fas fa-clock me-1"></i>
                                            {% endif %}
                                            {{ podpis.statusDisplayName }}
                                        </span>
                                    </div>
                                </div>
                                
                                {% if podpis.dataPodpisania %}
                                    <div class="signature-meta">
                                        <div class="meta-item">
                                            <i class="fas fa-calendar me-1"></i>
                                            {{ podpis.dataPodpisania|date('d.m.Y H:i') }}
                                        </div>
                                        {% if podpis.adresIp %}
                                            <div class="meta-item">
                                                <i class="fas fa-globe me-1"></i>
                                                IP: {{ podpis.adresIp }}
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endif %}
                                
                                {% if podpis.komentarz %}
                                    <div class="signature-comment">
                                        <div class="comment-content">
                                            <i class="fas fa-comment me-2"></i>
                                            <em>{{ podpis.komentarz }}</em>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                            
                            {% if not loop.last %}
                                <div class="signature-divider"></div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Enhanced Integrity Verification -->
            {% if isIntegrityValid %}
                <div class="integrity-card">
                    <div class="integrity-header">
                        <h5 class="mb-0 text-success">
                            <i class="fas fa-shield-alt me-2"></i>Weryfikacja integralności
                        </h5>
                    </div>
                    <div class="integrity-body">
                        <div class="integrity-status">
                            <div class="status-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="status-text">
                                <div class="status-title">Dokument zweryfikowany</div>
                                <div class="status-description">Dokument nie został zmodyfikowany od momentu utworzenia</div>
                            </div>
                        </div>
                        <div class="hash-display">
                            <small class="text-muted">
                                <i class="fas fa-fingerprint me-1"></i>
                                Hash: <code>{{ dokument.hashDokumentu|slice(0, 16) }}...</code>
                            </small>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Enhanced Navigation -->
    <div class="document-navigation">
        <div class="nav-buttons">
            <a href="{{ path('dokument_index') }}" class="btn btn-enhanced btn-outline-primary">
                <i class="fas fa-arrow-left me-2"></i>Powrót do listy
            </a>
            <button onclick="window.print()" class="btn btn-enhanced btn-outline-secondary">
                <i class="fas fa-print me-2"></i>Drukuj
            </button>
            <button onclick="copyDocumentNumber()" class="btn btn-enhanced btn-outline-info" title="Skopiuj numer dokumentu (Ctrl+Shift+C)">
                <i class="fas fa-copy me-2"></i>Kopiuj numer
            </button>
        </div>
        <div class="breadcrumb-enhanced">
            <span class="breadcrumb-item">
                <a href="{{ path('dokument_index') }}">Dokumenty</a>
            </span>
            <span class="breadcrumb-separator">/</span>
            <span class="breadcrumb-item active">{{ dokument.numerDokumentu }}</span>
        </div>
    </div>
{% endblock %}

