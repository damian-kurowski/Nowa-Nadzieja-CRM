        }

        /* Warning and integrity */
        .integrity-warning {
            background: linear-gradient(135deg, #fef2f2 0%, #fef1f1 100%);
            border: 1px solid #fecaca;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .warning-icon {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
        }

        .cancellation-notice {
            background: linear-gradient(135deg, #fef2f2 0%, #fef1f1 100%);
            border: 1px solid #fecaca;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .cancel-icon {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
        }

        .integrity-status {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .status-icon {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
        }

        .status-title {
            font-weight: 600;
            color: #10b981;
            font-size: 1.1rem;
        }

        .status-description {
            color: #6b7280;
            font-size: 0.875rem;
        }

        /* Enhanced buttons */
        .btn-enhanced {
            padding: 0.75rem 1.5rem;
            border-radius: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            border: none;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            white-space: nowrap;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .document-show-header {
                padding: 2rem 1.5rem;
                margin-bottom: 1.5rem;
            }

            .header-icon {
                width: 70px;
                height: 70px;
                font-size: 2.2rem;
            }

            .content-body, .info-body, .signatures-body, .actions-body, .integrity-body {
                padding: 1.5rem;
            }

            .action-buttons {
                flex-direction: column !important;
                gap: 1rem !important;
            }

            .btn-enhanced {
                width: 100%;
                justify-content: center;
                padding: 1rem;
            }

            .info-grid {
                gap: 1rem;
            }
        }

        @media (max-width: 480px) {
            .document-show-header {
                padding: 1.5rem 1rem;
            }

            .content-body, .info-body, .signatures-body, .actions-body, .integrity-body {
