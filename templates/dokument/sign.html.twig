{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Force absolute URL for documents-theme.css to ensure proper loading -->
    <link rel="stylesheet" href="/css/documents-theme.css">
    <style>
        /* Critical document theme styles inline as fallback */
        .doc-container {
            background-color: #f8f9fa;
            min-height: 100vh;
            padding: 2rem 0;
        }

        /* Enhanced Document Signing Header */
        .document-signing-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 16px;
            padding: 3rem 2rem;
            margin-bottom: 2rem;
            color: white;
            position: relative;
            overflow: hidden;
        }
        
        .document-signing-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: float 20s ease-in-out infinite;
        }
        
        @keyframes float {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            33% { transform: translate(-10px, -10px) rotate(120deg); }
            66% { transform: translate(10px, -10px) rotate(240deg); }
        }
        
        .header-icon {
            width: 80px;
            height: 80px;
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            backdrop-filter: blur(10px);
            margin-bottom: 1.5rem;
        }
        
        .document-meta {
            font-size: 1.1rem;
            opacity: 0.9;
        }
        
        .doc-title {
            font-weight: 600;
            font-size: 1.1rem;
        }
        
        .doc-number {
            font-family: 'Courier New', monospace;
            font-weight: 600;
            letter-spacing: 1px;
        }

        /* Document Preview Card */
        .document-preview-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .preview-header {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 1.5rem;
            border-bottom: 1px solid #dee2e6;
        }

        /* Signature pad styles */
        .signature-pad {
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            background: white;
        }

        .signature-buttons {
            display: flex;
            gap: 0.5rem;
            margin-top: 1rem;
        }

        .btn-clear {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            font-weight: 500;
        }

        .btn-enhanced {
            padding: 0.75rem 1.5rem;
            border-radius: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            border: none;
        }

        .btn-success-gradient {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
        }

        .btn-enhanced:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }

        /* Signature form card */
        .signature-form-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 2rem;
        }

        .signature-header {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 1.5rem;
            border-bottom: 1px solid #dee2e6;
        }

        .signature-body {
            padding: 2rem;
        }

        .form-section {
            margin-bottom: 2rem;
        }

        .form-section h6 {
            color: #374151;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        /* Enhanced document preview */
        .enhanced-document-preview {
            background: #f8f9fa;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            padding: 2rem;
            font-family: Georgia, serif;
            line-height: 1.8;
            color: #374151;
        }

        /* Preview actions */
        .preview-actions {
            display: flex;
            gap: 0.5rem;
        }

        .preview-body {
            padding: 2rem;
        }

        /* Form elements */
        .form-label {
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.5rem;
        }

        .form-control {
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            padding: 0.75rem;
            transition: border-color 0.2s ease;
        }

        .form-control:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        }

        /* Signature canvas container */
        .signature-canvas-container {
            border: 2px dashed #d1d5db;
            border-radius: 8px;
            padding: 1rem;
            background: #fafafa;
            text-align: center;
            min-height: 200px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .signature-canvas-container.has-signature {
            border-color: #10b981;
            background: #f0fdf4;
        }

        /* Alert styles */
        .alert {
            border: none;
            border-radius: 8px;
            padding: 1rem 1.5rem;
            margin-bottom: 1.5rem;
        }

        .alert-info {
            background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
            color: #1e40af;
            border-left: 4px solid #3b82f6;
        }

        .alert-success {
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            color: #065f46;
            border-left: 4px solid #10b981;
        }

        .alert-warning {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            color: #92400e;
            border-left: 4px solid #f59e0b;
        }

        .alert-danger {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
            border-left: 4px solid #ef4444;
        }

        /* Button groups */
        .btn-group {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        /* Enhanced form sections */
        .enhanced-form-section {
            background: white;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .section-title {
            color: #111827;
            font-weight: 600;
            font-size: 1.125rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        /* Action buttons area */
        .action-buttons-area {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 2rem;
            border-radius: 12px;
            margin-top: 2rem;
        }

        /* Document info sidebar */
        .document-info-sidebar {
            position: sticky;
            top: 2rem;
        }

        .info-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 2rem;
        }

        .info-header {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 1.5rem;
            border-bottom: 1px solid #dee2e6;
        }

        .info-body {
            padding: 2rem;
        }

        .info-grid {
            display: grid;
            gap: 1.5rem;
        }

        .info-item {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .info-label {
            font-weight: 600;
            color: #6b7280;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .info-value {
            font-weight: 500;
            color: #111827;
        }

        /* Status indicators */
        .status-indicator {
            display: inline-flex;
            align-items: center;
            padding: 0.375rem 0.75rem;
            border-radius: 1rem;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .status-indicator.pending {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            color: #92400e;
        }

        .status-indicator.completed {
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            color: #065f46;
        }

        /* Loading states */
        .loading-spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 2px solid #f3f4f6;
            border-radius: 50%;
            border-top-color: #3b82f6;
            animation: spin 1s ease-in-out infinite;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Missing CSS classes */
        .legal-warning {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            border: 1px solid #f59e0b;
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .warning-icon {
            width: 40px;
            height: 40px;
            background: rgba(245, 158, 11, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #f59e0b;
            font-size: 1.125rem;
        }

        .signature-section {
            background: #f8f9fa;
            border: 1px solid #e9ecef;
            border-radius: 12px;
            padding: 2rem;
        }

        .signature-section-header h6 {
            color: #374151;
            font-weight: 600;
        }

        .signature-controls {
            margin-top: 1rem;
        }

        .signature-status .status-indicator {
            font-size: 0.875rem;
        }

        .status-indicator.empty {
            background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
            color: #6b7280;
        }

        .status-indicator.filled {
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            color: #065f46;
        }

        .comment-section {
            margin-bottom: 2rem;
        }

        .form-group-enhanced .form-control {
            min-height: 120px;
            resize: vertical;
        }

        .confirmation-section {
            background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
            border: 1px solid #0284c7;
            border-radius: 12px;
            padding: 2rem;
        }

        .confirmation-card {
            background: transparent;
        }

        .confirmation-header h6 {
            color: #0c4a6e;
            margin-bottom: 1rem;
        }

        .enhanced-form-check {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
        }

        .enhanced-form-check .form-check-input {
            margin-top: 0.25rem;
            flex-shrink: 0;
        }

        .confirmation-list {
            margin: 0.5rem 0 0 0;
            padding-left: 1.5rem;
            list-style-type: disc;
        }

        .confirmation-list li {
            margin-bottom: 0.25rem;
            color: #374151;
        }

        .signature-actions-section {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 12px;
            padding: 2rem;
            margin-top: 2rem;
        }

        .security-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.375rem 0.75rem;
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            color: #065f46;
            border-radius: 1rem;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .signature-security-info {
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid #e5e7eb;
            text-align: center;
        }

        .progress-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 2rem;
        }

        .progress-header {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 1.5rem;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            justify-content: between;
            align-items: center;
        }

        .progress-counter {
            margin-left: auto;
        }

        .count-badge {
            background: #e5e7eb;
            color: #374151;
            padding: 0.25rem 0.75rem;
            border-radius: 1rem;
            font-weight: 600;
            font-size: 0.875rem;
        }

        .progress-body {
            padding: 2rem;
        }

        .enhanced-progress {
            margin-bottom: 2rem;
        }

        .progress-label {
            font-size: 0.875rem;
            margin-bottom: 0.5rem;
        }

        .progress-percentage {
            font-weight: 600;
            color: #059669;
        }

        .progress-bar-container {
            width: 100%;
            height: 8px;
            background: #e5e7eb;
            border-radius: 4px;
            overflow: hidden;
        }

        .progress-bar-fill {
            height: 100%;
            background: linear-gradient(90deg, #10b981 0%, #059669 100%);
            border-radius: 4px;
            transition: width 0.3s ease;
        }

        .signatures-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .enhanced-signature-item {
            background: #f8f9fa;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            padding: 1.5rem;
            transition: all 0.3s ease;
        }

        .enhanced-signature-item.current-user {
            border-color: #3b82f6;
            background: #eff6ff;
        }

        .enhanced-signature-item.signed {
            border-color: #10b981;
            background: #f0fdf4;
        }

        .enhanced-signature-item.rejected {
            border-color: #ef4444;
            background: #fef2f2;
        }

        .signature-main {
            display: flex;
            justify-content: between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .signature-step {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .step-circle {
            width: 40px;
            height: 40px;
            background: #e5e7eb;
            border: 2px solid #d1d5db;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: #374151;
        }

        .signature-user {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .user-name {
            font-weight: 600;
            color: #111827;
        }

        .current-user-badge {
            background: #3b82f6;
            color: white;
            padding: 0.125rem 0.5rem;
            border-radius: 0.75rem;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .signature-status {
            margin-left: auto;
        }

        .enhanced-status-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.375rem 0.75rem;
            border-radius: 1rem;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .signature-meta {
            margin-top: 0.5rem;
            padding-top: 0.5rem;
            border-top: 1px solid #e5e7eb;
        }

        .meta-item {
            color: #6b7280;
            font-size: 0.875rem;
        }

        .signature-comment {
            margin-top: 0.5rem;
            padding: 0.75rem;
            background: rgba(59, 130, 246, 0.05);
            border-radius: 6px;
        }

        .comment-content {
            color: #374151;
            font-size: 0.875rem;
        }

        .signature-divider {
            height: 1px;
            background: #e5e7eb;
            margin: 0.5rem 0;
        }

        .type-badge {
            background: #e5e7eb;
            color: #374151;
            padding: 0.25rem 0.75rem;
            border-radius: 1rem;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .btn-secondary-gradient {
            background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
            color: white;
        }

        .btn-danger-gradient {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: white;
        }

        /* Additional critical styles */
        .signature-pad {
            width: 100%;
            height: 200px;
            border: 2px dashed #d1d5db !important;
            background-color: white !important;
            cursor: crosshair;
        }

        .enhanced-signature-pad-container {
            position: relative;
            margin: 1rem 0;
        }

        .signature-placeholder {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            pointer-events: none;
            color: #9ca3af;
            font-size: 1.125rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            z-index: 1;
        }

        .signature-overlay {
            position: absolute;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            pointer-events: none;
        }

        .signature-line {
            width: 300px;
            border-bottom: 2px solid #e5e7eb;
            margin-bottom: 4px;
        }

        .signature-line-label {
            color: #9ca3af;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Dark theme support */
        [data-bs-theme="dark"] .doc-container,
        body[data-bs-theme="dark"] .doc-container {
            background-color: #0d1117;
            color: #f0f6fc;
        }

        [data-bs-theme="dark"] .document-signing-header,
        body[data-bs-theme="dark"] .document-signing-header {
            background: linear-gradient(135deg, #1f2937 0%, #374151 100%);
            border: 1px solid #30363d;
        }

        [data-bs-theme="dark"] .document-preview-card,
        [data-bs-theme="dark"] .signature-form-card,
        [data-bs-theme="dark"] .info-card,
        [data-bs-theme="dark"] .progress-card,
        body[data-bs-theme="dark"] .document-preview-card,
        body[data-bs-theme="dark"] .signature-form-card,
        body[data-bs-theme="dark"] .info-card,
        body[data-bs-theme="dark"] .progress-card {
            background: #161b22;
            border: 1px solid #30363d;
            color: #f0f6fc;
        }

        [data-bs-theme="dark"] .preview-header,
        [data-bs-theme="dark"] .signature-header,
        [data-bs-theme="dark"] .info-header,
        [data-bs-theme="dark"] .progress-header,
        body[data-bs-theme="dark"] .preview-header,
        body[data-bs-theme="dark"] .signature-header,
        body[data-bs-theme="dark"] .info-header,
        body[data-bs-theme="dark"] .progress-header {
            background: #21262d;
            border-bottom-color: #30363d;
            color: #f0f6fc;
        }

        [data-bs-theme="dark"] .enhanced-document-preview,
        body[data-bs-theme="dark"] .enhanced-document-preview {
            background: #0d1117;
            border-color: #30363d;
            color: #f0f6fc;
        }

        [data-bs-theme="dark"] .signature-pad,
        body[data-bs-theme="dark"] .signature-pad {
            background-color: #161b22 !important;
            border-color: #30363d !important;
        }

        [data-bs-theme="dark"] .signature-canvas-container,
        body[data-bs-theme="dark"] .signature-canvas-container {
            background: #0d1117;
            border-color: #30363d;
            color: #8b949e;
            }

        [data-bs-theme="dark"] .signature-canvas-container.has-signature,
        body[data-bs-theme="dark"] .signature-canvas-container.has-signature {
            border-color: #238636;
            background: #0d1520;
            }

        [data-bs-theme="dark"] .form-control,
        body[data-bs-theme="dark"] .form-control {
            background-color: #0d1117;
            border-color: #30363d;
            color: #f0f6fc;
            }

        [data-bs-theme="dark"] .form-control:focus,
        body[data-bs-theme="dark"] .form-control:focus {
            background-color: #161b22;
            border-color: #388bfd;
            box-shadow: 0 0 0 3px rgba(56, 139, 253, 0.1);
            color: #f0f6fc;
            }

        [data-bs-theme="dark"] .btn-enhanced,
        body[data-bs-theme="dark"] .btn-enhanced {
            border-color: #30363d;
            }

        [data-bs-theme="dark"] .btn-secondary-gradient,
        body[data-bs-theme="dark"] .btn-secondary-gradient {
            background: linear-gradient(135deg, #21262d 0%, #30363d 100%);
            color: #f0f6fc;
            border-color: #30363d;
            }

        [data-bs-theme="dark"] .btn-danger-gradient,
        body[data-bs-theme="dark"] .btn-danger-gradient {
            background: linear-gradient(135deg, #da3633 0%, #b91c1c 100%);
            color: #ffffff;
            }

        [data-bs-theme="dark"] .enhanced-signature-item,
        body[data-bs-theme="dark"] .enhanced-signature-item {
            background: #0d1117;
            border-color: #30363d;
            color: #f0f6fc;
            }

        [data-bs-theme="dark"] .enhanced-signature-item.signed,
        body[data-bs-theme="dark"] .enhanced-signature-item.signed {
            background: #0d1520;
            border-color: #238636;
            }

        [data-bs-theme="dark"] .enhanced-signature-item.rejected,
        body[data-bs-theme="dark"] .enhanced-signature-item.rejected {
            background: #1c1012;
            border-color: #da3633;
            }

        [data-bs-theme="dark"] .step-circle,
        body[data-bs-theme="dark"] .step-circle {
            background: #21262d;
            border-color: #30363d;
            color: #f0f6fc;
            }

        [data-bs-theme="dark"] .enhanced-signature-item.signed .step-circle,
        body[data-bs-theme="dark"] .enhanced-signature-item.signed .step-circle {
            background: #238636;
            border-color: #2ea043;
            color: #ffffff;
            }

        [data-bs-theme="dark"] .progress-bar-fill,
        body[data-bs-theme="dark"] .progress-bar-fill {
            background: linear-gradient(90deg, #238636 0%, #2ea043 100%);
            }

        [data-bs-theme="dark"] .signature-line,
        body[data-bs-theme="dark"] .signature-line {
            border-bottom-color: #30363d;
            }

        [data-bs-theme="dark"] .signature-placeholder,
        body[data-bs-theme="dark"] .signature-placeholder {
            color: #6e7681;
            }

        [data-bs-theme="dark"] .form-label,
        [data-bs-theme="dark"] .section-title,
        [data-bs-theme="dark"] .info-label,
        body[data-bs-theme="dark"] .form-label,
        body[data-bs-theme="dark"] .section-title,
        body[data-bs-theme="dark"] .info-label {
            color: #f0f6fc;
            }

        [data-bs-theme="dark"] .text-muted,
        body[data-bs-theme="dark"] .text-muted {
            color: #8b949e !important;
            }

        [data-bs-theme="dark"] .alert-info,
        body[data-bs-theme="dark"] .alert-info {
            background: linear-gradient(135deg, #0d1520 0%, #0c1116 100%);
            color: #79c0ff;
            border-left-color: #1f6feb;
            }

