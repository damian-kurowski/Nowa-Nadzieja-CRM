            position: relative;
            background: #ffffff;
            border: 3px solid #dee2e6;
            border-radius: 12px;
            overflow: hidden;
            height: 220px;
            transition: all 0.3s ease;
            box-shadow: inset 0 2px 8px rgba(0,0,0,0.1);
        }
        
        .enhanced-signature-pad-container:hover {
            border-color: #28a745;
        }
        
        .enhanced-signature-pad-container.has-signature {
            border-color: #28a745;
            box-shadow: 0 0 0 0.25rem rgba(40, 167, 69, 0.25);
        }
        
        .signature-placeholder {
            position: absolute;
            top: 50%;
            left: 50%;
