            text-align: center;
            z-index: 1;
            pointer-events: none;
            transition: all 0.3s ease;
        }
        
        .signature-placeholder i {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            display: block;
        }
        
        .signature-pad {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            cursor: crosshair;
            z-index: 2;
        }
        
        .signature-overlay {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            pointer-events: none;
            z-index: 1;
        }
        
        .signature-line {
            width: 200px;
            height: 1px;
            background: #dee2e6;
            position: relative;
        }
        
        .signature-line-label {
            position: absolute;
            top: 5px;
            left: 50%;
            transform: translateX(-50%);
            color: #6c757d;
            font-size: 0.75rem;
        }
        
        .signature-controls {
            margin-top: 1rem;
        }
        
        .signature-status .status-indicator {
            display: flex;
            align-items: center;
            font-size: 0.875rem;
            font-weight: 500;
        }
        
        .signature-status .status-indicator.empty {
            color: #6c757d;
        }
        
        .signature-status .status-indicator.filled {
            color: #28a745;
        }
        
        .signature-status .status-indicator i {
            margin-right: 0.5rem;
            font-size: 0.75rem;
        }
        
        /* Comment Section */
