{% extends 'base.html.twig' %}

{% block title %}Podpis dokumentu - {{ dokument.numerDokumentu }}{% endblock %}

{% block page_title %}Podpis dokumentu{% endblock %}

{% block body %}
    <!-- Enhanced Document Signing Header -->
    <div class="document-signing-header">
        <div class="text-center">
            <div class="header-icon mx-auto">
                <i class="fas fa-signature"></i>
            </div>
            <h1 class="mb-2">Podpis dokumentu</h1>
            <div class="document-meta mb-2">
                <span class="doc-title">{{ dokument.tytul }}</span>
                <span class="mx-2">•</span>
                <span class="doc-number">{{ dokument.numerDokumentu }}</span>
            </div>
            <p class="mb-0 opacity-90 fs-6">
                Przeczytaj uważnie dokument i złoż elektroniczny podpis
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Enhanced Document Preview -->
            <div class="document-preview-card mb-4">
                <div class="preview-header">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt me-2"></i>Treść dokumentu
                    </h5>
                    <div class="preview-actions">
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
                            <i class="fas fa-print me-1"></i>Drukuj
                        </button>
                    </div>
                </div>
                <div class="preview-body">
                    <div class="enhanced-document-preview">
                        {{ dokument.tresc|nl2br }}
                    </div>
                </div>
            </div>

            <!-- Enhanced Signature Form -->
            <div class="signature-form-card">
                <div class="signature-header">
                    <h5 class="mb-0">
                        <i class="fas fa-signature me-2"></i>Elektroniczny podpis dokumentu
                    </h5>
                    <div class="signature-security">
                        <span class="security-badge">
                            <i class="fas fa-shield-alt me-1"></i>Bezpieczny podpis
                        </span>
                    </div>
                </div>
                <div class="signature-body">
                    {{ form_start(form) }}
                        <div class="legal-warning">
                            <div class="d-flex align-items-start">
                                <div class="flex-shrink-0">
                                    <div class="warning-icon">
                                        <i class="fas fa-exclamation-triangle"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1 text-warning">Ważne informacje prawne</h6>
                                    <p class="mb-0">Podpisanie tego dokumentu oznacza Twoją zgodę na jego treść i ma moc prawną zgodną ze statutem partii.</p>
                                </div>
                            </div>
                        </div>

                        <!-- Enhanced Signature Canvas -->
                        <div class="signature-section mb-4">
                            <div class="signature-section-header">
                                <h6 class="mb-2">
                                    <i class="fas fa-pen me-2"></i>Twój podpis elektroniczny
                                </h6>
                                <p class="text-muted mb-3">Podpisz w poniższym polu za pomocą myszy lub dotyku</p>
                            </div>
                            
                            <div class="enhanced-signature-pad-container">
                                <div class="signature-placeholder" id="signature-placeholder">
                                    <i class="fas fa-pen-nib"></i>
                                    <span>Kliknij i podpisz tutaj</span>
                                </div>
                                <canvas id="signature-pad" class="signature-pad"></canvas>
                                <div class="signature-overlay">
                                    <div class="signature-line"></div>
                                    <small class="signature-line-label">Podpis</small>
                                </div>
                            </div>
                            
                            <div class="signature-controls">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="signature-status">
                                        <span class="status-indicator" id="signature-status">
                                            <i class="fas fa-circle"></i>
                                            Brak podpisu
                                        </span>
                                    </div>
                                    <div class="signature-actions">
                                        <button type="button" class="btn btn-enhanced btn-outline-secondary btn-sm" id="clear-signature">
                                            <i class="fas fa-eraser me-1"></i>Wyczyść
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Enhanced Comment Section -->
                        <div class="comment-section mb-4">
                            <h6 class="section-title">
                                <i class="fas fa-comment me-2"></i>Komentarz (opcjonalnie)
                            </h6>
                            <div class="form-group-enhanced">
                                {{ form_row(form.komentarz) }}
                            </div>
                        </div>
                        
                        {{ form_widget(form.podpisElektroniczny) }}

                        <!-- Enhanced Confirmation Section -->
                        <div class="confirmation-section mb-4">
                            <div class="confirmation-card">
                                <div class="confirmation-header">
                                    <h6 class="mb-2">
                                        <i class="fas fa-check-circle me-2"></i>Potwierdzenie podpisu
                                    </h6>
                                </div>
                                <div class="confirmation-body">
                                    <div class="enhanced-form-check">
                                        <input class="form-check-input" type="checkbox" id="confirmSignature" required>
                                        <label class="form-check-label" for="confirmSignature">
                                            <strong>Potwierdzam, że:</strong>
                                            <ul class="confirmation-list">
                                                <li>Zapoznałem się z pełną treścią dokumentu</li>
                                                <li>Wyrażam zgodę na jego podpisanie</li>
                                                <li>Jestem świadomy prawnych konsekwencji tego działania</li>
                                                <li>Moją tożsamość można zweryfikować na podstawie danych logowania</li>
                                            </ul>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Enhanced Action Buttons -->
                        <div class="signature-actions-section">
                            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                                <div class="action-group">
                                    <a href="{{ path('dokument_show', {id: dokument.id}) }}" class="btn btn-enhanced btn-secondary-gradient">
                                        <i class="fas fa-arrow-left me-2"></i>Anuluj
                                    </a>
                                </div>
                                
                                <div class="action-group d-flex gap-2">
                                    <a href="{{ path('dokument_reject', {id: dokument.id}) }}" class="btn btn-enhanced btn-danger-gradient" onclick="return confirm('Czy na pewno chcesz odrzuć ten dokument?')">
                                        <i class="fas fa-times me-2"></i>Odrzuć dokument
                                    </a>
                                    {{ form_widget(form.submit, {'attr': {'id': 'sign-submit-btn', 'class': 'btn btn-enhanced btn-success-gradient'}}) }}
                                </div>
                            </div>
                            
                            <div class="signature-security-info">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="fas fa-shield-alt me-2 text-success"></i>
                                    <small class="text-muted">
                                        Podpis jest szyfrowany i przechowywany bezpiecznie. 
                                        Data i adres IP są rejestrowane dla celów audytu.
                                    </small>
                                </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Enhanced Document Information -->
            <div class="info-card mb-4">
                <div class="info-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Informacje o dokumencie
                    </h5>
                </div>
                <div class="info-body">
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-label">
                                <i class="fas fa-hashtag me-2"></i>Numer dokumentu
                            </div>
                            <div class="info-value font-monospace">{{ dokument.numerDokumentu }}</div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-label">
                                <i class="fas fa-file-alt me-2"></i>Typ dokumentu
                            </div>
                            <div class="info-value">
                                <span class="type-badge">{{ dokument.typDisplayName }}</span>
                            </div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-label">
                                <i class="fas fa-flag me-2"></i>Status
                            </div>
                            <div class="info-value">
                                <span class="status-badge {{ dokument.statusBadgeClass }}">
                                    <i class="fas fa-circle me-1"></i>{{ dokument.statusDisplayName }}
                                </span>
                            </div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-label">
                                <i class="fas fa-user me-2"></i>Utworzył
                            </div>
                            <div class="info-value">{{ dokument.tworca.fullName }}</div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-label">
                                <i class="fas fa-calendar-plus me-2"></i>Data utworzenia
                            </div>
                            <div class="info-value">{{ dokument.dataUtworzenia|date('d.m.Y H:i') }}</div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-label">
                                <i class="fas fa-calendar-check me-2"></i>Wejście w życie
                            </div>
                            <div class="info-value">{{ dokument.dataWejsciaWZycie|date('d.m.Y') }}</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Enhanced Signature Progress -->
            <div class="progress-card">
                <div class="progress-header">
                    <h5 class="mb-0">
                        <i class="fas fa-users me-2"></i>Postęp podpisów
                    </h5>
                    <div class="progress-counter">
                        {% set signedCount = 0 %}
                        {% for podpis in dokument.podpisy %}
                            {% if podpis.signed %}
                                {% set signedCount = signedCount + 1 %}
                            {% endif %}
                        {% endfor %}
                        <span class="count-badge">{{ signedCount }}/{{ dokument.podpisy|length }}</span>
                    </div>
                </div>
                <div class="progress-body">
                    <!-- Enhanced Progress Bar -->
                    {% set progressPercent = (signedCount / dokument.podpisy|length * 100)|round %}
                    <div class="enhanced-progress mb-4">
                        <div class="progress-label d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">Postęp podpisów</span>
                            <span class="progress-percentage">{{ progressPercent }}%</span>
                        </div>
                        <div class="progress-bar-container">
                            <div class="progress-bar-fill" style="width: {{ progressPercent }}%"></div>
                        </div>
                    </div>
                    
                    <!-- Enhanced Signature List -->
                    <div class="signatures-list">
                        {% for podpis in dokument.podpisy %}
                            <div class="enhanced-signature-item {{ podpis.signed ? 'signed' : (podpis.rejected ? 'rejected' : 'pending') }} {{ podpis.podpisujacy == app.user ? 'current-user' : '' }}">
                                <div class="signature-main">
                                    <div class="signature-step">
                                        <div class="step-circle">{{ podpis.kolejnosc }}</div>
                                        <div class="signature-user">
                                            <div class="user-name">{{ podpis.podpisujacyFullInfo }}</div>
                                            {% if podpis.podpisujacy == app.user %}
                                                <span class="current-user-badge">To Ty</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="signature-status">
                                        <span class="enhanced-status-badge {{ podpis.statusBadgeClass }}">
                                            {% if podpis.signed %}
                                                <i class="fas fa-check me-1"></i>
                                            {% elseif podpis.rejected %}
                                                <i class="fas fa-times me-1"></i>
                                            {% else %}
                                                <i class="fas fa-clock me-1"></i>
                                            {% endif %}
                                            {{ podpis.statusDisplayName }}
                                        </span>
                                    </div>
                                </div>
                                
                                {% if podpis.dataPodpisania %}
                                    <div class="signature-meta">
                                        <div class="meta-item">
                                            <i class="fas fa-calendar me-1"></i>
                                            {{ podpis.dataPodpisania|date('d.m.Y H:i') }}
                                        </div>
                                    </div>
                                {% endif %}
                                
                                {% if podpis.komentarz %}
                                    <div class="signature-comment">
                                        <div class="comment-content">
                                            <i class="fas fa-comment me-2"></i>
                                            <em>{{ podpis.komentarz }}</em>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                            
                            {% if not loop.last %}
                                <div class="signature-divider"></div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Enhanced Document Signing Header */
        .document-signing-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 16px;
            padding: 3rem 2rem;
            margin-bottom: 2rem;
            color: white;
            position: relative;
            overflow: hidden;
        }
        
        .document-signing-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: float 20s ease-in-out infinite;
        }
        
        @keyframes float {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            33% { transform: translate(-10px, -10px) rotate(120deg); }
            66% { transform: translate(10px, -10px) rotate(240deg); }
        }
        
        .header-icon {
            width: 80px;
            height: 80px;
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            backdrop-filter: blur(10px);
            margin-bottom: 1.5rem;
        }
        
        .document-meta {
            font-size: 1.1rem;
            opacity: 0.9;
        }
        
        .doc-title {
            font-weight: 600;
            background: rgba(255,255,255,0.2);
            padding: 0.25rem 0.75rem;
            border-radius: 8px;
            backdrop-filter: blur(10px);
        }
        
        .doc-number {
            font-family: 'Courier New', monospace;
            font-weight: 500;
        }
        
        /* Enhanced Document Preview Card */
        .document-preview-card {
            background: var(--bg-primary);
            border: 1px solid var(--border-color);
            border-radius: 16px;
            box-shadow: 0 4px 16px var(--shadow-light);
