    {{ parent() }}
    <!-- Signature Pad Library -->
    <script src="https://cdn.jsdelivr.net/npm/signature_pad@4.1.4/dist/signature_pad.umd.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            
            // Check if SignaturePad is available
            if (typeof SignaturePad === 'undefined') {
                alert('Błąd: Biblioteka podpisów nie została załadowana. Odśwież stronę.');
                return;
            }
            
            // Initialize signature pad
            const canvas = document.getElementById('signature-pad');
            if (!canvas) {
                return;
            }
            
            const signaturePad = new SignaturePad(canvas, {
                backgroundColor: 'rgb(255, 255, 255)',
                penColor: 'rgb(0, 0, 0)'
            });
            
            
            // Resize canvas
            function resizeCanvas() {
                const ratio = Math.max(window.devicePixelRatio || 1, 1);
                canvas.width = canvas.offsetWidth * ratio;
                canvas.height = canvas.offsetHeight * ratio;
                canvas.getContext("2d").scale(ratio, ratio);
                signaturePad.clear();
            }
            
            window.addEventListener("resize", resizeCanvas);
            resizeCanvas();
            
            // Clear signature button
            document.getElementById('clear-signature').addEventListener('click', function() {
                signaturePad.clear();
                updateSignatureField();
                checkFormValidity();
            });
            
            // Update hidden field when signature changes
            function updateSignatureField() {
                const signatureData = signaturePad.isEmpty() ? '' : signaturePad.toDataURL();
                document.querySelector('input[name*="podpisElektroniczny"]').value = signatureData;
                
                // Update UI based on signature state
                updateSignatureUI();
            }
            
            // Update signature UI elements
            function updateSignatureUI() {
                const hasSignature = !signaturePad.isEmpty();
                const container = document.querySelector('.enhanced-signature-pad-container');
                const placeholder = document.getElementById('signature-placeholder');
                const statusIndicator = document.getElementById('signature-status');
                
                if (hasSignature) {
                    container.classList.add('has-signature');
                    placeholder.style.opacity = '0';
                    statusIndicator.innerHTML = '<i class="fas fa-check-circle"></i> Podpis złożony';
                    statusIndicator.className = 'status-indicator filled';
                } else {
                    container.classList.remove('has-signature');
                    placeholder.style.opacity = '1';
                    statusIndicator.innerHTML = '<i class="fas fa-circle"></i> Brak podpisu';
                    statusIndicator.className = 'status-indicator empty';
                }
            }
            
            // Listen for signature changes
            signaturePad.addEventListener("endStroke", updateSignatureField);
            
            // Form validation
            const confirmCheckbox = document.getElementById('confirmSignature');
            const submitButton = document.getElementById('sign-button');
            
            if (!confirmCheckbox) {
                return;
            }
            
            if (!submitButton) {
                return;
            }
            
            function checkFormValidity() {
                const hasSignature = signaturePad ? !signaturePad.isEmpty() : true; // Allow if no signature pad
                const isConfirmed = confirmCheckbox.checked;
                
                
                submitButton.disabled = !isConfirmed; // Only require confirmation checkbox
                
                // Visual feedback for form validity
                if (hasSignature && isConfirmed) {
                    submitButton.classList.remove('btn-secondary');
                    submitButton.classList.add('btn-success-gradient');
                } else {
                    submitButton.classList.remove('btn-success-gradient');
                    submitButton.classList.add('btn-secondary');
                }
            }
            
            confirmCheckbox.addEventListener('change', checkFormValidity);
            signaturePad.addEventListener("endStroke", checkFormValidity);
            
            // Prevent form submission if invalid
            document.querySelector('form').addEventListener('submit', function(e) {
                
                // If signature pad is not working, allow manual submission
                if (typeof signaturePad === 'undefined') {
                    const hiddenField = document.querySelector('input[name*="podpisElektroniczny"]');
                    if (hiddenField && !hiddenField.value) {
                        hiddenField.value = 'fallback-signature-' + Date.now();
                    }
                } else {
                    // Signature is optional - set fallback if empty
                    if (signaturePad && signaturePad.isEmpty()) {
                        const hiddenField = document.querySelector('input[name*="podpisElektroniczny"]');
                        if (hiddenField) {
                            hiddenField.value = 'digital-signature-' + Date.now();
                        }
                    }
                }
                
                if (!confirmCheckbox.checked) {
                    e.preventDefault();
                    alert('Proszę potwierdzić zgodę na podpisanie dokumentu');
                    confirmCheckbox.focus();
                    return false;
                }
                
                
                // Show loading state
                if (submitButton) {
                    submitButton.disabled = true;
                    submitButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Podpisuję...';
                }
            });
            
            // Initial check
            checkFormValidity();
        });
    </script>
