        }
        
        /* Enhanced Signature Form Card */
        .signature-form-card {
            background: var(--bg-primary);
            border: 1px solid var(--border-color);
            border-radius: 16px;
            box-shadow: 0 4px 16px var(--shadow-light);
            transition: all 0.3s ease;
        }
        
        .signature-form-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px var(--shadow-medium);
        }
        
        .signature-header {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.1), rgba(33, 136, 56, 0.05));
            border-bottom: 1px solid var(--border-color);
            padding: 1.5rem 2rem;
            border-radius: 16px 16px 0 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .signature-header h5 {
            color: #28a745;
            font-weight: 600;
            margin-bottom: 0;
        }
        
        .security-badge {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
            display: flex;
            align-items: center;
        }
        
        .signature-body {
            padding: 2rem;
        }
        
        /* Legal Warning */
        .legal-warning {
            background: linear-gradient(135deg, rgba(255, 193, 7, 0.1), rgba(224, 168, 0, 0.05));
            border: 1px solid rgba(255, 193, 7, 0.2);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 2px 8px var(--shadow-light);
        }
        
        .warning-icon {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #ffc107, #e0a800);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #000;
            font-size: 1.25rem;
        }
        
        /* Enhanced Signature Pad */
        .signature-section {
            background: var(--bg-secondary);
            border-radius: 12px;
            padding: 1.5rem;
            border-left: 4px solid #28a745;
        }
        
        .signature-section-header h6 {
            color: var(--text-primary);
            font-weight: 600;
        }
        
