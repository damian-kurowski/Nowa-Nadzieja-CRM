{% extends 'base.html.twig' %}

{% block title %}Byli członkowie - CRM Nowa Nadzieja{% endblock %}

{% block page_title %}Byli członkowie{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% include 'components/unified-card-styles.html.twig' %}
    <style>
        /* Red-orange theme for former members */
        :root {
            --brand-primary: #dc2626;
            --brand-secondary: #ea580c; 
            --brand-primary-rgb: 220, 38, 38;
            --brand-secondary-rgb: 234, 88, 12;
            --brand-primary-darker: #b91c1c;
        }
        
        /* Enhanced Table Header */
        .table-header {
            background: linear-gradient(135deg, #dc2626 0%, #ea580c 100%);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 2rem;
            color: white;
            position: relative;
            overflow: hidden;
        }
        
        /* Former Members List */
        .former-cards-list {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            padding: 2rem;
        }
        
        .former-list-card {
            background: var(--bg-primary);
            border: 1px solid var(--border-color);
            border-radius: 20px;
            padding: 2rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            box-shadow: 0 4px 20px var(--shadow-light);
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 2rem;
            min-height: 120px;
            overflow: hidden;
            border-left: 6px solid transparent;
        }
        
        .former-list-card:hover {
            transform: translateX(8px);
            box-shadow: 0 12px 40px rgba(220, 38, 38, 0.25);
            border-left-color: #dc2626;
            background: linear-gradient(90deg, rgba(220, 38, 38, 0.02), var(--bg-primary));
        }
        
        .member-card-select {
            display: flex;
            align-items: center;
            justify-content: center;
            min-width: 40px;
        }
        
        .member-avatar-section {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.5rem;
            min-width: 80px;
        }
        
        .member-avatar-wrapper {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            overflow: hidden;
            border: 4px solid rgba(220, 38, 38, 0.2);
            background: white;
            position: relative;
        }
        
        .member-avatar-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .member-avatar-placeholder {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 1.5rem;
            color: white;
        }
        
        .member-avatar-placeholder.former {
            background: linear-gradient(135deg, #dc2626 0%, #ea580c 100%);
        }
        
        .member-status-indicator {
            position: absolute;
            bottom: -5px;
            right: -5px;
        }
        
        .status-dot {
            width: 18px;
            height: 18px;
            border-radius: 50%;
            border: 3px solid white;
            box-shadow: 0 2px 6px rgba(0,0,0,0.2);
        }
        
        .status-dot.former {
            background: #dc2626;
        }
        
        .member-content-section {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            min-width: 0;
        }
        
        .member-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            flex-wrap: wrap;
            gap: 1rem;
        }
        
        .member-name {
            font-size: 1.4rem;
            font-weight: 700;
            color: var(--text-primary);
            margin: 0;
            line-height: 1.2;
        }
        
        .member-badges {
            display: flex;
            gap: 0.75rem;
            flex-wrap: wrap;
            align-items: center;
        }
        
        .member-badge {
            padding: 0.4rem 1rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.3rem;
        }
        
        .member-badge.former {
            background: linear-gradient(135deg, #dc2626 0%, #ea580c 100%);
            color: white;
            box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
        }
        
        .reason-badge {
            padding: 0.3rem 0.8rem;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 600;
            background: #fef3c7;
            color: #d97706;
        }
        
        .member-details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }
        
        .detail-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.5rem 0;
        }
        
        .detail-icon {
            width: 18px;
            height: 18px;
            color: #dc2626;
            font-size: 0.9rem;
            flex-shrink: 0;
            text-align: center;
        }
        
        .detail-text {
            color: var(--text-secondary);
            font-size: 0.95rem;
            line-height: 1.4;
            word-break: break-word;
        }
        
        .member-actions-section {
            display: flex;
            align-items: center;
            justify-content: center;
            min-width: 120px;
        }
        
        .member-actions {
            display: flex;
            gap: 0.5rem;
            opacity: 0.7;
            transition: opacity 0.3s ease;
        }
        
        .former-list-card:hover .member-actions {
            opacity: 1;
        }
        
        .action-btn {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            font-size: 0.9rem;
            border: 2px solid transparent;
        }
        
        .action-btn:hover {
            transform: translateY(-3px) scale(1.1);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
            text-decoration: none;
        }
        
        .action-btn.primary {
            background: linear-gradient(135deg, #dc2626 0%, #ea580c 100%);
            color: white;
        }
        
        .action-btn.primary:hover {
            background: linear-gradient(135deg, #b91c1c 0%, #c2410c 100%);
            color: white;
        }
        
        .action-btn.secondary {
            background: #f8fafc;
            color: #64748b;
            border-color: #e2e8f0;
        }
        
        .action-btn.secondary:hover {
            background: #e2e8f0;
            color: #475569;
            border-color: #dc2626;
        }
        
        @media (max-width: 768px) {
            .former-list-card {
                padding: 1.5rem;
                gap: 1rem;
                flex-direction: column;
                text-align: center;
                min-height: auto;
            }
            
            .member-header {
                flex-direction: column;
                align-items: center;
                text-align: center;
            }
            
            .member-details-grid {
                grid-template-columns: 1fr;
                gap: 0.5rem;
            }
            
            .detail-item {
                justify-content: center;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="table-header">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h1 class="mb-2">
                        <i class="fas fa-user-times me-3"></i>
                        Byli członkowie
                    </h1>
                    <p class="mb-0 opacity-90">
                        Lista osób, które zakończyły członkostwo w organizacji
                    </p>
                </div>
                <div class="text-end">
                    <div class="badge bg-light text-dark px-3 py-2">
                        <i class="fas fa-calendar-alt me-2"></i>
                        {{ 'now'|date('d.m.Y') }}
                    </div>
                </div>
            </div>
            
            <div class="row mt-4">
                <div class="col-md-3">
                    <div class="stat-card text-center">
                        <div class="h3 mb-1">{{ pagination.totalItemCount }}</div>
                        <div class="small">Łącznie byłych członków</div>
                    </div>
                </div>
            </div>
        </div>
        
        {% if pagination.items|length > 0 %}
            <div class="former-cards-list">
                {% for czlonek in pagination.items %}
                    <div class="former-list-card" data-member-id="{{ czlonek.id }}">
                        <!-- Checkbox -->
                        <div class="member-card-select">
                            <input type="checkbox" class="form-check-input row-checkbox" value="{{ czlonek.id }}" onclick="event.stopPropagation()">
                        </div>
                        
                        <!-- Avatar -->
                        <div class="member-avatar-section">
                            <div class="member-avatar-wrapper">
                                {% if czlonek.zdjecie %}
                                    <img src="{{ asset('uploads/photos/' ~ czlonek.zdjecie) }}" alt="{{ czlonek.fullName }}" class="member-avatar-img">
                                {% else %}
                                    <div class="member-avatar-placeholder former">
                                        {{ czlonek.imie|first|upper }}{{ czlonek.nazwisko|first|upper }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="member-status-indicator">
                                <div class="status-dot former"></div>
                            </div>
                        </div>
                        
                        <!-- Main Content -->
                        <div class="member-content-section">
                            <div class="member-header">
                                <h5 class="member-name">{{ czlonek.fullName }}</h5>
                                <div class="member-badges">
                                    <span class="member-badge former">
                                        <i class="fas fa-user-times me-1"></i>
                                        Były członek
                                    </span>
                                    {% if czlonek.powodZakonczeniaCzlonkostwa %}
                                        <span class="reason-badge">
                                            {{ czlonek.powodZakonczeniaCzlonkostwa }}
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <div class="member-details-grid">
                                <div class="detail-item">
                                    <i class="fas fa-envelope detail-icon"></i>
                                    <span class="detail-text">{{ czlonek.email }}</span>
                                </div>
                                {% if czlonek.telefon %}
                                    <div class="detail-item">
                                        <i class="fas fa-phone detail-icon"></i>
                                        <span class="detail-text">{{ czlonek.telefon }}</span>
                                    </div>
                                {% endif %}
                                {% if czlonek.okreg %}
                                    <div class="detail-item">
                                        <i class="fas fa-map-marker-alt detail-icon"></i>
                                        <span class="detail-text">{{ czlonek.okreg.nazwa }}</span>
                                    </div>
                                {% endif %}
                                {% if czlonek.dataPrzyjecia %}
                                    <div class="detail-item">
                                        <i class="fas fa-calendar-plus detail-icon"></i>
                                        <span class="detail-text">Członek od: {{ czlonek.dataPrzyjecia|date('d.m.Y') }}</span>
                                    </div>
                                {% endif %}
                                {% if czlonek.dataZakonczeniaCzlonkostwa %}
                                    <div class="detail-item">
                                        <i class="fas fa-calendar-minus detail-icon"></i>
                                        <span class="detail-text">Zakończenie: {{ czlonek.dataZakonczeniaCzlonkostwa|date('d.m.Y') }}</span>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        
                        <!-- Actions -->
                        <div class="member-actions-section">
                            <div class="member-actions">
                                <a href="{{ path('bylo_czlonek_show', {id: czlonek.id}) }}" class="action-btn primary" title="Zobacz szczegóły">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            
            <!-- Enhanced Pagination -->
            <div class="d-flex justify-content-center p-4">
                {{ knp_pagination_render(pagination) }}
            </div>
        {% else %}
            <div class="text-center py-5">
                <div class="mb-4">
                    <div class="d-inline-block p-4 rounded-circle bg-light">
                        <i class="fas fa-user-times fa-3x text-muted"></i>
                    </div>
                </div>
                <h4 class="text-muted mb-3">Brak byłych członków</h4>
                <p class="text-muted mb-4">Nie znaleziono żadnych byłych członków spełniających kryteria wyszukiwania.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}