{% extends 'base.html.twig' %}

{% block title %}{{ czlonek.fullName }} - Byli członkowie - CRM Nowa Nadzieja{% endblock %}

{% block page_title %}{{ czlonek.fullName }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .profile-header {
            background: linear-gradient(135deg, #6c757d 0%, #343a40 100%);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 2rem;
            color: white;
            position: relative;
            overflow: hidden;
        }
        
        .profile-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: float 20s ease-in-out infinite;
        }
        
        @keyframes float {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            33% { transform: translate(-10px, -10px) rotate(120deg); }
            66% { transform: translate(10px, -10px) rotate(240deg); }
        }
        
        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid white;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            object-fit: cover;
            background: white;
        }
        
        .info-card {
            background: var(--bg-primary);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px var(--shadow-light);
        }
        
        .info-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 16px var(--shadow-medium);
        }
        
        .info-card-header {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid var(--border-color);
        }
        
        .info-card-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            font-size: 1.2rem;
        }
        
        .info-card-icon.secondary { background: linear-gradient(135deg, #6c757d 0%, #343a40 100%); color: white; }
        .info-card-icon.info { background: linear-gradient(135deg, #17a2b8 0%, #138496 100%); color: white; }
        .info-card-icon.warning { background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%); color: white; }
        .info-card-icon.success { background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%); color: white; }
        .info-card-icon.danger { background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); color: white; }
        
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
        }
        
        .info-item {
            padding: 0.75rem;
            background: var(--bg-secondary);
            border-radius: 8px;
            transition: background 0.3s ease;
        }
        
        .info-item:hover {
            background: var(--bg-tertiary);
        }
        
        .info-label {
            font-weight: 600;
            color: var(--text-secondary);
            font-size: 0.875rem;
            margin-bottom: 0.25rem;
        }
        
        .info-value {
            color: var(--text-primary);
            font-size: 1rem;
        }
        
        .stats-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .stat-item {
            text-align: center;
            padding: 1rem;
            background: var(--bg-secondary);
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        
        .stat-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px var(--shadow-medium);
        }
        
        .stat-number {
            font-size: 1.5rem;
            font-weight: bold;
            color: #6c757d;
        }
        
        .stat-label {
            font-size: 0.875rem;
            color: var(--text-secondary);
            margin-top: 0.25rem;
        }

        .reason-alert {
            background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 193, 7, 0.05) 100%);
            border: 1px solid rgba(255, 193, 7, 0.3);
            border-radius: 12px;
            padding: 1rem;
            color: var(--text-primary);
            display: flex;
            align-items: flex-start;
            gap: 1rem;
        }

        .reason-icon {
            color: #ffc107;
            font-size: 1.2rem;
            margin-top: 0.125rem;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Enhanced Profile Header -->
    <div class="profile-header">
        <div class="row align-items-center">
            <div class="col-md-3 text-center">
                {% if czlonek.zdjecie %}
                    <img src="{{ asset('uploads/photos/' ~ czlonek.zdjecie) }}" 
                         class="profile-avatar" alt="Zdjęcie {{ czlonek.fullName }}">
                {% else %}
                    <div class="profile-avatar d-flex align-items-center justify-content-center">
                        <i class="fas fa-user-times fa-3x" style="color: #6c757d;"></i>
                    </div>
                {% endif %}
            </div>
            <div class="col-md-6">
                <h1 class="mb-2">{{ czlonek.fullName }}</h1>
                {% if czlonek.drugieImie %}
                    <p class="mb-2 opacity-90">{{ czlonek.drugieImie }}</p>
                {% endif %}
                <span class="badge bg-dark fs-6 px-3 py-2 mb-2">Były członek</span>
                {% if czlonek.dataZakonczeniaCzlonkostwa %}
                    <span class="badge bg-danger fs-6 px-3 py-2 ms-2 mb-2">Zakończone: {{ czlonek.dataZakonczeniaCzlonkostwa|date('d.m.Y') }}</span>
                {% endif %}
            </div>
            <div class="col-md-3">
                <div class="stats-row">
                    {% if czlonek.dataPrzyjecia and czlonek.dataZakonczeniaCzlonkostwa %}
                        {% set czasCzlonkostwa = czlonek.dataZakonczeniaCzlonkostwa.diff(czlonek.dataPrzyjecia) %}
                        <div class="stat-item">
                            <div class="stat-number">{{ czasCzlonkostwa.days }} dni</div>
                            <div class="stat-label">Członkostwo</div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('bylo_czlonek_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Powrót do listy
        </a>
    </div>

    <!-- Info Cards Grid -->
    <div class="row">
        <!-- Personal Information -->
        <div class="col-lg-6">
            <div class="info-card">
                <div class="info-card-header">
                    <div class="info-card-icon secondary">
                        <i class="fas fa-user"></i>
                    </div>
                    <h5 class="mb-0">Dane osobowe</h5>
                </div>
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Imię</div>
                        <div class="info-value">{{ czlonek.imie }}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Nazwisko</div>
                        <div class="info-value">{{ czlonek.nazwisko }}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Email</div>
                        <div class="info-value">{{ czlonek.email }}</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Telefon</div>
                        <div class="info-value">{{ czlonek.telefon ?? 'Brak' }}</div>
                    </div>
                    {% if czlonek.okreg %}
                    <div class="info-item">
                        <div class="info-label">Okręg</div>
                        <div class="info-value">
                            <span class="badge bg-secondary">{{ czlonek.okreg.nazwa }}</span>
                        </div>
                    </div>
                    {% endif %}
                    {% if czlonek.oddzial %}
                    <div class="info-item">
                        <div class="info-label">Oddział</div>
                        <div class="info-value">
                            <span class="badge bg-info">{{ czlonek.oddzial.nazwa }}</span>
                        </div>
                    </div>
                    {% endif %}
                    {% if czlonek.adresZamieszkania %}
                    <div class="info-item" style="grid-column: 1 / -1;">
                        <div class="info-label">Adres zamieszkania</div>
                        <div class="info-value">{{ czlonek.adresZamieszkania|nl2br }}</div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Membership History -->
        <div class="col-lg-6">
            <div class="info-card">
                <div class="info-card-header">
                    <div class="info-card-icon danger">
                        <i class="fas fa-history"></i>
                    </div>
                    <h5 class="mb-0">Historia członkostwa</h5>
                </div>
                <div class="info-grid">
                    {% if czlonek.dataPrzyjecia %}
                    <div class="info-item">
                        <div class="info-label">Data przyjęcia</div>
                        <div class="info-value">
                            <span class="text-success fw-bold">{{ czlonek.dataPrzyjecia|date('d.m.Y') }}</span>
                        </div>
                    </div>
                    {% endif %}
                    {% if czlonek.dataZakonczeniaCzlonkostwa %}
                    <div class="info-item">
                        <div class="info-label">Data zakończenia</div>
                        <div class="info-value">
                            <span class="text-danger fw-bold">{{ czlonek.dataZakonczeniaCzlonkostwa|date('d.m.Y') }}</span>
                        </div>
                    </div>
                    {% endif %}
                </div>
                
                {% if czlonek.powodZakonczeniaCzlonkostwa %}
                <div class="mt-3">
                    <div class="reason-alert">
                        <i class="fas fa-exclamation-triangle reason-icon"></i>
                        <div>
                            <div class="info-label mb-1">Powód zakończenia członkostwa:</div>
                            <div class="info-value">{{ czlonek.powodZakonczeniaCzlonkostwa }}</div>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="info-card">
                <div class="info-card-header">
                    <div class="info-card-icon warning">
                        <i class="fas fa-money-bill-wave"></i>
                    </div>
                    <h5 class="mb-0">Informacje o składce</h5>
                </div>
                <div class="info-grid">
                    {% set skladkaInfo = czlonek.statusSkladki %}
                    <div class="info-item">
                        <div class="info-label">Status składki</div>
                        <div class="info-value">
                            <span class="badge bg-{{ skladkaInfo.class }}">
                                <i class="{{ skladkaInfo.icon }} me-1"></i>
                                {{ skladkaInfo.status }}
                            </span>
                        </div>
                    </div>
                    <div class="info-item" style="grid-column: 1 / -1;">
                        <div class="info-label">Informacja</div>
                        <div class="info-value text-muted">Byli członkowie nie opłacają składek.</div>
                    </div>
                </div>
            </div>
        </div>

        {% if czlonek.informacjeOMnie %}
        <!-- Additional Information -->
        <div class="col-lg-6">
            <div class="info-card">
                <div class="info-card-header">
                    <div class="info-card-icon info">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <h5 class="mb-0">Dodatkowe informacje</h5>
                </div>
                <div class="info-grid">
                    <div class="info-item" style="grid-column: 1 / -1;">
                        <div class="info-value">{{ czlonek.informacjeOMnie|nl2br }}</div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
{% endblock %}