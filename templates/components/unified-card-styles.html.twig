}

.unified-card.compact .unified-card-avatar {
    width: 50px;
    height: 50px;
    font-size: 1.25rem;
}

.unified-card.compact .unified-card-name {
    font-size: 1rem;
}

/* Wide Card Variant for detailed info */
.unified-card.wide .unified-card-details {
    grid-template-columns: 1fr 1fr 1fr;
}

@media (max-width: 768px) {
    .unified-card.wide .unified-card-details {
        grid-template-columns: 1fr 1fr;
    }
}

/* Print Styles */
@media print {
    .unified-card {
        border: 1px solid #ccc;
        box-shadow: none;
        break-inside: avoid;
        margin-bottom: 1rem;
    }
    
    .unified-card-footer {
        display: none;
    }
}

