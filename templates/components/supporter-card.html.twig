{# Unified Supporter Card Component #}
<div class="unified-card animate-in" data-supporter-id="{{ supporter.id }}">
    {# Status Badge #}
    <div class="unified-card-status">
        {% set statusType = supporter.status == 'aktywny' ? 'aktywny' : 'nieaktywny' %}
        <span class="unified-status-badge sympatyk">Sympatyk</span>
    </div>

    {# Card Header #}
    <div class="unified-card-header">
        <div class="unified-card-avatar">
            {% if supporter.zdjecie %}
                <img src="{{ asset('uploads/photos/' ~ supporter.zdjecie) }}" alt="{{ supporter.fullName }}">
            {% else %}
                <span class="unified-card-avatar-initials">
                    {{ supporter.imie|first|upper }}{{ supporter.nazwisko|first|upper }}
                </span>
            {% endif %}
        </div>
        <div class="unified-card-info">
            <h6 class="unified-card-name">{{ supporter.fullName }}</h6>
            <div class="unified-card-meta">
                {% if supporter.email %}
                    <div class="unified-card-meta-item">
                        <i class="fas fa-envelope"></i>
                        <span>{{ supporter.email }}</span>
                    </div>
                {% endif %}
                {% if supporter.telefon %}
                    <div class="unified-card-meta-item">
                        <i class="fas fa-phone"></i>
                        <span>{{ supporter.telefon }}</span>
                    </div>
                {% endif %}
                {% if supporter.miejscowosc %}
                    <div class="unified-card-meta-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>{{ supporter.miejscowosc }}</span>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    {# Card Body #}
    <div class="unified-card-body">
        <div class="unified-card-details">
            <div class="unified-card-detail">
                <span class="unified-detail-label">Okręg</span>
                <span class="unified-detail-value">
                    {% if supporter.okreg %}
                        {{ supporter.okreg.nazwa }}
                    {% else %}
                        <em>Brak przypisania</em>
                    {% endif %}
                </span>
            </div>
            <div class="unified-card-detail">
                <span class="unified-detail-label">Źródło kontaktu</span>
                <span class="unified-detail-value">
                    {% if supporter.zrodloKontaktu %}
                        {{ supporter.zrodloKontaktu|title }}
                    {% else %}
                        <em>Nieokreślone</em>
                    {% endif %}
                </span>
            </div>
            <div class="unified-card-detail">
                <span class="unified-detail-label">Data rejestracji</span>
                <span class="unified-detail-value">
                    {% if supporter.dataRejestracji %}
                        {{ supporter.dataRejestracji|date('d.m.Y') }}
                    {% else %}
                        <em>Brak daty</em>
                    {% endif %}
                </span>
            </div>
            <div class="unified-card-detail">
                <span class="unified-detail-label">Zaangażowanie</span>
                <span class="unified-detail-value">
                    {% if supporter.chceByc == 'czlonkiem' %}
                        <span class="unified-payment-status paid">Chce być członkiem</span>
                    {% elseif supporter.chceByc == 'kandydatem' %}
                        <span class="unified-payment-status overdue">Chce być kandydatem</span>
                    {% else %}
                        <span class="unified-payment-status unpaid">Tylko sympatyk</span>
                    {% endif %}
                </span>
            </div>
        </div>
    </div>

    {# Card Footer #}
    <div class="unified-card-footer">
        <a href="{{ path('sympatyk_show', {id: supporter.id}) }}" class="unified-action-btn primary">
            <i class="fas fa-eye"></i>
            <span>Zobacz</span>
        </a>
        <a href="{{ path('sympatyk_edit', {id: supporter.id}) }}" class="unified-action-btn secondary">
            <i class="fas fa-edit"></i>
            <span>Edytuj</span>
        </a>
        {% if is_granted('ROLE_ADMIN') and supporter.chceByc in ['czlonkiem', 'kandydatem'] %}
            <a href="{{ path('sympatyk_promote', {id: supporter.id}) }}" class="unified-action-btn secondary">
                <i class="fas fa-arrow-up"></i>
                <span>Awansuj</span>
            </a>
        {% endif %}
    </div>
</div>