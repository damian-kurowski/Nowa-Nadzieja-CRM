{% block javascripts %}
    {{ parent() }}
    <script>
        // Global variables (Turbo-safe)
        if (typeof window.selectedRows === 'undefined') {
            window.selectedRows = new Set();
            window.currentSort = { column: null, direction: 'asc' };
            window.filterTimeout = null;
        }
        const selectedRows = window.selectedRows;
        const currentSort = window.currentSort;
        let filterTimeout = window.filterTimeout;
        
        document.addEventListener('DOMContentLoaded', function() {
            initializeEnhancedTable();
            initializeFilters();
            initializeBulkActions();
            initializeMemberCards();
        });
        
        function initializeEnhancedTable() {
            // Auto-hide filters if no active filters
            const form = document.getElementById('filterForm');
            const formData = new FormData(form);
            const hasActiveFilters = Array.from(formData.entries()).some(([key, value]) => value && value.trim() !== '');
            
            if (!hasActiveFilters) {
                const filtersContainer = document.getElementById('advancedFilters');
                const toggleBtn = document.getElementById('toggleFilters');
                filtersContainer.style.display = 'none';
                toggleBtn.classList.remove('active');
                toggleBtn.querySelector('span').textContent = 'Pokaż filtry';
                toggleBtn.querySelector('i').className = 'fas fa-chevron-right';
            }
        }
        
        function initializeFilters() {
            // Toggle filters
            document.getElementById('toggleFilters').addEventListener('click', function() {
                const filtersContainer = document.getElementById('advancedFilters');
                const isHidden = filtersContainer.style.display === 'none';
                
                filtersContainer.style.display = isHidden ? 'block' : 'none';
                this.classList.toggle('active', isHidden);
                this.querySelector('span').textContent = isHidden ? 'Ukryj filtry' : 'Pokaż filtry';
                this.querySelector('i').className = isHidden ? 'fas fa-chevron-down' : 'fas fa-chevron-right';
                
                if (isHidden) {
                    document.getElementById('filtersContainer').classList.add('expanded');
                } else {
                    document.getElementById('filtersContainer').classList.remove('expanded');
                }
            });
            
            // Auto-submit on filter change
            const quickFilters = ['search', 'status', 'skladka', 'typ'];
            quickFilters.forEach(name => {
                const element = document.querySelector(`[name="${name}"]`);
                if (element) {
                    element.addEventListener('change', debounceFilterSubmit);
                    if (element.type === 'text') {
                        element.addEventListener('input', debounceFilterSubmit);
                    }
                }
            });
        }
        
        function debounceFilterSubmit() {
            showLoadingOverlay();
            clearTimeout(filterTimeout);
            filterTimeout = setTimeout(() => {
                document.getElementById('filterForm').submit();
            }, 300);
        }
        
        function showLoadingOverlay() {
            document.getElementById('loadingOverlay').classList.remove('d-none');
        }
        
        function initializeBulkActions() {
            // Select all checkbox
            document.getElementById('selectAll').addEventListener('change', function() {
                const checkboxes = document.querySelectorAll('.row-checkbox');
                checkboxes.forEach(cb => {
                    cb.checked = this.checked;
                    updateCardSelection(cb);
                });
                updateBulkActions();
            });
            
            // Individual checkboxes
            document.querySelectorAll('.row-checkbox').forEach(cb => {
                cb.addEventListener('change', function() {
                    updateCardSelection(this);
                    updateBulkActions();
                });
            });
        }
        
        function initializeMemberCards() {
            // Click on card to select
            document.querySelectorAll('.member-list-card').forEach(card => {
                card.addEventListener('click', function(e) {
                    // Don't toggle if clicking on buttons or links
                    if (e.target.closest('a, button, input')) return;
                    
                    const checkbox = this.querySelector('.row-checkbox');
                    checkbox.checked = !checkbox.checked;
                    updateCardSelection(checkbox);
                    updateBulkActions();
                });
            });
        }
        
        function updateCardSelection(checkbox) {
            const card = checkbox.closest('.member-list-card');
            if (card) {
                card.classList.toggle('selected', checkbox.checked);
            }
        }
        
        
        function updateBulkActions() {
            const selectedCheckboxes = document.querySelectorAll('.row-checkbox:checked');
            const bulkActionsButtons = document.getElementById('bulkActionsButtons');
            
            if (selectedCheckboxes.length > 0) {
                bulkActionsButtons.classList.remove('d-none');
            } else {
                bulkActionsButtons.classList.add('d-none');
            }
            
            // Update select all checkbox
            const selectAllCheckbox = document.getElementById('selectAll');
            const totalCheckboxes = document.querySelectorAll('.row-checkbox');
            selectAllCheckbox.indeterminate = selectedCheckboxes.length > 0 && selectedCheckboxes.length < totalCheckboxes.length;
            selectAllCheckbox.checked = selectedCheckboxes.length === totalCheckboxes.length;
        }
        
        function applyQuickFilter(field, value) {
            const input = document.querySelector(`[name="${field}"]`);
            if (input) {
                input.value = value;
                showLoadingOverlay();
                document.getElementById('filterForm').submit();
            }
        }
        
        function clearFilters() {
            const form = document.getElementById('filterForm');
            const inputs = form.querySelectorAll('input, select');
            inputs.forEach(input => {
                if (input.type === 'text' || input.type === 'date' || input.type === 'number') {
                    input.value = '';
                } else if (input.tagName === 'SELECT') {
                    input.selectedIndex = 0;
                }
            });
            showLoadingOverlay();
            form.submit();
        }
        
        function saveFilters() {
            const form = document.getElementById('filterForm');
            const formData = new FormData(form);
            const filters = {};
            
            for (let [key, value] of formData.entries()) {
                if (value.trim() !== '') {
                    filters[key] = value;
                }
            }
            
            localStorage.setItem('czlonkowie_filtry', JSON.stringify(filters));
            showToast('Filtry zostały zapisane', 'success');
        }
        
        
        
        function bulkAction(action) {
            const selectedIds = Array.from(document.querySelectorAll('.row-checkbox:checked')).map(cb => cb.value);
            
            if (selectedIds.length === 0) {
                showToast('Nie wybrano żadnych członków', 'warning');
                return;
            }
            
            switch(action) {
                case 'activate':
                    if (confirm(`Czy chcesz aktywować ${selectedIds.length} członków?`)) {
                        // Implement bulk activation
                        showToast(`Aktywowano ${selectedIds.length} członków`, 'success');
                    }
                    break;
                case 'deactivate':
                    if (confirm(`Czy chcesz dezaktywować ${selectedIds.length} członków?`)) {
                        // Implement bulk deactivation
                        showToast(`Dezaktywowano ${selectedIds.length} członków`, 'success');
                    }
                    break;
                case 'export':
                    exportData('csv', selectedIds);
                    showToast(`Eksport ${selectedIds.length} wybranych członków rozpoczęty`, 'success');
                    break;
            }
        }
        
        function exportData(format = 'csv', selectedIds = null) {
            showLoading(`Przygotowywanie eksportu ${format.toUpperCase()}...`);
            
            // Create the correct export URL
            let exportPath;
            if (format === 'excel') {
                exportPath = '{{ path("czlonek_export_excel") }}';
            } else {
                exportPath = '{{ path("czlonek_export_csv") }}';
            }
            
            let url = new URL(window.location.origin + exportPath);
            
            if (selectedIds) {
                url.searchParams.set('ids', selectedIds.join(','));
            }
            
            // Add current filters to export
            const form = document.getElementById('filterForm');
            const formData = new FormData(form);
            for (let [key, value] of formData.entries()) {
                if (value.trim() !== '') {
                    url.searchParams.set(key, value);
                }
            }
            
            // Simulate processing time for better UX
            setTimeout(() => {
                window.location.href = url.toString();
                hideLoading();
                showToast(`Eksport ${format.toUpperCase()} został rozpoczęty`, 'success');
            }, 800);
        }
        
        function printTable() {
            window.print();
        }
        
        function resetTable() {
            localStorage.removeItem('czlonkowie_filtry');
            localStorage.removeItem('members_view');
            window.location.href = window.location.pathname;
        }
        
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `alert alert-${type} position-fixed fade-in`;
            toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px; box-shadow: 0 4px 16px rgba(0,0,0,0.15);';
            toast.innerHTML = `
                <div class="d-flex align-items-center">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'warning' ? 'exclamation-triangle' : 'info-circle'} me-2"></i>
                    <span>${message}</span>
                    <button type="button" class="btn-close ms-auto" onclick="this.closest('.alert').remove()"></button>
                </div>
            `;
            
            document.body.appendChild(toast);
            
            setTimeout(() => {
                if (toast.parentElement) {
                    toast.style.opacity = '0';
                    setTimeout(() => toast.remove(), 300);
                }
            }, 3000);
        }
    </script>
{% endblock %}