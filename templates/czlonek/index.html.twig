{% block body %}

    <!-- Professional Members Header -->
    <div class="members-header">
        <div class="d-flex align-items-center mb-3">
            <div class="header-icon me-3">
                <i class="fas fa-users"></i>
            </div>
            <div>
                <h2 class="mb-0">Członkowie</h2>
                <p class="mb-0 opacity-90">Zarządzaj członkami partii i ich statusem</p>
            </div>
        </div>
        
        <!-- Realne Statystyki Członków -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-number">{{ stats.total }}</div>
                <div class="stat-label">Łączna liczba</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">{{ stats.active }}</div>
                <div class="stat-label">Aktywni członkowie</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">{{ stats.paidMemberships }}</div>
                <div class="stat-label">Opłacone składki</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">{{ stats.withEmployment }}</div>
                <div class="stat-label">Z zatrudnieniem</div>
            </div>
        </div>
    </div>

    <!-- Enhanced Filters -->
    <div class="filters-container" id="filtersContainer">
        <div class="filters-header">
            <div class="d-flex align-items-center gap-3">
                <h6 class="mb-0">
                    <i class="fas fa-filter me-2"></i>
                    Filtry wyszukiwania
                </h6>
                <small class="text-muted">Znaleziono: <strong>{{ pagination.totalItemCount }}</strong> rekordów</small>
            </div>
            <button type="button" class="filter-toggle-btn" id="toggleFilters">
                <i class="fas fa-chevron-down"></i>
                <span id="filterToggleText">Ukryj filtry</span>
            </button>
        </div>
        
        <!-- Quick Filters Bar -->
        <div class="quick-filters">
            <div class="d-flex flex-wrap align-items-center gap-2">
                <span class="fw-bold me-2">Szybkie filtry:</span>
                <button class="filter-chip" onclick="applyQuickFilter('status', 'aktywny')">
                    <i class="fas fa-check-circle"></i>
                    Aktywni
                </button>
                <button class="filter-chip" onclick="applyQuickFilter('skladka', 'oplacona')">
                    <i class="fas fa-coins"></i>
                    Opłacona składka
                </button>
                <button class="filter-chip" onclick="applyQuickFilter('zatrudnienie_spolki', 'ma_zatrudnienie')">
                    <i class="fas fa-building"></i>
                    Zatrudnienie w spółkach
                </button>
            </div>
        </div>
        
        <!-- Advanced Filters -->
        <div class="advanced-filters" id="advancedFilters">
            <form method="GET" id="filterForm" class="position-relative">
                <div class="loading-overlay d-none" id="loadingOverlay">
                    <div class="loading-spinner"></div>
                </div>
                
                <!-- Primary Search Row -->
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Szybkie wyszukiwanie</label>
                        <input type="text" name="search" class="form-control form-control-enhanced"
                               placeholder="Imię, nazwisko, email, telefon..."
                               value="{{ app.request.query.get('search') }}">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Status</label>
                        <select name="status" class="form-select form-select-enhanced">
                            <option value="">Wszystkie</option>
                            <option value="aktywny" {{ app.request.query.get('status') == 'aktywny' ? 'selected' : '' }}>Aktywny</option>
                            <option value="nieaktywny" {{ app.request.query.get('status') == 'nieaktywny' ? 'selected' : '' }}>Nieaktywny</option>
                            <option value="zawieszony" {{ app.request.query.get('status') == 'zawieszony' ? 'selected' : '' }}>Zawieszony</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Składka</label>
                        <select name="skladka" class="form-select form-select-enhanced">
                            <option value="">Wszystkie</option>
                            <option value="oplacona" {{ app.request.query.get('skladka') == 'oplacona' ? 'selected' : '' }}>Opłacona</option>
                            <option value="nieoplacona" {{ app.request.query.get('skladka') == 'nieoplacona' ? 'selected' : '' }}>Nieopłacona</option>
                            <option value="przeterminowana" {{ app.request.query.get('skladka') == 'przeterminowana' ? 'selected' : '' }}>Przeterminowana</option>
                        </select>
                    </div>
                </div>
                
                <!-- Detailed Filters -->
                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <label class="form-label">Imię</label>
                        <input type="text" name="imie" class="form-control form-control-enhanced"
                               placeholder="Filtruj po imieniu..."
                               value="{{ app.request.query.get('imie') }}">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Nazwisko</label>
                        <input type="text" name="nazwisko" class="form-control form-control-enhanced"
                               placeholder="Filtruj po nazwisku..."
                               value="{{ app.request.query.get('nazwisko') }}">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Email</label>
                        <input type="text" name="email" class="form-control form-control-enhanced"
                               placeholder="Filtruj po emailu..."
                               value="{{ app.request.query.get('email') }}">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Telefon</label>
                        <input type="text" name="telefon" class="form-control form-control-enhanced"
                               placeholder="Filtruj po telefonie..."
                               value="{{ app.request.query.get('telefon') }}">
                    </div>
                </div>
                
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label class="form-label">Okręg</label>
                        <select name="okreg" class="form-select form-select-enhanced">
                            <option value="">Wszystkie okręgi</option>
                            {% for okreg in okregi %}
                                <option value="{{ okreg.id }}" {{ app.request.query.get('okreg') == okreg.id ~ '' ? 'selected' : '' }}>
                                    {{ okreg.nazwa }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Oddział</label>
                        <select name="oddzial" class="form-select form-select-enhanced">
                            <option value="">Wszystkie oddziały</option>
                            {% for oddzial in oddzialy %}
                                <option value="{{ oddzial.id }}" {{ app.request.query.get('oddzial') == oddzial.id ~ '' ? 'selected' : '' }}>
                                    {{ oddzial.nazwa }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Zatrudnienie w spółkach</label>
                        <select name="zatrudnienie_spolki" class="form-select form-select-enhanced">
                            <option value="">Wszystkie</option>
                            <option value="ma_zatrudnienie" {{ app.request.query.get('zatrudnienie_spolki') == 'ma_zatrudnienie' ? 'selected' : '' }}>Ma zatrudnienie</option>
                            <option value="miejskie" {{ app.request.query.get('zatrudnienie_spolki') == 'miejskie' ? 'selected' : '' }}>Spółki miejskie</option>
                            <option value="skarbu_panstwa" {{ app.request.query.get('zatrudnienie_spolki') == 'skarbu_panstwa' ? 'selected' : '' }}>Spółki Skarbu Państwa</option>
                            <option value="komunalne" {{ app.request.query.get('zatrudnienie_spolki') == 'komunalne' ? 'selected' : '' }}>Spółki komunalne</option>
                            <option value="bez_zatrudnienia" {{ app.request.query.get('zatrudnienie_spolki') == 'bez_zatrudnienia' ? 'selected' : '' }}>Brak zatrudnienia</option>
                        </select>
                    </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="d-flex gap-2 flex-wrap justify-content-between align-items-center pt-3 border-top">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search me-2"></i>Szukaj
                        </button>
                        <button type="button" class="btn btn-outline-secondary" onclick="clearFilters()">
                            <i class="fas fa-times me-2"></i>Wyczyść
                        </button>
                        <button type="button" class="btn btn-outline-info" onclick="saveFilters()">
                            <i class="fas fa-bookmark me-2"></i>Zapisz
                        </button>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-outline-success" onclick="exportData()">
                            <i class="fas fa-download me-2"></i>Eksport
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Members List Container -->
    <div class="members-list-container">
        <!-- List Toolbar -->
        <div class="list-toolbar">
            <div class="d-flex align-items-center gap-3">
                <div class="bulk-actions">
                    <input type="checkbox" class="form-check-input bulk-checkbox" id="selectAll">
                    <label for="selectAll" class="form-check-label me-3">Zaznacz wszystkie</label>
                    <div class="btn-group btn-group-sm d-none" id="bulkActionsButtons">
                        <button class="btn btn-outline-primary" onclick="bulkAction('activate')">
                            <i class="fas fa-check"></i> Aktywuj
                        </button>
                        <button class="btn btn-outline-warning" onclick="bulkAction('deactivate')">
                            <i class="fas fa-pause"></i> Dezaktywuj
                        </button>
                        <button class="btn btn-outline-info" onclick="bulkAction('export')">
                            <i class="fas fa-download"></i> Eksportuj
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="d-flex align-items-center gap-2">
                <div class="dropdown">
                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-cog"></i>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" onclick="exportData('csv')"><i class="fas fa-file-csv me-2"></i>Export CSV</a></li>
                        <li><a class="dropdown-item" href="#" onclick="exportData('excel')"><i class="fas fa-file-excel me-2"></i>Export Excel</a></li>
                        <li><a class="dropdown-item" href="#" onclick="printTable()"><i class="fas fa-print me-2"></i>Drukuj</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#" onclick="resetTable()"><i class="fas fa-refresh me-2"></i>Resetuj widok</a></li>
                    </ul>
                </div>
            </div>
        </div>
        
        {% if pagination.items|length > 0 %}
            <!-- Elegant Members List -->
            <div class="members-cards-list">
                {% for czlonek in pagination.items %}
                    <div class="member-list-card" data-member-id="{{ czlonek.id }}">
                        <!-- Checkbox -->
                        <div class="member-card-select">
                            <input type="checkbox" class="form-check-input row-checkbox" value="{{ czlonek.id }}" onclick="event.stopPropagation()">
                        </div>
                        
                        <!-- Avatar -->
