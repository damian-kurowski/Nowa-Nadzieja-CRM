                                    {% set skladkaText = czlonek.skladkaOplacona ? 'Opłacona' : 'Nieopłacona' %}
                                    <div class="payment-tag {{ skladkaClass }}">
                                        <i class="fas fa-{{ czlonek.skladkaOplacona ? 'check' : 'times' }}"></i>
