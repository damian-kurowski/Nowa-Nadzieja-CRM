{% extends 'base.html.twig' %}

{% block title %}Edycja {{ region.nazwa }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Edycja Regionu: {{ region.nazwa }}</h1>
                <div class="btn-group" role="group">
                    <a href="{{ path('app_region_show', {'id': region.id}) }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Powr贸t
                    </a>
                    <a href="{{ path('app_region_index') }}" class="btn btn-outline-secondary">
                        Lista region贸w
                    </a>
                </div>
            </div>

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label for="nazwa" class="form-label">Nazwa Regionu</label>
                            <input type="text" class="form-control" id="nazwa" name="nazwa" 
                                   value="{{ region.nazwa }}" required>
                        </div>

                        <div class="mb-3">
                            <label for="wojewodztwo" class="form-label">Wojew贸dztwo</label>
                            <select class="form-select" id="wojewodztwo" name="wojewodztwo" required>
                                <option value="">-- Wybierz wojew贸dztwo --</option>
                                {% for wojewodztwo in wojewodztwa %}
                                    <option value="{{ wojewodztwo }}" 
                                            {% if region.wojewodztwo == wojewodztwo %}selected{% endif %}>
                                        {{ wojewodztwo|title }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Zapisz Zmiany
                            </button>
                            <a href="{{ path('app_region_show', {'id': region.id}) }}" class="btn btn-secondary">
                                Anuluj
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}