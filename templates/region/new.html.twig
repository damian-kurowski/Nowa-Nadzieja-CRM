{% extends 'base.html.twig' %}

{% block title %}Nowy Region{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Nowy Region</h1>
                <a href="{{ path('app_region_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Powrót do listy
                </a>
            </div>

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label for="nazwa" class="form-label">Nazwa Regionu</label>
                            <input type="text" class="form-control" id="nazwa" name="nazwa" required>
                        </div>

                        <div class="mb-3">
                            <label for="wojewodztwo" class="form-label">Województwo</label>
                            <select class="form-select" id="wojewodztwo" name="wojewodztwo" required>
                                <option value="">-- Wybierz województwo --</option>
                                {% for wojewodztwo in wojewodztwa %}
                                    <option value="{{ wojewodztwo }}">{{ wojewodztwo|title }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Zapisz Region
                            </button>
                            <a href="{{ path('app_region_index') }}" class="btn btn-secondary">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}