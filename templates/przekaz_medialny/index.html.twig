{% extends 'base.html.twig' %}

{% block title %}Przekazy Medialne{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1><i class="fas fa-bullhorn me-2"></i>Przekazy Medialne</h1>
                <a href="{{ path('przekaz_medialny_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Nowy Przekaz
                </a>
            </div>
        </div>
    </div>

    <!-- Statystyki -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar-icon bg-primary bg-opacity-10 rounded-3 p-3">
                                <i class="fas fa-list fa-2x text-primary"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1 fw-normal">Wszystkie przekazy</h6>
                            <h2 class="mb-0 fw-bold">{{ statystyki.wszystkie }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar-icon bg-success bg-opacity-10 rounded-3 p-3">
                                <i class="fas fa-paper-plane fa-2x text-success"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1 fw-normal">Wysłane</h6>
                            <h2 class="mb-0 fw-bold">{{ statystyki.wysłane }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar-icon bg-warning bg-opacity-10 rounded-3 p-3">
                                <i class="fas fa-file-alt fa-2x text-warning"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1 fw-normal">Szkice</h6>
                            <h2 class="mb-0 fw-bold">{{ statystyki.robocze }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista przekazów -->
    <div class="row">
        <div class="col-md-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 fw-semibold">
                        <i class="fas fa-list-ul me-2 text-primary"></i>
                        Lista Przekazów
                    </h5>
                </div>
                <div class="card-body p-0">
                    {% if przekazy is empty %}
                        <div class="text-center py-5 px-3">
                            <div class="mb-4">
                                <i class="fas fa-bullhorn fa-4x text-muted opacity-50"></i>
                            </div>
                            <h5 class="text-muted mb-2">Brak przekazów medialnych</h5>
                            <p class="text-muted small mb-4">Utwórz pierwszy przekaz aby rozpocząć komunikację z członkami partii</p>
                            <a href="{{ path('przekaz_medialny_new') }}" class="btn btn-primary btn-lg shadow-sm">
                                <i class="fas fa-plus me-2"></i>Utwórz pierwszy przekaz
                            </a>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="border-0 fw-semibold">Tytuł</th>
                                        <th class="border-0 fw-semibold">Autor</th>
                                        <th class="border-0 fw-semibold">Data</th>
                                        <th class="border-0 fw-semibold">Status</th>
                                        <th class="border-0 fw-semibold text-center">Odbiorcy</th>
                                        <th class="border-0 fw-semibold text-center">Odpowiedzi</th>
                                        <th class="border-0 fw-semibold text-end">Akcje</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for przekaz in przekazy %}
                                        <tr>
                                            <td class="py-3">
                                                <a href="{{ path('przekaz_medialny_show', {id: przekaz.id}) }}" class="text-decoration-none text-dark">
                                                    <div class="fw-semibold mb-1">{{ przekaz.tytul }}</div>
                                                    <small class="text-muted d-block" style="max-width: 400px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                                        {{ przekaz.tresc|striptags }}
                                                    </small>
                                                </a>
                                            </td>
                                            <td class="py-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                                        <small class="text-primary fw-bold">{{ przekaz.autor.imie|first }}{{ przekaz.autor.nazwisko|first }}</small>
                                                    </div>
                                                    <small>{{ przekaz.autor.imie }} {{ przekaz.autor.nazwisko }}</small>
                                                </div>
                                            </td>
                                            <td class="py-3">
                                                <small class="text-muted">{{ przekaz.dataUtworzenia|date('d.m.Y') }}</small><br>
                                                <small class="text-muted opacity-75">{{ przekaz.dataUtworzenia|date('H:i') }}</small>
                                            </td>
                                            <td class="py-3">
                                                {% if przekaz.status == 'draft' %}
                                                    <span class="badge rounded-pill bg-secondary bg-opacity-10 text-secondary">
                                                        <i class="fas fa-file-alt me-1"></i>Szkic
                                                    </span>
                                                {% elseif przekaz.status == 'sending' %}
                                                    <span class="badge rounded-pill bg-warning bg-opacity-10 text-warning">
                                                        <i class="fas fa-spinner fa-spin me-1"></i>Wysyłanie
                                                    </span>
                                                {% elseif przekaz.status == 'sent' %}
                                                    <span class="badge rounded-pill bg-success bg-opacity-10 text-success">
                                                        <i class="fas fa-check-circle me-1"></i>Wysłane
                                                    </span>
                                                {% else %}
                                                    <span class="badge rounded-pill bg-danger bg-opacity-10 text-danger">
                                                        <i class="fas fa-exclamation-circle me-1"></i>Błąd
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center py-3">
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <i class="fas fa-users text-primary me-2"></i>
                                                    <span class="fw-semibold">{{ przekaz.liczbaOdbiorcow }}</span>
                                                </div>
                                            </td>
                                            <td class="text-center py-3">
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <i class="fas fa-reply text-success me-2"></i>
                                                    <strong>{{ przekaz.liczbaOdpowiedzi }}</strong>
                                                    {% if przekaz.liczbaOdbiorcow > 0 %}
                                                        <small class="text-muted ms-1">({{ przekaz.procentOdpowiedzi }}%)</small>
                                                    {% endif %}
                                                </div>
                                            </td>
                                            <td class="text-end py-3">
                                                <a href="{{ path('przekaz_medialny_show', {id: przekaz.id}) }}"
                                                   class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                                    <i class="fas fa-eye me-1"></i>Zobacz
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
