{% extends 'base.html.twig' %}

{% block title %}Nowy Przekaz Medialny{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('przekaz_medialny_index') }}">Przekazy Medialne</a></li>
                    <li class="breadcrumb-item active">Nowy Przekaz</li>
                </ol>
            </nav>
            <h1><i class="fas fa-plus-circle me-2"></i>Nowy Przekaz Medialny</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 fw-semibold">
                        <i class="fas fa-edit me-2 text-primary"></i>
                        Formularz Przekazu
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form method="post" action="{{ path('przekaz_medialny_new') }}" enctype="multipart/form-data">
                        <input type="hidden" name="_token" value="{{ csrf_token('przekaz_new') }}">

                        <div class="mb-3">
                            <label for="tytul" class="form-label">Tytu przekazu <span class="text-danger">*</span></label>
                            <input type="text"
                                   class="form-control"
                                   id="tytul"
                                   name="tytul"
                                   maxlength="255"
                                   required
                                   placeholder="Np. Przekaz medialny - 15 pa藕dziernika 2025">
                            <div class="form-text">Maksymalnie 255 znak贸w</div>
                        </div>

                        <div class="mb-3">
                            <label for="media_file" class="form-label">
                                <i class="fas fa-photo-video me-2"></i>
                                Zdjcie lub wideo (opcjonalnie)
                            </label>
                            <input type="file"
                                   class="form-control"
                                   id="media_file"
                                   name="media_file"
                                   accept="image/jpeg,image/png,image/gif,video/mp4,video/mpeg,video/quicktime">
                            <div class="form-text">
                                Dozwolone: JPG, PNG, GIF (max 20MB), MP4, MPEG, MOV (max 50MB)
                            </div>
                            <div id="mediaPreview" class="mt-2" style="display: none;">
                                <img id="imagePreview" src="" class="img-fluid rounded" style="max-height: 200px; display: none;">
                                <video id="videoPreview" controls class="w-100 rounded" style="max-height: 200px; display: none;"></video>
                                <button type="button" class="btn btn-sm btn-danger mt-2" id="removeMedia">
                                    <i class="fas fa-times me-1"></i>Usu plik
                                </button>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="tresc" class="form-label">Tre przekazu <span class="text-danger">*</span></label>
                            <textarea class="form-control"
                                      id="tresc"
                                      name="tresc"
                                      rows="10"
                                      required
                                      placeholder="Wprowad藕 tre przekazu medialnego..."></textarea>
                            <div class="form-text">
                                <span id="charCount">0</span> znak贸w
                                <span id="charWarning" class="text-danger ms-2" style="display: none;"></span>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Wskaz贸wki:</strong>
                            <ul class="mb-0 mt-2">
                                <li>Przekaz zostanie wysany do wszystkich czonk贸w partii z poczonym Telegramem</li>
                                <li>Mo偶esz doda zdjcie lub wideo do przekazu</li>
                                <li>Mo偶esz u偶ywa formatowania HTML: &lt;b&gt;pogrubienie&lt;/b&gt;, &lt;i&gt;kursywa&lt;/i&gt;</li>
                                <li>Po utworzeniu przekazu bdziesz m贸g go wysa lub zachowa jako szkic</li>
                            </ul>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('przekaz_medialny_index') }}" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Anuluj
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Utw贸rz Przekaz
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #0088cc, #229ED9);">
                    <h5 class="mb-0 fw-semibold">
                        <i class="fab fa-telegram me-2"></i>
                        Podgld Telegram
                    </h5>
                </div>
                <div class="card-body">
                    <div class="telegram-preview p-3 rounded-3" style="background: #e5ddd5; min-height: 200px;">
                        <div class="bg-white rounded-3 p-3 shadow-sm">
                            <div id="preview">
                                <p class="text-muted small mb-0">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Podgld pojawi si po wpisaniu treci...
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mt-3">
                <div class="card-header bg-white border-bottom">
                    <h6 class="mb-0 fw-semibold">
                        <i class="fas fa-code me-2 text-info"></i>
                        Formatowanie HTML
                    </h6>
                </div>
                <div class="card-body p-3">
                    <p class="small mb-2">Dostpne tagi HTML:</p>
                    <ul class="small">
                        <li><code>&lt;b&gt;tekst&lt;/b&gt;</code> - <b>pogrubienie</b></li>
                        <li><code>&lt;i&gt;tekst&lt;/i&gt;</code> - <i>kursywa</i></li>
                        <li><code>&lt;u&gt;tekst&lt;/u&gt;</code> - <u>podkrelenie</u></li>
                        <li><code>&lt;code&gt;kod&lt;/code&gt;</code> - <code>kod</code></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const trescInput = document.getElementById('tresc');
    const tytulInput = document.getElementById('tytul');
    const charCount = document.getElementById('charCount');
    const charWarning = document.getElementById('charWarning');
    const preview = document.getElementById('preview');

    const maxCaptionLength = 1024;
    const footer = "Jeli udostpnie ten przekaz, wylij nam link do swojego posta!";
    const prefix = " ";
    const htmlTagsMargin = 10;

    function calculateTotalLength(tytul, tresc) {
        return tytul.length + tresc.length + footer.length + prefix.length + htmlTagsMargin;
    }

    function updatePreview() {
        const tytul = tytulInput.value || 'Tytu przekazu';
        const tresc = trescInput.value || '';

        if (tresc.length === 0) {
            preview.innerHTML = `
                <p class="text-muted small mb-0">
                    <i class="fas fa-info-circle me-1"></i>
                    Podgld pojawi si po wpisaniu treci...
                </p>
            `;
        } else {
            preview.innerHTML = `
                <div class="mb-2">
                    <strong class="d-block mb-2">
                        <i class="fas fa-bullhorn text-primary me-1"></i>
                        ${tytul}
                    </strong>
                </div>
                <div class="mb-2" style="line-height: 1.5;">
                    ${tresc.replace(/\n/g, '<br>')}
                </div>
                <div class="border-top pt-2 mt-2">
                    <small class="text-muted">
                        <i class="fas fa-share-alt me-1"></i>
                        ${footer}
                    </small>
                </div>
            `;
        }

        const totalLength = calculateTotalLength(tytulInput.value || '', tresc);
        charCount.textContent = tresc.length;

        if (totalLength > maxCaptionLength) {
            const overflow = totalLength - maxCaptionLength;
            charCount.classList.add('text-danger');
            charCount.classList.add('fw-bold');
            charWarning.textContent = `(Za dugo o ${overflow} znak贸w! Skr贸 tytu lub tre)`;
            charWarning.style.display = 'inline';
        } else {
            charCount.classList.remove('text-danger');
            charCount.classList.remove('fw-bold');
            charWarning.style.display = 'none';
        }
    }

    trescInput.addEventListener('input', updatePreview);
    tytulInput.addEventListener('input', updatePreview);

    // Media file preview and validation
    const mediaFile = document.getElementById('media_file');
    const mediaPreview = document.getElementById('mediaPreview');
    const imagePreview = document.getElementById('imagePreview');
    const videoPreview = document.getElementById('videoPreview');
    const removeMediaBtn = document.getElementById('removeMedia');

    // Allowed MIME types
    const allowedImageTypes = ['image/jpeg', 'image/png', 'image/gif'];
    const allowedVideoTypes = ['video/mp4', 'video/mpeg', 'video/quicktime'];
    const maxPhotoSize = 20 * 1024 * 1024; // 20MB
    const maxVideoSize = 50 * 1024 * 1024; // 50MB

    mediaFile.addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (!file) return;

        const fileType = file.type;
        const fileSize = file.size;

        // Validate file type
        const isImage = allowedImageTypes.includes(fileType);
        const isVideo = allowedVideoTypes.includes(fileType);

        if (!isImage && !isVideo) {
            alert('Nieprawidowy format pliku. Dozwolone: JPG, PNG, GIF, MP4, MPEG, MOV');
            mediaFile.value = '';
            return;
        }

        // Validate file size
        const maxSize = isImage ? maxPhotoSize : maxVideoSize;
        if (fileSize > maxSize) {
            const maxSizeMB = maxSize / (1024 * 1024);
            alert(`Plik jest za du偶y. Maksymalny rozmiar: ${maxSizeMB}MB`);
            mediaFile.value = '';
            return;
        }

        // Preview file
        const reader = new FileReader();

        reader.onload = function(event) {
            if (isImage) {
                imagePreview.src = event.target.result;
                imagePreview.style.display = 'block';
                videoPreview.style.display = 'none';
            } else if (isVideo) {
                videoPreview.src = event.target.result;
                videoPreview.style.display = 'block';
                imagePreview.style.display = 'none';
            }
            mediaPreview.style.display = 'block';
        };

        reader.readAsDataURL(file);
    });

    removeMediaBtn.addEventListener('click', function() {
        mediaFile.value = '';
        mediaPreview.style.display = 'none';
        imagePreview.src = '';
        videoPreview.src = '';
        imagePreview.style.display = 'none';
        videoPreview.style.display = 'none';
    });
});
</script>
{% endblock %}
