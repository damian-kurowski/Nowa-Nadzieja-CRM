<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>Logowanie - CRM Nowa Nadzieja</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #1e40af;
            --primary-light: #3b82f6;
            --primary-dark: #1d4ed8;
            --success: #10b981;
            --danger: #ef4444;
            --warning: #f59e0b;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-400: #9ca3af;
            --gray-500: #6b7280;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
        }
        
        * {
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            position: relative;
            overflow-x: hidden;
        }
        
        /* Enhanced background with floating particles */
        body::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                radial-gradient(circle at 20% 80%, rgba(255,255,255,0.1) 2px, transparent 2px),
                radial-gradient(circle at 80% 20%, rgba(255,255,255,0.1) 2px, transparent 2px),
                radial-gradient(circle at 40% 40%, rgba(255,255,255,0.08) 1px, transparent 1px);
            background-size: 100px 100px, 80px 80px, 40px 40px;
            animation: float-particles 20s ease-in-out infinite;
            pointer-events: none;
        }
        
        @keyframes float-particles {
            0%, 100% { 
                transform: translateY(0px) rotate(0deg);
                opacity: 0.7;
            }
            33% { 
                transform: translateY(-10px) rotate(0.5deg);
                opacity: 1;
            }
            66% { 
                transform: translateY(-5px) rotate(-0.5deg);
                opacity: 0.8;
            }
        }
        
        /* Subtle geometric background pattern */
        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                linear-gradient(90deg, rgba(255, 255, 255, 0.05) 1px, transparent 1px),
                linear-gradient(rgba(255, 255, 255, 0.05) 1px, transparent 1px);
            background-size: 40px 40px;
            opacity: 0.6;
            z-index: 1;
        }
        
        .login-container {
            position: relative;
            z-index: 10;
            width: 100%;
        }
        
        .login-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 
                0 20px 40px -10px rgba(0, 0, 0, 0.2),
                0 10px 20px -5px rgba(0, 0, 0, 0.1),
                inset 0 1px 0 rgba(255, 255, 255, 0.3);
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            max-width: 440px;
            margin: 0 auto;
            position: relative;
        }
        
        .login-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
            border-radius: 20px 20px 0 0;
        }
        
        .login-card:hover {
            transform: translateY(-5px);
            box-shadow: 
                0 30px 60px -10px rgba(0, 0, 0, 0.25),
                0 15px 30px -5px rgba(0, 0, 0, 0.15),
                inset 0 1px 0 rgba(255, 255, 255, 0.4),
                0 0 0 1px rgba(255, 255, 255, 0.1);
            background: rgba(255, 255, 255, 0.98);
        }
        
        .card-header {
            background: transparent;
            color: var(--gray-800);
            border: none;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 2.5rem 2.5rem 1.5rem;
            text-align: center;
            position: relative;
        }
        
        .logo-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            display: block;
            filter: drop-shadow(0 2px 4px rgba(102, 126, 234, 0.3));
            animation: gentle-pulse 3s ease-in-out infinite;
        }
        
        @keyframes gentle-pulse {
            0%, 100% { 
                transform: scale(1);
                filter: drop-shadow(0 2px 4px rgba(102, 126, 234, 0.3));
            }
            50% { 
                transform: scale(1.05);
                filter: drop-shadow(0 4px 8px rgba(102, 126, 234, 0.4));
            }
        }
        
        .card-title {
            font-weight: 700;
            font-size: 2rem;
            margin: 0;
            color: var(--gray-900);
            letter-spacing: -0.025em;
        }
        
        .card-subtitle {
            font-weight: 500;
            font-size: 1rem;
            margin-top: 0.5rem;
            color: var(--gray-600);
        }
        
        .card-body {
            padding: 2rem 2.5rem 2.5rem;
        }
        
        .form-floating {
            position: relative;
            margin-bottom: 2rem;
        }
        
        .input-group-enhanced {
            position: relative;
            display: flex;
            align-items: center;
        }
        
        .form-control {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1.5px solid rgba(255, 255, 255, 0.3);
            border-radius: 12px;
            padding: 1rem 3.5rem 1rem 3rem;
            font-size: 1rem;
            font-weight: 400;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            color: var(--gray-900);
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
            height: 3.5rem;
            width: 100%;
            flex: 1;
        }
        
        .form-control:focus {
            border-color: rgba(102, 126, 234, 0.8);
            box-shadow: 
                0 0 0 4px rgba(102, 126, 234, 0.15),
                inset 0 1px 2px rgba(0, 0, 0, 0.05);
            background: rgba(255, 255, 255, 0.95);
            outline: none;
            transform: translateY(-1px);
        }
        
        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(102, 126, 234, 0.6);
            transition: all 0.3s ease;
            z-index: 10;
            font-size: 1.1rem;
            width: 20px;
            text-align: center;
            pointer-events: none;
        }
        
        .input-group-enhanced:focus-within .input-icon {
            color: rgba(102, 126, 234, 0.9);
            transform: translateY(-50%) scale(1.1);
        }
        
        /* Email field specific styling */
        #inputEmail {
            padding-left: 3rem;
            padding-right: 1rem;
        }
        
        /* Password field specific styling */
        #inputPassword {
            padding-left: 3rem;
            padding-right: 3.5rem;
        }
        
        .btn-login {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 14px;
            padding: 1rem 2rem;
            font-weight: 600;
            font-size: 1rem;
            color: white;
            position: relative;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 
                0 8px 20px rgba(102, 126, 234, 0.4),
                inset 0 1px 0 rgba(255, 255, 255, 0.2);
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
        }
        
        .btn-login:hover {
            transform: translateY(-3px) scale(1.02);
            box-shadow: 
                0 12px 30px rgba(102, 126, 234, 0.5),
                inset 0 1px 0 rgba(255, 255, 255, 0.3);
            background: linear-gradient(135deg, #5a6fd8 0%, #6b5b95 100%);
        }
        
        .btn-login:active {
            transform: translateY(0);
        }
        
        .btn-login::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s ease;
        }
        
        .btn-login:hover::before {
            left: 100%;
        }
        
        .alert {
            border-radius: 12px;
            border: none;
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            font-weight: 500;
            animation: slideDown 0.3s ease;
        }
        
        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .alert-danger {
            background: rgba(239, 68, 68, 0.1);
            color: var(--danger);
            border-left: 4px solid var(--danger);
        }

        .alert-warning {
            background: rgba(245, 158, 11, 0.1);
            color: var(--warning);
            border-left: 4px solid var(--warning);
        }
        
        .password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(102, 126, 234, 0.1);
            border: none;
            color: rgba(102, 126, 234, 0.7);
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 10;
            font-size: 1rem;
            width: 2rem;
            height: 2rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
            outline: none;
        }
        
        .password-toggle:hover {
            color: rgba(102, 126, 234, 1);
            background: rgba(102, 126, 234, 0.15);
            transform: translateY(-50%) scale(1.05);
        }
        
        .password-toggle:focus {
            outline: 2px solid rgba(102, 126, 234, 0.3);
            outline-offset: 2px;
        }
        
        .footer-text {
            text-align: center;
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--gray-200);
            color: var(--gray-500);
            font-size: 0.875rem;
        }
        
        /* Responsive design */
        @media (max-width: 768px) {
            body {
                padding: 1rem;
            }
            
            .login-card {
                margin: 1rem;
                max-width: none;
            }
            
            .card-header {
                padding: 1.5rem 1.5rem 1rem;
            }
            
            .card-body {
                padding: 2rem 1.5rem 1.5rem;
            }
            
            .logo-icon {
                font-size: 2rem;
            }
            
            .card-title {
                font-size: 1.5rem;
            }
        }
        
        .form-check-input {
            width: 1.1em;
            height: 1.1em;
            margin-top: 0.15em;
            border: 1.5px solid var(--gray-300);
            border-radius: 4px;
        }
        
        .form-check-input:checked {
            background-color: var(--primary);
            border-color: var(--primary);
        }
        
        .form-check-input:focus {
            box-shadow: 0 0 0 2px rgba(30, 64, 175, 0.2);
        }
        
        .form-check-label {
            color: var(--gray-600);
            font-size: 0.9rem;
        }
        
        .text-sm {
            font-size: 0.875rem;
        }

        /* Validation states */
        .input-group-enhanced.is-valid .form-control {
            border-color: var(--success);
            box-shadow: 0 0 0 2px rgba(16, 185, 129, 0.15);
        }

        .input-group-enhanced.is-valid .input-icon {
            color: var(--success);
        }

        .input-group-enhanced.is-invalid .form-control {
            border-color: var(--danger);
            box-shadow: 0 0 0 2px rgba(239, 68, 68, 0.15);
        }

        .input-group-enhanced.is-invalid .input-icon {
            color: var(--danger);
        }

        /* Loading button state */
        .btn-login:disabled {
            cursor: not-allowed;
            pointer-events: none;
        }

        /* Improved animations */
        .form-control,
        .input-icon,
        .password-toggle {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        /* Accessibility improvements */
        .form-control:focus-visible {
            outline: 2px solid rgba(102, 126, 234, 0.5);
            outline-offset: 2px;
        }

        .btn-login:focus-visible {
            outline: 2px solid rgba(102, 126, 234, 0.5);
            outline-offset: 2px;
        }

        /* High contrast mode support */
        @media (prefers-contrast: high) {
            .form-control {
                border-width: 2px;
            }
            
            .login-card {
                border: 2px solid var(--gray-300);
            }
        }

        /* Reduced motion support */
        @media (prefers-reduced-motion: reduce) {
            *,
            *::before,
            *::after {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
        }

        /* Honeypot field - invisible to users but visible to bots */
        .honeypot-field {
            position: absolute !important;
            left: -9999px !important;
            width: 1px !important;
            height: 1px !important;
            padding: 0 !important;
            margin: 0 !important;
            overflow: hidden !important;
            clip: rect(0, 0, 0, 0) !important;
            border: 0 !important;
            opacity: 0 !important;
        }
    </style>
</head>

<body>
    <div class="login-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="login-card">
                        <div class="card-header text-center">
                            <div class="logo-icon">
                                <i class="fas fa-crown"></i>
                            </div>
                            <h1 class="card-title">Nowa Nadzieja</h1>
                            <p class="card-subtitle">System Zarządzania Członkami</p>
                        </div>
                        
                        <div class="card-body">
                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger" role="alert">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    {{ message }}
                                </div>
                            {% endfor %}

                            {% if blocked is defined and blocked %}
                                <div class="alert alert-warning" role="alert">
                                    <i class="fas fa-shield-alt me-2"></i>
                                    Dostęp tymczasowo zablokowany ze względów bezpieczeństwa
                                </div>
                            {% endif %}

                            {% if error %}
                                <div class="alert alert-danger" role="alert">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}

                            <form method="post" action="{{ path('login') }}">
                                <div class="form-floating">
                                    <div class="input-group-enhanced">
                                        <i class="fas fa-envelope input-icon"></i>
                                        <input type="email" 
                                               value="{{ last_username }}" 
                                               name="email" 
                                               id="inputEmail" 
                                               class="form-control" 
                                               autocomplete="email" 
                                               placeholder="Adres e-mail"
                                               required 
                                               autofocus>
                                    </div>
                                </div>
                                
                                <div class="form-floating">
                                    <div class="input-group-enhanced">
                                        <i class="fas fa-lock input-icon"></i>
                                        <input type="password" 
                                               name="password" 
                                               id="inputPassword" 
                                               class="form-control" 
                                               autocomplete="current-password"
                                               placeholder="Hasło"
                                               required>
                                        <button type="button" class="password-toggle" id="passwordToggle" title="Pokaż/ukryj hasło">
                                            <i class="fas fa-eye" id="passwordToggleIcon"></i>
                                        </button>
                                    </div>
                                </div>

                                <!-- Honeypot field for bot detection -->
                                <input type="text" 
                                       name="website" 
                                       class="honeypot-field" 
                                       tabindex="-1" 
                                       autocomplete="off"
                                       aria-hidden="true"
                                       placeholder="Leave this field empty">

                                <!-- Additional honeypot with different name -->
                                <input type="email" 
                                       name="email_confirm" 
                                       class="honeypot-field" 
                                       tabindex="-1" 
                                       autocomplete="off"
                                       aria-hidden="true"
                                       placeholder="Do not fill this">

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <div class="d-grid mb-3">
                                    <button class="btn btn-login w-100" type="submit" id="loginBtn">
                                        <span class="btn-text">
                                            <i class="fas fa-sign-in-alt me-2"></i>
                                            Zaloguj się
                                        </span>
                                        <span class="btn-loading d-none">
                                            <i class="fas fa-spinner fa-spin me-2"></i>
                                            Logowanie...
                                        </span>
                                    </button>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="rememberMe" name="_remember_me" value="on">
                                        <label class="form-check-label text-sm" for="rememberMe">
                                            Zapamiętaj mnie na tym urządzeniu
                                        </label>
                                    </div>
                                </div>
                            </form>
                            
                            <div class="footer-text">
                                <small class="text-muted">
                                    © {{ 'now'|date('Y') }} Partia Nowa Nadzieja
                                </small>
                                <div class="mt-2">
                                    <small class="text-success">
                                        <i class="fas fa-shield-alt me-1"></i>
                                        Bezpieczne połączenie
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const passwordToggle = document.getElementById('passwordToggle');
    const passwordInput = document.getElementById('inputPassword');
    const passwordToggleIcon = document.getElementById('passwordToggleIcon');
    const loginForm = document.querySelector('form');
    const loginBtn = document.getElementById('loginBtn');
    const btnText = loginBtn.querySelector('.btn-text');
    const btnLoading = loginBtn.querySelector('.btn-loading');

    // Password visibility toggle
    if (passwordToggle && passwordInput) {
        passwordToggle.addEventListener('click', function() {
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordToggleIcon.classList.remove('fa-eye');
                passwordToggleIcon.classList.add('fa-eye-slash');
                passwordToggle.title = 'Ukryj hasło';
            } else {
                passwordInput.type = 'password';
                passwordToggleIcon.classList.remove('fa-eye-slash');
                passwordToggleIcon.classList.add('fa-eye');
                passwordToggle.title = 'Pokaż hasło';
            }
        });
    }

    // Form submission with loading state
    if (loginForm && loginBtn) {
        loginForm.addEventListener('submit', function(e) {
            // Show loading state
            btnText.classList.add('d-none');
            btnLoading.classList.remove('d-none');
            loginBtn.disabled = true;
            
            // Add visual feedback
            loginBtn.style.opacity = '0.8';
            loginBtn.style.transform = 'none';
            
            // If form validation fails, restore button state
            setTimeout(function() {
                if (!loginForm.checkValidity()) {
                    btnText.classList.remove('d-none');
                    btnLoading.classList.add('d-none');
                    loginBtn.disabled = false;
                    loginBtn.style.opacity = '';
                    loginBtn.style.transform = '';
                }
            }, 100);
        });
    }

    // Enhanced form validation feedback
    const emailInput = document.getElementById('inputEmail');
    const passwordInputField = document.getElementById('inputPassword');
    
    function validateField(field) {
        const isValid = field.checkValidity();
        const inputGroup = field.closest('.input-group-enhanced');
        
        if (isValid) {
            inputGroup.classList.remove('is-invalid');
            inputGroup.classList.add('is-valid');
        } else {
            inputGroup.classList.remove('is-valid');
            inputGroup.classList.add('is-invalid');
        }
        
        return isValid;
    }

    // Real-time validation
    [emailInput, passwordInputField].forEach(field => {
        if (field) {
            field.addEventListener('blur', () => validateField(field));
            field.addEventListener('input', () => {
                if (field.value.length > 0) {
                    validateField(field);
                }
            });
        }
    });

    // Auto-focus on first empty field
    if (emailInput && !emailInput.value) {
        emailInput.focus();
    } else if (passwordInputField && !passwordInputField.value) {
        passwordInputField.focus();
    }
});
</script>
</body>
</html>