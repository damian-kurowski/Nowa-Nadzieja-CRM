{% extends 'base.html.twig' %}

{% block title %}Składki członkowskie{% endblock %}

{% block body %}
<!-- Enhanced Header Section -->
<div class="payments-header">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <div class="header-content">
                    <h1 class="page-title">
                        <div class="title-icon">
                            <i class="fas fa-coins"></i>
                        </div>
                        Składki członkowskie
                    </h1>
                    <p class="page-subtitle">Przegląd Twoich składek i historii płatności</p>
                </div>
            </div>
            <div class="col-lg-4 text-lg-end">
                <div class="header-actions">
                    <a href="{{ path('app_payment_history_export') }}" 
                       class="btn btn-enhanced btn-primary-gradient">
                        <i class="fas fa-download me-2"></i>Pobierz historię
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <!-- Enhanced Status Cards -->
    <div class="row mb-4">
        <div class="col-lg-{% if is_granted('ROLE_FUNKCYJNY') %}8{% else %}12{% endif %}">
            <div class="payment-status-card">
                <div class="status-header">
                    <div class="status-icon {{ paymentStatus.color }}">
                        {% if paymentStatus.color == 'success' %}
                            <i class="fas fa-check-circle"></i>
                        {% elseif paymentStatus.color == 'warning' %}
                            <i class="fas fa-exclamation-triangle"></i>
                        {% else %}
                            <i class="fas fa-times-circle"></i>
                        {% endif %}
                    </div>
                    <div class="status-content">
                        <h2 class="status-title">Status składek</h2>
                        <div class="status-message alert-{{ paymentStatus.color }}">
                            {{ paymentStatus.message|raw }}
                        </div>
                    </div>
                </div>
                
                <div class="status-metrics">
                    <div class="row g-0">
                        <div class="col-6">
                            <div class="metric-card total-paid">
                                <div class="metric-icon">
                                    <i class="fas fa-piggy-bank"></i>
                                </div>
                                <div class="metric-content">
                                    <div class="metric-label">Łącznie wpłacono</div>
                                    <div class="metric-value">{{ paymentStatus.totalPaid }} PLN</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="metric-card monthly-fee">
                                <div class="metric-icon">
                                    <i class="fas fa-calendar-alt"></i>
                                </div>
                                <div class="metric-content">
                                    <div class="metric-label">Miesięczna składka</div>
                                    <div class="metric-value">{{ paymentStatus.monthlyFee }} PLN</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                {% if paymentStatus.paidUntil %}
                <div class="status-footer">
                    <div class="paid-until-info">
                        <i class="fas fa-calendar-check me-2"></i>
                        <span>Składki opłacone do: <strong>{{ paymentStatus.paidUntil|date('m.Y') }}</strong></span>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
        
        <!-- Quick Actions - Only for functional roles -->
        {% if is_granted('ROLE_FUNKCYJNY') %}
        <div class="col-lg-4">
            <div class="quick-actions-card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>Szybkie akcje
                    </h5>
                </div>
                <div class="card-body">
                    <div class="action-list">
                        <div class="action-item">
                            <div class="action-icon export">
                                <i class="fas fa-file-csv"></i>
                            </div>
                            <div class="action-content">
                                <h6 class="action-title">Eksport historii</h6>
                                <p class="action-desc">Pobierz pełną historię wpłat</p>
                                <a href="{{ path('app_payment_history_export') }}" 
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-download me-1"></i>CSV
                                </a>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </div>

    <!-- Enhanced Payment History -->
    <div class="row">
        <div class="col-12">
            <div class="payment-history-card">
                <div class="history-header">
                    <h3 class="mb-0">
                        <i class="fas fa-history me-2"></i>Historia wpłat
                    </h3>
                    <div class="history-filters">
                        <button class="btn btn-sm btn-outline-secondary" onclick="toggleHistoryFilters()">
                            <i class="fas fa-filter me-1"></i>Filtry
                        </button>
                    </div>
                </div>
                
                <div class="history-filters-panel" id="historyFilters" style="display: none;">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <input type="date" class="form-control form-control-sm" placeholder="Data od">
                        </div>
                        <div class="col-md-3">
                            <input type="date" class="form-control form-control-sm" placeholder="Data do">
                        </div>
                        <div class="col-md-3">
                            <select class="form-select form-select-sm">
                                <option value="">Wszystkie statusy</option>
                                <option value="potwierdzona">Potwierdzona</option>
                                <option value="oczekujaca">Oczekująca</option>
                                <option value="anulowana">Anulowana</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-primary btn-sm">
                                <i class="fas fa-search me-1"></i>Filtruj
                            </button>
                        </div>
                    </div>
                </div>
                
                <div class="history-body">
                    {% if paymentHistory|length > 0 %}
                    <div class="payments-timeline">
                        {% for payment in paymentHistory %}
                        <div class="payment-timeline-item">
                            <div class="timeline-marker {{ payment.status }}">
                                {% if payment.status == 'oplacona' %}
                                    <i class="fas fa-check"></i>
                                {% elseif payment.status == 'oczekujaca' %}
                                    <i class="fas fa-clock"></i>
                                {% else %}
                                    <i class="fas fa-times"></i>
                                {% endif %}
                            </div>
                            <div class="timeline-content">
                                <div class="payment-card">
                                    <div class="payment-header">
                                        <div class="payment-amount">
                                            <span class="amount">{{ payment.kwota }} PLN</span>
                                        </div>
                                        <div class="payment-status">
                                            <span class="status-badge {{ payment.status }}">
                                                {% if payment.status == 'oplacona' %}
                                                    <i class="fas fa-check-circle me-1"></i>Opłacona
                                                {% elseif payment.status == 'oczekujaca' %}
                                                    <i class="fas fa-clock me-1"></i>Oczekująca
                                                {% elseif payment.status == 'zwolniona' %}
                                                    <i class="fas fa-gift me-1"></i>Zwolniona
                                                {% else %}
                                                    <i class="fas fa-times-circle me-1"></i>Anulowana
                                                {% endif %}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="payment-details">
                                        <div class="detail-row">
                                            <div class="detail-label">
                                                <i class="fas fa-calendar me-2"></i>Data płatności
                                            </div>
                                            <div class="detail-value">
                                                {% if payment.dataPlatnosci %}
                                                    {{ payment.dataPlatnosci|date('d.m.Y') }}
                                                {% else %}
                                                    <span class="text-muted">Brak danych</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="detail-row">
                                            <div class="detail-label">
                                                <i class="fas fa-calendar-alt me-2"></i>Okres
                                            </div>
                                            <div class="detail-value">
                                                {% if payment.miesiac < 10 %}0{% endif %}{{ payment.miesiac }}/{{ payment.rok }}
                                            </div>
                                        </div>
                                        <div class="detail-row">
                                            <div class="detail-label">
                                                <i class="fas fa-clock me-2"></i>Data rejestracji
                                            </div>
                                            <div class="detail-value">
                                                {{ payment.dataRejestracji|date('d.m.Y H:i') }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    {% else %}
                    <div class="empty-state">
                        <div class="empty-icon">
                            <i class="fas fa-receipt"></i>
                        </div>
                        <h4>Brak historii wpłat</h4>
                        <p class="text-muted">Nie znaleziono żadnych wpłat w systemie.</p>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function toggleHistoryFilters() {
    const filters = document.getElementById('historyFilters');
    filters.style.display = filters.style.display === 'none' ? 'block' : 'none';
}
</script>

